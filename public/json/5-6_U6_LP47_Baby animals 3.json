    "content": [
        {
            "lang": "en",
            "unit": "UNIT 6: ANIMALS AND PLANTS WOLRD",
            "lesson_name": "LESSON 47: BABY ANIMALS 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: dog, puppy, sheep, lamb, chicken, chick."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> know about the baby animals."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, wave hands, run on the spot, jump up, spread 2 arms, wink."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 5-6_U6_LP47_Baby animals 3" }]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. <i>“Good morning/afternoon”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>, encourage students to reply back with <i>“I am ___ (good)”</i>. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“All kinds of animals” Song<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about animals”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“All kinds of animals”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the vocabulary <b>(pig, horse, iguana, parrot, bumblebee)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Pig: </b> wave hands."
                                            },
                                            {
                                                "text": "<b>Horse:</b> run on the spot."
                                            },
                                            {
                                                "text": "<b>Iguana: </b> jump up."
                                            },
                                            {
                                                "text": "<b>Parrot: </b> spread 2 arms."
                                            },
                                            {
                                                "text": "<b>Bumblebee: </b> wink."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Bada’s animal handbook” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(dog, puppy, sheep, lamb, chicken, chick)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the book <b>“Bada’s animal handbook”</b> in slide 8. "
                                    },
                                    {
                                        "text": "Teacher points to little animals and asks students what they are."
                                    },
                                    {
                                        "text": "Teacher recalls about the baby animals <b>“Some baby animals have their own special names. Many animals have multiple babies at a time.</b> ",
                                        "list": [
                                            {
                                                "text": "At page 8: Point to the picture and ask",
                                                "list": [
                                                    {
                                                        "text": "<i> What animal is it? &#x02192; It is a dog / a puppy.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Is a puppy still a dog? &#x02192; Yes, it is.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Is it a baby dog? &#x02192; Yes, it is.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keyword: <b>dog, puppy.</b>"
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with other animals."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Course Presentation - Baby animals 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the animals or keywords to listen and repeat it."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Card Slider - Baby animals 2</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords.  "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Drag & Drop - Baby animals 3</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, choose the baby animals on the right and match with the picture on the left."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image pairing - Baby animals 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, drag the images from the left to match them with corresponding images on the right."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Chicken and Chick 3</strong>",
                                "list": [
                                    {
                                        "text": "Invite student to come to the board, look at the keywords, choose and match the pictures with the key words."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Memory game - Baby animal 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of the pictures."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“All kinds of animals”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 6: THẾ GIỚI ĐỘNG THỰC VẬT",
            "lesson_name": "BÀI 47: CON VẬT CON 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng: con chó, con chó con, con cừu, con cừu con, con gà, con gà con."
                    },
                    { "text": "Phát triển kĩ năng nghe và nói." },
                    {
                        "text": "Phát triển các kĩ năng khác: ",
                        "list": [
                            {
                                "text": "<strong>Phát triển nhận thức: </strong> biết về con vật con."
                            },
                            {
                                "text": "<strong>Kĩ năng vận đông thô:  </strong> vận động theo bài hát, vẫy tay, chạy tại chỗ, nhảy lên, dang 2 tay, chớp mắt."
                            },
                            {
                                "text": "<strong>Kĩ năng vận động tinh:</strong> trò chơi tương tác"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    { "text": "KidsLoop CMS: 5-6_U6_LP47_ Baby animals 3" }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh <i>“Chào buổi sáng/chiều”</i>, vẫy tay với học sinh và khuyến khích học sinh vẫy tay lại với giáo viên cũng như lặp lại lời chào."
                                    },
                                    {
                                        "text": "Trả lời với <i>“Các con có khỏe không?”</i>, khuyến khích học sinh trả lời lại với <i>“Con … (khỏe)”</i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“All kinds of animals” song<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Giáo viên nói: <i>“Hôm nay chúng ta sẽ nghe một bài hát về động vật”</i>."
                                    },
                                    {
                                        "text": "Mở bài hát <b>“All kinds of animals”</b> và nói học sinh lắng nghe bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát lần thứ 2, dừng ở các từ vựng <b>(con heo, con ngựa, con cự đà, con vẹt, con ong)</b> và cho học sinh đứng lên và luyện tập các động tác bên dưới:",
                                        "list": [
                                            { "text": "<b>Pig: </b> vẫy tay." },
                                            {
                                                "text": "<b>Horse:  </b> chạy tại chỗ."
                                            },
                                            {
                                                "text": "<b>Iguana:  </b> nhảy lên."
                                            },
                                            {
                                                "text": "<b>Parrot:</b> dang 2 tay."
                                            },
                                            {
                                                "text": "<b>Bumblebee:</b> chớp mắt."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa và để học sinh làm hành động theo bài hát. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“Bada’s animal handbook” Storybook<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Giới thiệu chủ đề và từ vựng của bài học <b>(Con chó, con chó con, con cừu, con cừu con, con gà, con gà con)</b>. "
                                    },
                                    {
                                        "text": "Giáo viên mở sách <b>“Bada’s animal handbook”</b> ở trang 8. "
                                    },
                                    {
                                        "text": "Giáo viên chỉ vào các con vật nhỏ và hỏi học sinh nó là gì."
                                    },
                                    {
                                        "text": "Giáo viên nhắc lại về con vật con <b>“Một số con vật con có tên đặt trưng của riêng nó. Nhiều con vật sinh nhiều con cùng 1 lúc.”</b>",
                                        "list": [
                                            {
                                                "text": "Ở trang 8: Chỉ vào bức tranh và hỏi.",
                                                "list": [
                                                    {
                                                        "text": "<i>Con này là con vật gì? &#x02192; Nó là con chó/ con chó con.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Có phải con chó con vẫn là con chó đúng không? &#x02192; Đúng, chó con vẫn là con chó.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Nó là chó con đúng không? &#x02192; Đúng, nó là cho con.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Để học sinh lặp lại từ vựng vài lần: <b>con chó, con chó con.</b>"
                                            },
                                            {
                                                "text": "Nói học sinh lặp lại từ vựng vài lần đồng thanh và cá nhân và sửa phát âm của học sinh."
                                            },
                                            {
                                                "text": "Làm tương tự với các con vật khác."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            { "title": "Củng cố từ vựng" },
                            {
                                "text": "<strong>Course Presentation – Baby animals 2</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và bấm vào con vật để lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Card Slider - Baby animals 2 </strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào bức tranh, lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<strong>Drag & Drop - Baby animals 3</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, chọn con vật con từ bên phải và ghép với bức tranh bên trái."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image pairing - Baby animals 2</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, kéo hình ảnh từ bên trái và ghép với hình tương ứng ở bên phải."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Chicken and Chick 3</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào từ vựng, chọn và ghép tranh với từ vựng."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Memory game - Baby animal 2</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và lật 2 tấm thẻ để tìm cặp hình ảnh."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Mở lại bài hát <b>“All kinds of animals”</b>."
                                    },
                                    {
                                        "text": "Yêu cầu học sinh dọn dẹp lớp học."
                                    },
                                    { "text": "Tạm biệt học sinh." },
                                    {
                                        "text": "Yêu cầu học sinh nói cảm ơn, tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}

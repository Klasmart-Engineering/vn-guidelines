            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "learn vocabulary of symptom of sick: sick, cold, sneeze, tissue, cough."
                    },
                    {
                        "text": "develop speaking and listening skills."
                    },
                    {
                        "text": "develop the other skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development:</strong> physical Development - Nutrition and health."
                            },
                            {
                                "text": "<strong>Physical Development: </strong> movement following the song such as fold the arms, sit down, touch the head, hop to the left, jump up and down."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",

            "unit": "Unit 1: My Kindergarten",
            "lesson_name": "LESSON 3: MY CLASS WITH COLOR 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "learn and identify some colors: red, blue, yellow, green, purple, orange, pink, brown"
                    },
                    {
                        "text": "Develop speaking and listening skills"
                    },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development:</strong> identify colors: red, blue, yellow, green, purple, orange, pink, brown."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song, wiggle and jump with characters."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 4-5_U1_LP3_My class with colors 1"
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Hello” </i>. Wave at students and encourage them to wave back to you as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with the sentence <i>“Nice to meet you ___”</i> and ask students to repeat this sentence."
                                    },
                                    {
                                        "text": "Review names of Badanamu characters if necessary."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Let’s talk about colors”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song."
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about colors today”</i>"
                                    },
                                    {
                                        "text": "Play the song <strong>“Let’s talk about color”</strong>, pause at the colors <b>(red, green, blue, purple, orange, yellow, brown, pink)</b> and ask students to jump when they hear the colors and wiggle with the characters."
                                    },
                                    {
                                        "text": "Play a song again and ask student to make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“My colors” storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic of the story and the keywords <strong>(red, green, blue, purple, orange, yellow, brown, pink).</strong>"
                                    },
                                    {
                                        "text": "Open each page of the story book, ask students to listen to the storybook."
                                    },
                                    {
                                        "text": "Teacher points to colors, images and asks students:",
                                        "list": [
                                            {
                                                "text": "<i>What color is it? &#x02192; It is (red / blue/ ...)</i>"
                                            },
                                            {
                                                "text": "<i>What is it? &#x02192; It is (a rocket / hat / ...)</i>"
                                            },
                                            {
                                                "text": "<i>What color is (Mini / apple/...)? &#x02192; (Mimi is red / ...)</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher instructs students to say whole sentences.",
                                        "list": [
                                            {
                                                "text": "<i>It is red Mimi.</i>"
                                            },
                                            {
                                                "text": "<i>It is a blue wheel.</i>"
                                            },
                                            {
                                                "text": "<i>It is a yellow duck.</i>"
                                            },
                                            {
                                                "text": "<i>It is a purple flower.</i>"
                                            },
                                            {
                                                "text": "<i>It is an orange cat.</i>"
                                            },
                                            {
                                                "text": "<i>It is a green tree.</i>"
                                            },
                                            {
                                                "text": "<i>It is a brown desk.</i>"
                                            },
                                            {
                                                "text": "<i>They are pink shoes.</i>"
                                            },
                                            {
                                                "text": "<i>etc.</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Ask students to repeat the sentences several times."
                                    },
                                    {
                                        "text": "Play a game to review the keywords.",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book (page 1-8)"
                                            },
                                            {
                                                "text": "Teacher calls out the color of an image and invites students to point to the correct image (a red rocket, a blue wheel, etc.)"
                                            },
                                            {
                                                "text": "Have students say color of an image"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<strong>Keyword - Colors (8)</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and say repeat the vocabulary. "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation"
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image Slider - Color (8)</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcard, asks students to look at the pictures, listen and repeat the keywords.  "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<strong>Memory game - colors (4-1)</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pair of the pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Memory game - colors (4-2)</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pair of the pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Learn – RED</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and color the words “red”."
                                    },
                                    {
                                        "text": "Play the audio button to listen the sound."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Trace & color - colors (4)</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, trace the colors to the images and color the images."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Maze – Pink</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, folow the pink objects to help the Ecco get to Mipi."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again <strong>“Let’s talk about colors”</strong>"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom."
                                    },
                                    {
                                        "text": "Say goodbye to students."
                                    },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

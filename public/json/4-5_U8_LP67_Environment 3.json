            "unit": "UNIT  8: WEATHER, SEASONS & ENVIRONMENT",
            "lesson_name": "LESSON 67: ENVIRONMENT 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: water, dunes, sand, pyramids."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> know about the life in the desert."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, raise 2 hands up, clap the hands, sit down, stand up, turn around, shake the head."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 4-5_U8_LP67_Environment 3" }]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning / afternoon”</i>. Wave at students and encourage them to wave back to you as they repeat the greeting. "
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>. Encourage students to reply back with <i>“I am ___ (good)”</i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Water song ” Video song<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song <b>“Water song”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the vocabulary <b>(sky, sea, ground, stream, cloud, tree)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Sky: </b> raise 2 hands up."
                                            },
                                            {
                                                "text": "<b>Sea:</b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Ground: </b> sit down."
                                            },
                                            {
                                                "text": "<b>Stream: </b> stand up."
                                            },
                                            {
                                                "text": "<b>Cloud: </b> turn around."
                                            },
                                            {
                                                "text": "<b>Tree: </b> shake the head."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“A day in the desert ” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the keywords <b>(water, dunes, sand, pyramids)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the storybook <b>“A day in the desert”</b>, asks students to listen to the story. The teacher pauses at each page from page 5 to page 10, reads the story again and teaches the keywords <b>(water, dunes, sand, pyramids)</b>."
                                    },
                                    {
                                        "text": "Example: ",
                                        "list": [
                                            {
                                                "text": "At page 5: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What are they? &#x02192; They are the cactuses.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Can the cactuses live in the desert? &#x02192; Yes, they can.</i>"
                                                    },
                                                    {
                                                        "text": "<i>What does the stem of a cactus hold? &#x02192; The stem holds a lot of water.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keyword: <b>water</b>"
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with the next pages."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Ask students to repeat each sentence of the story."
                                    },
                                    {
                                        "text": "Teacher plays the story book again, asks students to listen and jump up when they hear the keywords."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Environment 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image slider - Water, Dunes, Sand, Pyramids</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords.  "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Environment 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of the pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching stickers - Water, Dunes, Sand, Pyramids</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and match the keywords with the correct images."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the letters - Water, Dunes, Sand, Pyramids</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the keywords and choose the correct letters."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Find & connect - Water, Dunes, Sand</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, find and connect words from the grid."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“Water song”</b> song as have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students as they leave. Encourage them to wave back to you as they also say, <i>“Goodbye”</i>."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

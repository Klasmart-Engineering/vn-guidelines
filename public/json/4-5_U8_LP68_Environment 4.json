        {
            "lang": "vi",
            "unit": "CHƯƠNG 8: THỜI TIẾT, MÙA & MÔI TRƯỜNG",
            "lesson_name": "BÀI 68: MÔI TRƯỜNG 4",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }

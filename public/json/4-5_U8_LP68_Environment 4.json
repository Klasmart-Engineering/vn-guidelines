    "content": [
        {
            "lang": "en",
            "unit": "UNIT  8: WEATHER, SEASONS & ENVIRONMENT",
            "lesson_name": "LESSON 68: ENVIRONMENT 4",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: water, dunes, sand, pyramids."
                    },
                    { "text": "Develop speaking and listening skills" },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive development:</strong> know about the life in the desert."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song, raise 2 hands up, clap the hands, sit down, stand up, turn around, shake the head."
                            },
                            {
                                "text": "<strong>Aesthetic development: </strong> develop creative through art activities, decorate the cactus."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 4-5_U8_LP68_Environment 4" },
                    { "text": "Handout, crayons, colored markers" }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning / afternoon”</i>. Wave at students and encourage them to wave back to you as they repeat the greeting. "
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>. Encourage students to reply back with <i>“I am ___ (good)”</i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Water song ” Video song<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song <b>“Water song”</b>, pause at the vocabulary <b>(sky, sea, ground, stream, cloud, tree)</b> and review the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Sky: </b> raise 2 hands up."
                                            },
                                            {
                                                "text": "<b>Sea:</b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Ground: </b> sit down."
                                            },
                                            {
                                                "text": "<b>Stream: </b> stand up"
                                            },
                                            {
                                                "text": "<b>Cloud: </b> turn around."
                                            },
                                            {
                                                "text": "<b>Tree: </b> shake the head."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“A day in the desert” Storybook”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords <b>(water, dunes, sand, pyramids)</b>."
                                    },
                                    {
                                        "text": "Play the storybook <b>“A day in the desert”</b>, just look at the pictures and ask students such as.",
                                        "list": [
                                            { "text": "<i>What is it?</i>" },
                                            {
                                                "text": "<i>What color is the cactus?</i>"
                                            },
                                            {
                                                "text": "<i>How many lizards do you see?</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the storybook again,  asks students to listen to the story. The teacher pauses the keywords <b>(water, dunes, sand, pyramids)</b> and asks students to repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher instructs students to read each sentence of the story."
                                    },
                                    {
                                        "text": "Teacher asks students some questions after reading the story.",
                                        "list": [
                                            {
                                                "text": "<i>What animals do you see in the desert?  &#x02192; I see a lizard.</i>"
                                            },
                                            {
                                                "text": "<i>What kind of plants do you see in the desert? &#x02192; I see a cactus.</i>"
                                            },
                                            {
                                                "text": "<i>What do you do in the desert? &#x02192; I go sand surfing / etc.</i>"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Environment 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Environment 2</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the answer - Water, Dunes, Sand, Pyramids</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the images, play the audio button to listen and choose the correct answers."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do (steam activities)",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM Activity: <strong>Decorate the cactus</strong>"
                            },
                            {
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a handout, crayons and colored markers for each student. "
                                    }
                                ]
                            },
                            { "text": "<u>How to do:</u>" },
                            {
                                "list": [
                                    {
                                        "text": "Teacher distributes a handout, crayons and colored markers to student."
                                    },
                                    {
                                        "text": "Use the colored markers to draw the thorns on the cactus."
                                    },
                                    {
                                        "text": "Use the crayons to color the cactus.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Castus-5-1.jpg\"width=\"150\" height=\"200\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“Water song”</b> song as have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students as they leave. Encourage them to wave back to you as they also say, <i>“Goodbye”</i>."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

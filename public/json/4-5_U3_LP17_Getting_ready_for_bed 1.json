    "content": [
        {
            "lang": "en",
            "unit": "UNIT 3: MY SELF",
            "lesson_name": "LESSON 17: GETTING READY FOR BED 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: bedtime, brush your teeth, wash your face, put on pajamas."
                    },
                    {
                        "text": "Develop speaking and listening skills."
                    },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<b>Cognitive development:</b> students understand multi-step directions."
                            },
                            {
                                "text": "<b>Gross motor skills:</b> movement following the song such as turning around, brushing teeth, washing the face, putting on clothes, etc."
                            },
                            {
                                "text": "<b>Fine motor skills:</b> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 4-5_U3_LP17: Getting ready for bed 1."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning / afternoon”</i>. Wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?” </i> Encourage students to reply back with <i>“I am ___ (good).”</i>"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "Chant: “Bada gets ready for bed”<i><br/>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song."
                                    },
                                    {
                                        "text": "Teacher says: “<i>We will sing a song about getting ready for bed</i>”."
                                    },
                                    {
                                        "text": "Play the <b>Chant: Bada gets ready for bed</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the keywords and have students stand up and practice the actions as below:",
                                        "list": [
                                            {
                                                "text": "<b>Bedtime:</b> turn around."
                                            },
                                            {
                                                "text": "<b>Brush your teeth:</b> put the hand in front of the mouth and brush teeth."
                                            },
                                            {
                                                "text": "<b>Wash your face:</b> put 2 hands on the face and wash the face."
                                            },
                                            {
                                                "text": "<b>Put on pajamas:</b> raise 2 hands up."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again. Have the students make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Bada gets ready for bed” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson (<b>bedtime, brush your teeth, wash your face, put on pajamas</b>)."
                                    },
                                    {
                                        "text": "Teacher plays each page of the storybook “<b>Bada gets ready for bed</b>” and asks students to listen to the story."
                                    },
                                    {
                                        "text": "Teacher plays the story book again, pauses at page 3, 4, 5 and 8, teacher reads and teaches the keywords (<b>bedtime, brush your teeth, wash your face, put on pajamas</b>)."
                                    },
                                    {
                                        "text": "For example:",
                                        "list": [
                                            {
                                                "text": "At page 3, point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What does Bada do? &#x02192; Bada brushes his teeth."
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students to repeat the keyword “brush teeth” several times. Correct their pronunciation."
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually."
                                            },
                                            {
                                                "text": "Do the same on page 4, 5 and 8."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a game to review the keywords. ",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book and stops at a random page containing the day’s keywords (<b>bedtime, brush your teeth, wash your face, put on pajamas</b>)."
                                            },
                                            {
                                                "text": "Point to an image and ask students to say the keywords."
                                            },
                                            {
                                                "text": "Teacher asks students to repeat keywords several times."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<b>Keywords - Getting Ready for Bed 2</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures and keywords to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Image slider – Bedtime</b>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords.  "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<b>Memory - Getting Ready for Bed 2</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find pairs of pictures"
                                    }
                                ]
                            },
                            {
                                "text": "<b>Image pairing - Getting Ready for Bed 2</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and drag the keywords from the left to match them with corresponding images on the right."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Green sticker - Bedtime</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, drag and drop the green sticker on the correct boxes."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Draw and color - Bedtime Eccos</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, draw the eyes, mouth and color the images."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <strong>“Bada gets ready for bed”</strong> again."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom."
                                    },
                                    {
                                        "text": "Say goodbye to students."
                                    },
                                    {
                                        "text": "Ask students to say goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

    "content": [
        {
            "lang": "en",
            "unit": "UNIT 3: MY SELF",
            "lesson_name": "LESSON 17: EXERCISES 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "learn vocabulary of movement: dance, move, sing, fitness, shake, exercise, play, basketball."
                    },
                    {
                        "text": "develop speaking and listening skills."
                    },
                    {
                        "text": "develop other skills: ",
                        "list": [
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song to put the hands on the hips and shake the head, step to the left and right, clap the hands, put your hands up, shake the body, fold your arms, jump up and down."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 5-6_U3_LP17: Exercise 1"
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning/afternoon”</i>. Wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>. Encourage students to reply back with <i>“I am ___ (good)."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Dance: Work on our fitness”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about movement”</i>"
                                    },
                                    {
                                        "text": "Play the song (dance):  <strong>“Work on our fitness”</strong>"
                                    },
                                    {
                                        "text": "Play the first part of the song (0:00 - 0:52s) from “Here we go” to “Let’s exercise”."
                                    },
                                    {
                                        "text": "At the second part of the song where the lyric is repeated, pause at the keywords and have students stand up and practice the actions as below:",
                                        "list": [
                                            {
                                                "text": "<b>Dance: </b>put the hands on the hips and shake the head"
                                            },
                                            {
                                                "text": "<b>Move:  </b>step to the left and right"
                                            },
                                            {
                                                "text": "<b>Sing:  </b>clap the hands "
                                            },
                                            {
                                                "text": "<b>Fitness:  </b>put your hands up"
                                            },
                                            {
                                                "text": "<b>Shake:  </b>shake the body"
                                            },
                                            {
                                                "text": "<b>Exercise:   </b>fold your arms"
                                            },
                                            {
                                                "text": "<b>Play:  </b>jump up and down"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays a song again, have the students make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Slam dunk time! Board book”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher plays the storybook from page 1-5 of the book <b>“Slam dunk time” </b> and asks students to listen to the story."
                                    },
                                    {
                                        "text": "Teacher plays the story book again in page 2 and 5, teacher reads and teaches the keywords of the day which are <b>exercise, basketball.</b> "
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "At page 2: Point to the pictures and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What sport do they play? -> They play basketball.</i>"
                                                    },
                                                    {
                                                        "text": "<i> Who play the basketball? -> Curly and Pogo play basketball.</i> "
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keyword: <b>basketball</b>"
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same on page 5"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a game to review the keywords",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book and stops at a random page containing the day’s keywords (exercise, basketball)."
                                            },
                                            {
                                                "text": "Point to an image and ask students to say the keywords."
                                            },
                                            {
                                                "text": "Teacher asks students to repeat keywords several times."
                                            },
                                            {
                                                "text": "Teacher corrects their pronunciation."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<strong>Keywords - Exercise 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite student to come to the board, click on the pictures and asks students to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Flashcards - Exercise 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures and write the words by clicking on the letters in the keyboard."
                                    },
                                    {
                                        "text": "Ask students to repeat the keywords."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<strong>Image pairing - Exercise 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, drag the keywords from the left to match with the corresponding images on the right."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Memory game - Exercises 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to turn over 2 pictures to find the pairs of pictures and then say the word aloud."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the correct answers - Dance, Move, Sing, Shake</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures, listen to the words and then choose the correct words."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Fill in the Blanks - Exercise, Play, Basketball</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures and fill in the blanks by clicking the letters in the keyboard."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Work on our fitness”</strong>"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 3: BẢN THÂN BÉ",
            "lesson_name": "BÀI 17: TẬP THỂ DỤC 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 tuổi"
                },
                {

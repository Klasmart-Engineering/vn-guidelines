    "content": [
        {
            "lang": "en",
            "unit": "Unit 1: My Kindergarten",
            "lesson_name": "LESSON 5: MY SCHOOL BUS 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: window, up and down, wiper, swish, wheel, round and round, light, blink, horn, beep."
                    },
                    {
                        "text": "Develop speaking and listening skills."
                    },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive development:</strong> know and understand characteristics of parts of the bus."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song to stand up, sit down, move the hands round and round, etc."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 4-5_U1_LP5_My school bus 1"
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Hello”</i>. Wave at students and encourage them to wave back to you as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with the sentence <i>“Nice to meet you ___”</i> and ask students to repeat this sentence."
                                    },
                                    {
                                        "text": "Review names of Badanamu characters if necessary."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“The wheels on the bus”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song."
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about how students go to the school”</i>."
                                    },
                                    {
                                        "text": "Play the song <strong>“The wheels on the bus”</strong> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time. Make the actions and encourage students to follow:",
                                        "list": [
                                            {
                                                "text": "<strong>Wheel:</strong> make a round and round motion with your arms."
                                            },
                                            {
                                                "text": "<strong>Window:</strong> stand up and sit down."
                                            },
                                            {
                                                "text": "<strong>Horn:</strong> put 2 hands on the mouth pretend blowing."
                                            },
                                            {
                                                "text": "<strong>Light:</strong> open and close the palms."
                                            },
                                            {
                                                "text": "<strong>Wiper:</strong> raise the arms up straight and move from the left to the right and vice versa."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again. Have the students make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "Story book “The wheels on the bus”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <strong>(window, up and down, wiper, swish, wheel, round and round, light, blink, horn, beep)</strong>."
                                    },
                                    {
                                        "text": "Open each page of the storybook, ask students to listen to the story."
                                    },
                                    {
                                        "text": "Teacher plays the book again, pauses each page, asks students to repeat the story sentence by sentence."
                                    },
                                    {
                                        "text": "Teacher asks students questions:",
                                        "list": [
                                            {
                                                "text": "<i>How do the wheels on bus go &#x02192; The wheels go round and round.</i>"
                                            },
                                            {
                                                "text": "<i>What goes up and down? &#x02192; The windows go up and down.</i>"
                                            },
                                            {
                                                "text": "<i>What makes the sound beep, beep, beep? &#x02192; The horn goes beep, beep, beep.</i>"
                                            },
                                            {
                                                "text": "<i>What blink? &#x02192; The lights go blink, blink, blink.</i>"
                                            },
                                            {
                                                "text": "<i>What makes the sound swish, swish, swish? &#x02192; The wipers go swish, swish, swish.</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a game to review the keywords.",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book."
                                            },
                                            {
                                                "text": "Teacher points to the parts of the bus <strong>(wheel, horn, wiper, light, window)</strong>, asks students to say name of each part and the movements  <strong>(round and round, up and down, blink, swish, beep)</strong>."
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords and correct their pronunciation."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<strong>Keywords - School bus </strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures and the keyworks to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image slider - School bus</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords.  "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<strong>Memory game - Window, Wiper, Wheel, Light, Horn</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to go to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Tracing - School Bus</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and draw the line from the image to the other image."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Learn - Wheel, Horn, Wiper</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and arrange the stickers into the correct order to complete the word."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again <strong>“The wheels on the bus”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom."
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

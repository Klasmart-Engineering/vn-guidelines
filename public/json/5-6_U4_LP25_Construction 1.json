    "content": [
        {
            "lang": "en",
            "unit": "UNIT 4: PROFESSION",
            "lesson_name": "LESSON 25: CONSTRUCTION 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn vocabulary of construction: hammer, building, wood, wall, movie theatre."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> students know how to solve specific problems."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, clap the hands, stomp the feet, raise the hands and turn around."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 5-6_U4_LP25_Construction 1" }]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher welcomes to the class and asks students some questions:",
                                        "list": [
                                            {
                                                "text": "<i>What’s your name? &#x02192; My name is __</i>."
                                            },
                                            {
                                                "text": "<i>How are you? &#x02192; I am fine /good / great</i>."
                                            },
                                            {
                                                "text": "<i>What is your favorite job? &#x02192; My favorite job is a doctor</i>."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher elicits keywords for students and corrects their answer."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "Dance “Building something good”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song."
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about construction”</i>."
                                    },
                                    {
                                        "text": "Play the song “<strong>Building something good”</strong> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the keywords <b>(building, hammer, wall)</b> and have students stand up and practice the actions as below:",
                                        "list": [
                                            {
                                                "text": "<b>Building: </b>clap the hands."
                                            },
                                            {
                                                "text": "<b>Hammer:</b> stomp the feet."
                                            },
                                            {
                                                "text": "<b>Wall: </b>raise the hands and turn around."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again. Have the students make the actions along the video."
                                    },
                                    {
                                        "text": "Teacher instructs students to say a sentence in chorus and individually: <i>We will be building something good</i>."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "Board book “Movie magic”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(hammer, building, wood, wall, movie theater)</b>."
                                    },
                                    {
                                        "text": "Teacher plays of the storybook <b>“Movie magic”</b> from page 1 to 7 and asks students to listen to the story."
                                    },
                                    {
                                        "text": "Teacher plays the story book again, pauses at each page from 2 to 7, teacher reads and teaches the keywords of the day which are <b>hammer, building, wood, wall, movie theater</b>."
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "At page 3: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "(Point to the picture) <i>What is this? &#x02192; This is a movie theater</i>."
                                                    },
                                                    {
                                                        "text": "<i>Is the movie theater empty? &#x02192; Yes, it is</i>."
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keyword: <b>movie theater</b>"
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same in the next pages."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a game to review the keywords",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book and stops at a random page containing the day’s keywords <b>(hammer, building, wood, wall, movie theater)</b>."
                                            },
                                            {
                                                "text": "Point to the pictures and asks students to say the keywords."
                                            },
                                            {
                                                "text": "Teacher asks students to repeat keywords several times and corrects their pronunciation."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "After reading the book, teacher asks students some questions:",
                                        "list": [
                                            {
                                                "text": "<i>Do you like a construction? &#x02192; Yes, I do </i>."
                                            },
                                            {
                                                "text": "<i>Do you want to be a constructor in the future? &#x02192; Yes, I do </i>."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Course Presentation - Hammer, Building, Wood, Wall, Movie theater</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Flashcards - Hammer, Building, Wood, Wall, Movie theater</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, invites students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Hammer, Building, Wood, Wall, Movie theater </strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of the pictures. Ask students to say the words."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Arrange “WALL” </strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and arrange the letters in the correct order."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Arrange “WOOD”</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and arrange the letters in the correct order."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Construction - Fill in the blank</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures and the sentences and then fill in the missing words."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Building something good”</strong>"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Trace - Red</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, ask students to draw the lines and color the shapes with red."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Trace - blue</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, ask students to draw the lines and color the shapes with blue."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Trace - Yellow</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, ask students to draw the lines and color the shapes with yellow."
                                    }
                                ]
                            }

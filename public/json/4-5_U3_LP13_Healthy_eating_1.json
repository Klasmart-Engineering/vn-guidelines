            "unit": "UNIT 3: MY SELF",
            "lesson_name": "LESSON 13: HEALTHY EATING 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn name of of food: healthy snack, apple, carrot, strawberry, banana."
                    },
                    {
                        "text": "Develop speaking and listening skills."
                    },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<b>Cognitive development:</b> students can identify the healthy food."
                            },
                            {
                                "text": "<b>Gross motor skills:</b> movement following the song to clap your hand, run at one spot, touch your ears, thumb down, jump up, turn around."
                            },
                            {
                                "text": "<b>Fine motor skills:</b> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 4-5_U3_LP13_Healthy eating 1."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning / afternoon”</i>. Wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?” </i> Encourage students to reply back with <i>“I am ___ (good).”</i>"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Bada food patrol” Chant.<i><br/>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Teacher says: “<i>We will sing a song about food</i>”."
                                    },
                                    {
                                        "text": "Play the <b>Chant: Bada food patrol</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time. Make actions and encourage students to follow:",
                                        "list": [
                                            {
                                                "text": "<b>Healthy snack:</b> clap your hand."
                                            },
                                            {
                                                "text": "<b>Apple:</b> run at one spot."
                                            },
                                            {
                                                "text": "<b>Carrot:</b> touch your ears."
                                            },
                                            {
                                                "text": "<b>Candy:</b> thumb down."
                                            },
                                            {
                                                "text": "<b>Strawberry:</b> jump up."
                                            },
                                            {
                                                "text": "<b>Banana:</b> turn around."
                                            },
                                            {
                                                "text": "<b>Cookie:</b> thumb down."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song the third time. Have the students make the actions along the video."
                                    },
                                    {
                                        "text": "Play the song again, pause at the pictures and ask students to repeat the words (<b>healthy snack, apple, carrot, candy, strawberry, banana, cookie</b>)."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Bada food patrol” Boardbook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher plays the <b>Boardbook: Bada food patrol </b>and asks students to listen to the story."
                                    },
                                    {
                                        "text": "Teacher plays the story again, stops at each page and asks students question to focus on the keywords.",
                                        "list": [
                                            {
                                                "text": "<i>What is this? &#x02192; This is food."
                                            },
                                            {
                                                "text": "<i>How many healthy snacks can they choose? &#x02192; They can choose 3 healthy snacks."
                                            },
                                            {
                                                "text": "<i>How many healthy snacks does Abby have? &#x02192; Abby has 3 healthy snacks."
                                            },
                                            {
                                                "text": "<i>Does Mat have any healthy snack? &#x02192; No, he doesn’t."
                                            },
                                            {
                                                "text": "<i>Who helps Mat? &#x02192; Bada food patrol helps Mat."
                                            },
                                            {
                                                "text": "<i>What food should Mat choose? &#x02192; Mat should choose an apple."
                                            },
                                            {
                                                "text": "<i>Is apple yummy? &#x02192; Yes, it is."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a game to review the keywords. ",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book and stops at random pages that contain the images of the keywords (<b>healthy snack, treat, apple, food</b>)."
                                            },
                                            {
                                                "text": "Teacher points to the images and asks students to say name of food."
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords and correct their pronunciation."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<b>Keywords - Healthy eating 1 </b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures and keywords to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<b>Memory game - Healthy Eating 1</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find pairs of pictures"
                                    }
                                ]
                            },
                            {
                                "text": "<b>Matching - Healthy Eating </b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and drag the keywords from the phải to match them with corresponding images on the left."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Choose the answer - Healthy eating </b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures and choose the correct answers."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Coloring - Healthy eating</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and color the first letters of the words."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <strong>“Bada food patrol”</strong> again."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom."
                                    },
                                    {
                                        "text": "Say goodbye to students."
                                    },
                                    {
                                        "text": "Ask students to say goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

            "lesson_name": "LESSON 40: LITLLE FARM 4",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn vocabulary about farm: everywhere, cow, cat, sheep;"
                    },
                    {
                        "text": "Learn structures: “What does the ___ say?” and “The ___ says___”."
                    },
                    { "text": "Develop speaking and listening skills;" },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> students know some animals at a farm and life of the farm."
                            },
                            {
                                "text": "<strong>Aesthetic development: </strong> develop creative through art activities, make a cow from the paper cup."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, turn around, raise 2 hands, wink, sit down."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 3-4_U6_LP40_Little farm 4." },
                    { "text": "Handout, crayons, glue." }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher welcomes the class “Hello”, wave at students and encourage them wave back to the teacher."
                                    },
                                    {
                                        "text": "Practice greeting phrases. Have the students listen carefully to each phrase and respond appropriately.",
                                        "list": [
                                            {
                                                "text": "<i>Nice to see you, ___"
                                            },
                                            { "text": "<i>How are you?" },
                                            { "text": "<i>I’m fine, thank you" }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Jess and curly had a farm” Video song<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song."
                                    },
                                    {
                                        "text": "Play the song <b>“Jess and curly had a farm”</b>, pause at the keywords (everywhere, cow, cat, sheep) and review the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Everywhere: </b> turn around."
                                            },
                                            {
                                                "text": "<b>Cow:</b> raise 2 hands."
                                            },
                                            { "text": "<b>Cat: </b> wink." },
                                            {
                                                "text": "<b>Sheep:</b> sit down."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along to the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Jess and Curly had a farm” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson <b>(everywhere, cow, cat, sheep)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the story book <b>“Jess and Curly had a farm”</b>, from page 6 to 11, just look at the pictures, point to the pictures and ask students:"
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "<i>What animal is it?</i>"
                                            },
                                            {
                                                "text": "<i>What does the cow say?"
                                            },
                                            {
                                                "text": "<i>What does the cat say?"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Ask students to repeat the story sentence by sentence"
                                    },
                                    {
                                        "text": "Play game to review the keywords.",
                                        "list": [
                                            {
                                                "text": "Assign each student one of six roles: farmer (can also be “Jess” or “Curly”), owl, pig, cow, cat, sheep."
                                            },
                                            {
                                                "text": "The student who is the farmer will call out, “What does the ___ say?” Then, the student who was assigned that animal will respond back with the correct animal sounds. Then, the farmer will say, “The ___ says ___.” "
                                            },
                                            {
                                                "text": "E.g. the student who is the farmer says, “What does the owl say?” Then, the student who is the owl will say, “hoot hoot.” Then, the farmer will say, “The owl says hoot hoot.”"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Learn keywords - Everywhere, Cow, Cat, Sheep</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcard - Jess and Curly had a Farm</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, invites students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the answer - Everywhere, Cow, Cat, Sheep</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, tap to listen the voice and choose the correct words."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>STEAM activity: Make a cow from the paper cup</b>",
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a paper cup, crayon, handout and glue for each student."
                                    },
                                    {
                                        "text": "How to do:",
                                        "list": [
                                            {
                                                "text": "Teacher helps students cut out the ears in the handout."
                                            },
                                            {
                                                "text": "Use the crayons to draw the eyes, nose and mouth on the paper cup to make a cow and decorate the cow.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/cow-1-e1622519516123.png\">"
                                            },
                                            {
                                                "text": "Stick 2 ears into the cow.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/cow-2.png\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Jess and Curly had a farm”</strong>"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]

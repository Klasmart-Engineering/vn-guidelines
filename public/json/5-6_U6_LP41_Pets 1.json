            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary about the pets: dog, pig, cat, turtle, snail, frog, rabbit."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Learn the structure: <i>What is this___ called?</i> and <i>___ is a pet</i>."
                    },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> inquiry into science – Know some pets and their characteristics."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, turn around, wink, jump up and down, run on the spot, clap the hands."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 5-6_U6_LP41_Pets 1" }]

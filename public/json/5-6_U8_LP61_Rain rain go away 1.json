            "unit": "UNIT  8: WEATHER, SEASONS & ENVIRONMENT",
            "lesson_name": "LESSON 61: RAIN, RAIN, GO AWAY 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: boot, coat, hat, rain, rainy, puddle, jump."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> students can sequence events."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, clap one time, run on one spot, sit down, raise two hands up. "
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 5-6_U8_LP61_Rain rain go away 1" }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. <i>“Good morning/afternoon”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>, encourage students to reply back with <i>“I am ___ (good)”</i>. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Rain, rain, go away” Video song<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song <b>“Rain, rain, go away”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the vocabulary <b>(rain, go away, another day, play)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Rain: </b> clap one time."
                                            },
                                            {
                                                "text": "<b>Go away: </b> run on one spot."
                                            },
                                            {
                                                "text": "<b>Another day: </b> sit down."
                                            },
                                            {
                                                "text": "<b>Play: </b> raise two hands up."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Rainy day ducks” story book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher plays the story book <b>“Rainy day ducks”</b> and asks students to listen to the story. The teacher pauses at each page, reads the story again and teaches the keywords <b>(boot, coat, hat, rain, rainy, puddle, jump)</b>."
                                    },
                                    {
                                        "text": "Point to the picture and ask questions to elicit the keywords, have students repeat the keywords several times."
                                    },
                                    {
                                        "text": "For example:  ",
                                        "list": [
                                            {
                                                "text": "At page 2:",
                                                "list": [
                                                    {
                                                        "text": "<i>What Is happening here? &#x02192; It is a rainy day.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keyword: <b>Rainy</b>."
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with the next pages."
                                            },
                                            {
                                                "text": "Ask students to repeat each sentence of the story."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Encourage students to use the sentence frames: <i>“___ wants to ___.”  (E.g. Bada wants to see Abby)</i>"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Rainy Day Ducks</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Flashcards - Boots, Coat, Hat, Rain, Puddle, Jump</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Rainy day ducks</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Find the words - Boots, Coat, Hat</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and draw the lines to find the words."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Find the correct word - Hat</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and choose the correct answer."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Find the correct word - Coat</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and choose the correct answer."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“Rain rain go away”</b> song as you have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students. Encourage them to wave back to you as they also say, <i>“Goodbye.”</i>"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

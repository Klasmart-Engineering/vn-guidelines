    "content": [
        {
            "lang": "en",
            "unit": "UNIT 3: MY SELF",
            "lesson_name": "LESSON 14: HEALTHY HABITS 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "learn vocabulary of symptom of sick: sick, cold, sneeze, tissue, cough."
                    },
                    {
                        "text": "develop speaking and listening skills"
                    },
                    {
                        "text": "develop the other skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development:</strong> physical Development - Nutrition and health."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song such as fold the arms, sitting down, touch the head, hop to the left, jump up and down."
                            },
                            {
                                "text": "<strong>Aesthetic Development: </strong> develop creative through art activities, make a flower."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 5-6_U3_LP14_Healthy habits 2"
                    },
                    {
                        "text": "Paper plate (d= 13cm), crayon, white glue, craft stick."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students<i>“Good morning/afternoon.” </i> Wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": " Reply with <i>“How are you today?” </i>. Encourage students to reply back with <i>““I am ___ (good).” </i> "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Chant: Three sick Kittens”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song (chant):  <b>“Three sick Kittens”</b>."
                                    },
                                    {
                                        "text": "Review the actions and encourage students to follow:",
                                        "list": [
                                            {
                                                "text": "<b>Cold: </b>fold your arms."
                                            },
                                            {
                                                "text": "<b>Cough:  </b>sit down."
                                            },
                                            {
                                                "text": "<b>Sick:  </b>touch your forehead."
                                            },
                                            {
                                                "text": "<b>Sneeze:  </b>hop to the left."
                                            },
                                            {
                                                "text": "<b>Grab a tissue:  </b>jump up and down."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays a song again, pauses the song to focus on the keywords <b>(sick, cold, sneeze, tissue, cough) </b> and asks students to say the keywords. "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Three sick Kittens” boardbook”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review keywords of the lesson <b>(sick, cold, sneeze, tissue, cough).</b> "
                                    },
                                    {
                                        "text": "Teacher plays boardbook <b>Three sick Kittens</b>, asks students to listen to the story. "
                                    },
                                    {
                                        "text": "Teacher plays the story again, stops at each page from page 1 to page 7 and asks students question.",
                                        "list": [
                                            {
                                                "text": "<i>Where has Bada come? -> Bada has come to visit the Kittens.</i>"
                                            },
                                            {
                                                "text": "<i>What happens with the Kittens? -> The Kittens are sick.</i>"
                                            },
                                            {
                                                "text": "<i>What is the symptom of sickness? -> It is a big sneeze.</i>"
                                            },
                                            {
                                                "text": "<i>What food is good for a cold? -> Soup is good for a cold.</i>"
                                            },
                                            {
                                                "text": "<i>What do Kittens use when they sneeze? -> They use a tissue.</i>"
                                            },
                                            {
                                                "text": "<i>Where should the Kittens throw the tissues? -> The Kittens should throw the tissues in the waste basket.</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher asks students to repeat the keywords several times and corrects their pronunciation."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<strong>Keywords - Healthy habits 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures and asks students to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image slider - Healthy habits 1</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards and asks students to say the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<strong>Three Sick Kittens Sequence</strong>",
                                "list": [
                                    {
                                        "text": "Invite student to come to the board, look at the pictures and drag to arrange the images in the correct sequence."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Pairing - healthy habits</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and drag images from the left to match them with corresponding images on the right"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do (steam activities)",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM Activity: <strong>“Make a flower”</strong>"
                            },
                            {
                                "list": [
                                    {
                                        "text": "Work in individually."
                                    },
                                    {
                                        "text": "Teacher prepares the paper plate, handout, crayons, scissors, craft stick, white glue"
                                    },
                                    {
                                        "text": "Teacher instructs students how to make a flower."
                                    }
                                ]
                            },
                            {
                                "text": "<u>How to do:</u>"
                            },
                            {
                                "list": [
                                    {
                                        "text": "Note: Teacher can help students cut out petals and leaves from the handout."
                                    },
                                    {
                                        "text": "Use the crayons to colour petals and leaves in the handout and cut it out."
                                    },
                                    {
                                        "text": "Use a white glue and stick petals into the paper plate to make a flower."
                                    },
                                    {
                                        "text": "Stick a craft stick into the flower to make a stem."
                                    },
                                    {
                                        "text": "Stick the leaves into the stem of the flower and let it dry."
                                    },
                                    {
                                        "text": "Teacher moves around the classroom, points to images of their flower and asks them to say keywords.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/04/1-1.jpg\"width=\"150\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Three sick Kittens”</strong> again"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    },

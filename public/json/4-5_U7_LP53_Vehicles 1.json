    "content": [
        {
            "lang": "en",
            "unit": "UNIT  7: TRAFFIC AND VEHICLES",
            "lesson_name": "LESSON 53: VEHICLES 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: fire truck, fuel, mail truck, police car, tire."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> know some kinds of vehicle."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, wave hands, clap the hands, run on the spot, turn around, sit down."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 4-5_U7_LP53_Vehicles 1" }]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning/afternoon”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>, encourage students to reply back with <i>“I am ___ (good)”</i>. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Go, Abby, Go” Chant<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about the vehicles”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“Go, Abby, go”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the vocabulary <b>(fire truck, fuel, mail truck, police car, tire)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Mail truck: </b> wave hands."
                                            },
                                            {
                                                "text": "<b>Fire truck:</b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Police car: </b> run on the spot."
                                            },
                                            {
                                                "text": "<b>Tire: </b> turn around."
                                            },
                                            {
                                                "text": "<b>Fuel: </b> sit down."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Go, Abby, go” Board book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(fire truck, fuel, mail truck, police car, tire)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the board book <b>“Go, Abby, go”</b> in pages from page 2 to page 5, asks students to listen to the story. The teacher pauses at each page. The teacher reads the story again and teaches the keywords <b>(fire truck, fuel, mail truck, police car, tire)</b>."
                                    },
                                    {
                                        "text": "Example: ",
                                        "list": [
                                            {
                                                "text": "At page 2: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i> What is Abby doing? &#x02192; Abby is driving.</i>"
                                                    },
                                                    {
                                                        "text": "<i>What the vehicle is Abby driving? &#x02192; Abby is driving a mail truck. </i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keyword: <b>mail truck</b>"
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with pages 3, 4 and 5."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher instructs students to practice speaking with the structure: <b>What does ____ drive?  &#x02192; ___ drives a ___</b>. Teacher gives an example: <i>What does Abby drive? &#x02192; Abby drives a mail truck</i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Vehicles 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image slider - Fire truck, Fuel, Mail truck, Police car, Tire</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords.  "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Vehicles 1 </strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Fire truck, Fuel, Mail truck, Police car, Tire</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and match the keywords with the correct images. "
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Arrange stickers - Fuel, Tire</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the images and arrange the letters to complete the words."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching - Vehicles 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and draw the lines to connect the images with the keywords. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Go, Abby, go”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

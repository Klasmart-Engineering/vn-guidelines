            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: desert, hot, lizard, cactuses."
                    },
                    { "text": "Develop speaking and listening skills" },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive development:</strong> know about the life in the desert."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song, clap the hands, turn around, sit down, raise 2 hands up. "
                            },
                            {
                                "text": "<strong>Aesthetic development: </strong> develop creative through art activities, make a cactus."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 4-5_U8_LP66_Environment 2" },
                    {
                        "text": "Toilet paper roll, glue, colored marker, green paper, handout"
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning / afternoon”</i>. Wave at students and encourage them to wave back to you as they repeat the greeting. "
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>. Encourage students to reply back with <i>“I am ___ (good)”</i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Water song ” Video song<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song <b>“Water song”</b>, pause at the vocabulary <b>(water, desert, jungle, living thing)</b> and review the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Water: </b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Desert:</b> turn around."
                                            },
                                            {
                                                "text": "<b>Jungle: </b> sit down."
                                            },
                                            {
                                                "text": "<b>Living thing: </b> raise 2 hands up."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“A day in the desert” Storybook”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson <b>(desert, hot, lizard, cactuses)</b>."
                                    },
                                    {
                                        "text": "Play the storybook <b>“A day in the desert”</b> from page 2 to page 5, just look at the pictures and ask students such as.",
                                        "list": [
                                            {
                                                "text": "<i>Where are they?</i>"
                                            },
                                            {
                                                "text": "<i>How’s the weather in the desert?</i>"
                                            },
                                            {
                                                "text": "<i>What animal / plant is it?</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the storybook again, asks students to listen to the story. The teacher pauses at the keywords <b>(desert, hot, lizard, cactuses)</b> and asks students to repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher asks students some questions after reading the story.",
                                        "list": [
                                            {
                                                "text": "<i>Do you see the desert? &#x02192; Yes, I do / No, I don’t.</i>"
                                            },
                                            {
                                                "text": "<i>Is it hot in the desert? &#x02192; Yes, it is.</i>"
                                            },
                                            {
                                                "text": "<i>What do you see in the desert? &#x02192; I see a lizard / cactus/ etc.</i>"
                                            },
                                            {
                                                "text": "<i>Do you like the desert? &#x02192; Yes, I do / No, I don’t.</i>"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Environment 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Environment 1</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the answer - Desert, Hot, Lizard, Cactuses</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the images, play the audio button to listen and choose the correct answers."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do (steam activities)",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM Activity: <strong>Make a cactus</strong>"
                            },
                            {
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a toilet paper roll, a sheet of green paper, colored marker, glue and handout for each student. "
                                    }
                                ]
                            },
                            { "text": "<u>How to do:</u>" },
                            {
                                "list": [
                                    {
                                        "text": "Teacher helps students cut out the templates in the handout."
                                    },
                                    {
                                        "text": "Wrap the toilet paper roll with green paper and stick it by a glue.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Castus-1.png\"width=\"3000\" height=\"100\">"
                                    },
                                    {
                                        "text": "Use the colored markers to draw the eyes, mouth and some short lines for thorns of cactus.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Castus-2.jpg\"width=\"150\" height=\"200\">"
                                    },
                                    {
                                        "text": "Use a glue and stick 2 hands into the cactus.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Castus-3.jpg\"width=\"150\" height=\"200\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“Water song”</b> song as have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students as they leave. Encourage them to wave back to you as they also say, <i>“Goodbye”</i>."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

            "unit": "UNIT 7: TRAFFIC AND VEHICLES",
            "lesson_name": "LESSON 55: VEHICLES 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: bus, digger, pickup truck, vehicle, ambulance."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> know some kinds of vehicle."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, stand up, shake the head, turn around, step to the left and right, raise thumb up."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 4-5_U7_LP55_Vehicles 3" }]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning/afternoon”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>, encourage students to reply back with <i>“I am ___ (good)”</i>. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Go, Abby, Go” Chant<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about the vehicles”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“Go, Abby, Go”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the keywords <b>(bus, digger, pickup truck, vehicle, ambulance)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Bus: </b> stand up."
                                            },
                                            {
                                                "text": "<b>Digger:</b> shake the head."
                                            },
                                            {
                                                "text": "<b>Pickup truck: </b> turn around."
                                            },
                                            {
                                                "text": "<b>Vehicle: </b> step to the left and right."
                                            },
                                            {
                                                "text": "<b>Ambulance: </b> raise thumb up."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Go, Abby, go” Board book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(bus, digger, pickup truck, vehicle, ambulance)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the board book <b>“Go, Abby, go”</b>, asks students to listen to the story. The teacher pauses at each page from page 6 to 10. The teacher reads the story again and teaches the keywords <b>(bus, digger, pickup truck, vehicle, ambulance)</b>."
                                    },
                                    {
                                        "text": "Example: ",
                                        "list": [
                                            {
                                                "text": "At page 6: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What does Mimi drive? &#x02192; Mimi drives pickup truck.</i>"
                                                    },
                                                    {
                                                        "text": "<i>What happens on the road? &#x02192; There is a log on the road.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keyword: <b>pickup truck</b>"
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with pages 7, 8, 9 and 10."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher instructs students to practice speaking with the structure: <b>What does ____ drive? &#x02192; ___ drives a ___</b>. Teacher gives an example: <i>What does Mimi drive? &#x02192; Abby drives a pickup truck</i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Vehicles 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image slider - Vehicles 2</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Vehicles 2 </strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Vehicles 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and match the keywords with the correct images."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the stickers - Vehicles 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, play the audio button to listen and match the correct images into the boxes."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Select the answer - Digger</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and choose the correct answer."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Select the answer - Ambulance</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and choose the correct answer."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching - Vehicles 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and draw the lines to match the images with the words."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Go, Abby, go”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

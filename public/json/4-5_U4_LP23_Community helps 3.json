{
    "banner": "https://i.ibb.co/9p7wMjP/gl-03.jpg",
    "content": [
        {
            "lang": "en",
            "unit": "UNIT 4: PROFESSION",
            "lesson_name": "LESSON 23: COMMUNITY HELPS 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn vocabulary of professions: builder, bus driver, doctor, firefighter."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<b>Cognitive development:</b> inquiry into society – Students classify the characters."
                            },
                            {
                                "text": "<b>Gross motor skills:</b> movement following the song, raise the left hand, turn around, clap the hands, wink."
                            },
                            {
                                "text": "<b>Fine motor skills:</b> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 4-5_U4_LP23_Community helps 3" }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning / afternoon”</i>. Wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?” </i>. Encourage students to reply back with <i>“I am ___ (good).”</i>"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "Chant “Agent M”<i><br/>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song."
                                    },
                                    {
                                        "text": "Teacher says: “<i>We will sing a song about professions</i>”."
                                    },
                                    {
                                        "text": "Play the song <b>“Agent M”</b>."
                                    },
                                    {
                                        "text": "Play the first part of the song from “ready” to “gardener” and ask students to listen to the song."
                                    },
                                    {
                                        "text": "At the second part of the song where the lyric is repeated, pause at the keywords <b>(builder, firefighter, doctor, bus driver)</b> and have students stand up and practice the actions as below:",
                                        "list": [
                                            {
                                                "text": "<b>Builder:</b> raise the left hand."
                                            },
                                            {
                                                "text": "<b>Firefighter:</b> turn around."
                                            },
                                            {
                                                "text": "<b>Doctor:</b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Bus driver:</b> wink."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again. Have the students make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Agent M” Board book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(firefighter, doctor, bus driver)</b>."
                                    },
                                    {
                                        "text": "Teacher plays of the boardbook of <b>“Agent M”</b> and asks students to listen to the story."
                                    },
                                    {
                                        "text": "Teacher plays the board book again, pauses at each page from 7 to 12, teacher reads and teaches the keywords <b>(firefighter, doctor, bus driver)</b>."
                                    },
                                    {
                                        "text": "For example:",
                                        "list": [
                                            {
                                                "text": "At page 8: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What does Curly do? &#x02192; Curly is a firefighter</i>."
                                                    },
                                                    {
                                                        "text": "<i>What happens to Tammy? &#x02192; Tammy is in the tree</i>."
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students to repeat the keyword: <b>firefighter</b>."
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same in page 9, 10, 11 and 12."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a game to review the keywords. ",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book and stops at a random page containing the day’s keywords <b>(firefighter, doctor, bus driver)</b>."
                                            },
                                            {
                                                "text": "Point to the characters <i>(Curly, Jess, Mat)</i> and ask students to say their jobs."
                                            },
                                            {
                                                "text": "Teacher asks students to repeat keywords several times."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<b>Keywords - Community Helps 2</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Card Slider - builder, bus driver, doctor, firefighter</b>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords.  "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<b>Memory game - Community Helps 2</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of the pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Matching - Community helps</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the images and match the keywords with the correct images."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Arrange words - Firefighter, Bus driver</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, arrange the stickers to complete the words."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Choose the letters - Builder, Doctor</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the images and choose the correct letters."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <strong>“Agent M”</strong> again."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom."
                                    },
                                    { "text": "Say goodbye to students." },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 4: NGHỀ NGHIỆP",
            "lesson_name": "BÀI 23: GIÚP ĐỠ CỘNG ĐỒNG 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng về nghề nghiệp: người xây dựng, tài xế xe buýt, bác sĩ, lính cứu hỏa."
                    },
                    { "text": "Phát triển kĩ năng nghe và nói." },
                    {
                        "text": "Phát triển các kĩ năng khác:",
                        "list": [
                            {
                                "text": "<b>Phát triển nhận thức: </b> khám phá xã hội – Học sinh có thể phân loại nhân vật."
                            },
                            {
                                "text": "<b>Kĩ năng vận đông thô:</b> vận động theo bài hát, giơ tay trái lên, quay vòng tròn, vỗ tay, chớp mắt."
                            },
                            {
                                "text": "<b>Kĩ năng vận động tinh:</b> trò chơi tương tác."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    { "text": "Kidsloop CMS: 4-5_U4_LP23_Community helps 3" }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh <i>“Chào buổi sáng / buổi chiều”</i>. Vẫy tay với học sinh và khuyến khích học sinh vẫy tay lại với giáo viên cũng như lặp lại lời chào."
                                    },
                                    {
                                        "text": "Trả lời với câu “<i>Các con có khỏe không?</i>”. Khuyến khích học sinh trả lời lại với “<i>Con ___ (tốt).</i>”"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "Chant “Agent M”<br/><i><i>10 phút</i></i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Giáo viên nói: <i>“Hôm nay chúng ta sẽ nghe một bài hát về nghề nghiệp”</i>."
                                    },
                                    {
                                        "text": "Giáo viên mở bài hát <b>“Agent M”</b>."
                                    },
                                    {
                                        "text": "Mở phần đầu của bài hát từ “ready” đến “người làm vườn”, nói học sinh lắng nghe bài hát."
                                    },
                                    {
                                        "text": "Ở phần 2 của bài hát nơi lời bài hát lặp lại, dừng ở từ vựng và cho học sinh đứng lên và luyện tập các động tác bên dưới:",
                                        "list": [
                                            {
                                                "text": "<b>Builder:</b> giơ tay trái lên."
                                            },
                                            {
                                                "text": "<b>Firefighter:</b> quay vòng tròn."
                                            },
                                            {
                                                "text": "<b>Doctor:</b> vỗ tay."
                                            },
                                            {
                                                "text": "<b>Bus driver:</b> chớp mắt."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở lại bài hát lần nữa. Để học sinh làm theo hành động của bài hát."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách ",
                            "text": "“Agent M” Board book<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Giới thiệu chủ đề và từ vựng của bài học <b>(lính cứu hỏa, bác sĩ, tài xế xe buýt)</b>."
                                    },
                                    {
                                        "text": "Giáo viên mở sách <b>“Agent M”</b> và nói học sinh lắng nghe câu chuyện."
                                    },
                                    {
                                        "text": "Giáo viên mở sách lại lần nữa, dừng ở từng trang từ trang 7 đến 12, giáo viên đọc và dạy từ vựng <b>(lính cứu hỏa, bác sĩ, tài xế xe buýt)</b>."
                                    },
                                    {
                                        "text": "Ví dụ:",
                                        "list": [
                                            {
                                                "text": "Ở trang 8: Chỉ vào bức tranh và hỏi.",
                                                "list": [
                                                    {
                                                        "text": "<i>Curly làm nghề gì? &#x02192; Curly là người lính cứu hỏa.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Chuyện gì xảy ra với Tammy? &#x02192; Tammy ở trên cây.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Cho học sinh lặp lại từ vựng: <b>Lính cứu hỏa</b>."
                                            },
                                            {
                                                "text": "Nói học sinh lặp lại từ vựng đồng thanh và cá nhân vài lần và sửa phát âm của học sinh."
                                            },
                                            {
                                                "text": "Làm tương tự ở trang 9, 10, 11 và 12."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Chơi trò chơi để ôn tập lại từ vựng.",
                                        "list": [
                                            {
                                                "text": "Giáo viên lật sách và dừng ở trang bất kì có chứa từ vựng <b>(lính cứu hỏa, bác sĩ, tài xế xe buýt)</b>."
                                            },
                                            {
                                                "text": "Giáo viên chỉ vào các nhân vật <i>(Curly, Jess, Mat)</i> và nói học sinh nói nghề nghiệp của họ."
                                            },
                                            {
                                                "text": "Giáo viên nói học sinh lặp lại từ vựng vài lần."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            { "title": "Củng cố từ vựng" },
                            {
                                "text": "<b>Keywords - Community Helps 2</b>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào hình ảnh để lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Card Slider - builder, bus driver, doctor, firefighter</b>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào bức tranh, lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<b>Memory game - Community Helps 2</b>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và lật 2 tấm thẻ để tìm cặp hình ảnh."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Matching - Community helps</b>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào hình ảnh và ghép từ vựng với hình đúng. "
                                    }
                                ]
                            },
                            {
                                "text": "<b>Arrange words - Firefighter, Bus driver</b>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, sắp xếp hình dán để hoàn thành từ.  "
                                    }
                                ]
                            },
                            {
                                "text": "<b>Choose the letters - Builder, Doctor</b>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào các hình ảnh và chọn chữ cái đúng. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Mở lại bài hát <strong>“Agent M”</strong>."
                                    },
                                    {
                                        "text": "Yêu cầu các học sinh dọn dẹp lớp học."
                                    },
                                    { "text": "Tạm biệt các học sinh." },
                                    {
                                        "text": "Yêu cầu học sinh nói cảm ơn, tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}

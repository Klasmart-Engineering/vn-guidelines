    "content": [
        {
            "lang": "en",
            "unit": "UNIT 6: ANIMALS AND PLANTS WORLD",
            "lesson_name": "LESSON 44: FARM ANIMALS 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary about farm animals: duck, cat, cow, sheep, chicken, pig."
                    },
                    {
                        "text": "Learn the structure: “What is this___ called?” and “___ is a farm animal”."
                    },
                    {
                        "text": "Develop speaking and listening skills."
                    },
                    {
                        "text": "Develop the other development skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development:</strong> Inquiry into science – Know some animal that live on farm and their characteristics."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song, put 2 hands on the hips, jump up, turn around, run on the spot."
                            },
                            {
                                "text": "<strong>Aesthetic development:</strong> develop creative through art activities."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 5-6_U6_LP44_Farm animals 2."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. <i>“Hello. How are you?”</i>. Encourage them to repeat and ask the teacher, <i>“How are you?”</i>. Model the response, <i>“I’m good” </i>and give a thumbs up."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Jess and Curly had a farm”<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song “<b>Jess and Curly had a farm</b>”, pause at some words (<b>pig, cow, cat, sheep</b>) and review the actions as below:",
                                        "list": [
                                            {
                                                "text": "<b>Pig:</b> put 2 hands on the hips."
                                            },
                                            {
                                                "text": "<b>Cow:</b> jump up."
                                            },
                                            {
                                                "text": "<b>Cat:</b> turn around."
                                            },
                                            {
                                                "text": "<b>Sheep:</b> run on the spot."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and have the students make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Bada’s Animal Handbook”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson (<b>duck, cat, cow, sheep, chicken, pig)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the book <b>“Bada’s Animal Handbook”</b> in slide 7 and reviews the farm animals “<i><b>Farm animals live on farm. Cows give us milk and chickens give us eggs</i></b>”"
                                    },
                                    {
                                        "text": "Teacher points to the pictures and asks students to say the animals."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    },
                                    {
                                        "text": "Practice speaking by using the phrase “<b>What is this ___ called?” and “___ is a farm animal</b>”"
                                    },
                                    {
                                        "text": "Play game to review the keywords (<b>duck, cat, cow, sheep, chicken, pig</b>).",
                                        "list": [
                                            {
                                                "text": "Teacher acts out different animals and students guess the animal."
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<strong>Course Presentation - Farm animals</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to click on the pictures and repeat the sound loudly."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation"
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<strong>Image pairing - Farm animals</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, drag the keywords from the left to match them with corresponding images on the right."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Farm animal – Quiz</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board to drag the correct animals in the box."
                                    },
                                    {
                                        "text": "Look at the pictures and choose the corrects answers."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do (Steam Activity)",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>STEAM activity: “Make a little piggy”</b>"
                            },
                            {
                                "list": [
                                    {
                                        "text": "Work in individually."
                                    },
                                    {
                                        "text": "Teacher prepares a handout, a glue for each student."
                                    },
                                    {
                                        "text": "How to do:",
                                        "list": [
                                            {
                                                "text": "Teacher helps students to cut out the templates in the handout."
                                            },
                                            {
                                                "text": "Use a glue to stick the head into the body of the piggy."
                                            },
                                            {
                                                "text": "Stick the nose into the face of the piggy."
                                            },
                                            {
                                                "text": "Stick the strip of paper into the body of the piggy to make a tail."
                                            },
                                            {
                                                "text": "Press the end of the tail to the side of the pencil and start twisting the pencil to make tail curls.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Heo-nho.jpg\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <strong>“Jess and Curly had a farm”</strong> again."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 6: THẾ GIỚI ĐỘNG THỰC VẬT",
            "lesson_name": "BÀI 44: ĐỘNG VẬT NÔNG TRẠI 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng về các con vật ở nông trại: con vịt, con mèo, con bò, con cừu, con gà, con heo."
                    },
                    {
                        "text": "Học cấu trúc: “Con ___ được gọi là gì?” và “Con ____ được gọi là con vật ở nông trại”"
                    },
                    {
                        "text": "Phát triển kỹ năng nghe và nói"
                    },
                    {
                        "text": "Phát triển các kỹ năng phát triển khác:",
                        "list": [
                            {
                                "text": "<strong>Phát triển nhận thức – </strong> Khám phá khoa học – Biết một số con vật sống ở nông trại và đặc điểm của chúng."
                            },
                            {
                                "text": "<strong>Kỹ năng vận động thô:</strong> vận động theo bài hát, đặt 2 tay lên hông, nhảy lên, quay vòng tròn, chạy tại chỗ."
                            },
                            {
                                "text": "<strong>Giáo dục phát triển thẫm mĩ: </strong> thể hiện sự sáng tạo khi tham gia các hoạt động nghệ thuật."
                            },
                            {
                                "text": "<strong>Kỹ năng vận động tinh:</strong> trò chơi tương tác."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    {
                        "text": "KidsLoop CMS: 5-6_U6_LP44_Farm animals 2."
                    }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh <i>“Xin chào. Các con có khỏe không?”</i>. Khuyến khích học sinh lặp lại và hỏi giáo viên, “<i>Cô / thầy có khỏe không?</i>”. Trả lời mẫu, <i>“Cô / thầy khỏe”</i> và đưa ngón tay cái lên."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“Jess and Curly had a farm”<br/><i>5 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát “<b>Jess and Curly had a farm</b>”, dừng ở các từ vựng (<b>con heo, con bò, con mèo, con cừu</b>) và ôn tập các động tác bên dưới:",
                                        "list": [
                                            {
                                                "text": "<b>Pig:</b> đặt 2 tay lên hông."
                                            },
                                            {
                                                "text": "<b>Cow:</b> nhảy lên."
                                            },
                                            {
                                                "text": "<b>Cat:</b> quay vòng tròn."
                                            },
                                            {
                                                "text": "<b>Sheep:</b> chạy tại chỗ."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa và để học sinh làm hành động theo bài hát. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“Bada's Animal Handbook”<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Ôn tập từ vựng của bài học (<b>con vịt, con mèo, con bò, con cừu, con gà, con heo</b>). "
                                    },
                                    {
                                        "text": "Giáo viên mở sách “<b>Bada’s animal handbook</b>” ở trang 7 và ôn tập về các con vật ở nông trại “<b>Con vật nông trại sống ở nông trại. Bò cho chúng ta sữa, gà cho chúng ta trứng</b>.”"
                                    },
                                    {
                                        "text": "Giáo viên chỉ vào từng con vật và yêu cầu học sinh đọc tên con vật."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    },
                                    {
                                        "text": "Luyện nói bằng cách dùng cụm từ <b>“Con ___ được gọi là gì?” và “Con ____ được gọi là động vật nông trại”</b>."
                                    },
                                    {
                                        "text": "Chơi trò chơi để ôn tập từ vựng (<b>con vịt, con mèo, con bò, con cừu, con gà, con heo</b>).",
                                        "list": [
                                            {
                                                "text": "Giáo viên diễn tả các con vật khác nhau và để học sinh đoán con vật."
                                            },
                                            {
                                                "text": "Nói học sinh lặp lại từ vựng."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>5 phút</i>"
                        },
                        "right_content": [
                            {
                                "title": "Củng cố từ vựng"
                            },
                            {
                                "text": "<strong>Thẻ thoại – Động vật nông trại</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh bấm chọn vào hình và lặp lại từ vựng đó."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "title": "Trò chơi tương tác"
                            },
                            {
                                "text": "<strong>Ghép hình ảnh – Động vật nông trại </strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, kéo từ vựng từ bên trái và ghép với hình ảnh tương ứng ở bên phải."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Động vật nông trại </strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng kéo con vật đúng vào trong bảng."
                                    },
                                    {
                                        "text": "Nhìn vào bức tranh và chọn đáp án đúng."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hoạt động",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>Hoạt động Khoa học – Nghệ thuật: “Làm chú heo nhỏ”</b>"
                            },
                            {
                                "list": [
                                    {
                                        "text": "Làm cá nhân."
                                    },
                                    {
                                        "text": "Giáo viên chuẩn bị bản mẫu, hồ dán cho từng học sinh. "
                                    },
                                    {
                                        "text": "Cách làm:",
                                        "list": [
                                            {
                                                "text": "Giáo viên giúp học sinh cắt hình mẫu từ bản mẫu."
                                            },
                                            {
                                                "text": "Dùng hồ dán đầu vào thân của chú heo."
                                            },
                                            {
                                                "text": "Dán mũi vào khuôn mặt của chú heo."
                                            },
                                            {
                                                "text": "Dán dải giấy vào thân chú heo để làm đuôi."
                                            },
                                            {
                                                "text": "Ấn phần đuôi vào cạnh bút chì và bắt đầu vặn bút chì để làm xoăn đuôi.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Heo-nho.jpg\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Phát lại bài hát “<b>Jess and Curly had a farm</b>”."
                                    },
                                    {
                                        "text": "Yêu cầu các học sinh dọn dẹp lớp học."
                                    },
                                    {
                                        "text": "Tạm biệt các học sinh."
                                    },
                                    {
                                        "text": "Yêu cầu các học sinh nói tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

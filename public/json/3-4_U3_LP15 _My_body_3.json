    "content": [
        {
            "lang": "en",
            "unit": "UNIT 3: MY SELF",
            "lesson_name": "LESSON 15: MY BODY 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some body parts: eyes, ears, mouth and nose;"
                    },
                    {
                        "text": "Develop speaking and listening skills;"
                    },
                    {
                        "text": "Develop the other development skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development:</strong> Inquiry into Science – Identify the body parts."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song to touch students' head, shoulders, knees, toes, eyes, ears, mouth and nose."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 3-4_U3_LP15_My body 3"
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. “<i>Hello.</i>” Wave at students and encourage them to wave back to you as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with the sentence “<i>Nice to meet you __</i>” and ask students to repeat this sentence."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Head, Shoulders, Knees, and Toes”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song."
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about our body parts today”</i>."
                                    },
                                    {
                                        "text": "Play the song: “<b>Head, Shoulders, Knees, and Toes</b>” and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the words (<b>head, shoulder, knees, toes, eyes, ears, mouth, nose</b>), make actions and encourage students to follow along.",
                                        "list": [
                                            {
                                                "text": "<b>Head:</b> touch your head."
                                            },
                                            {
                                                "text": "<b>Shoulders:</b> touch your shoulders."
                                            },
                                            {
                                                "text": "<b>Knees:</b> touch your knees."
                                            },
                                            {
                                                "text": "<b>Toes:</b> touch your toes."
                                            },
                                            {
                                                "text": "<b>Eyes:</b> touch your eyes."
                                            },
                                            {
                                                "text": "<b>Ears:</b> touch your ears."
                                            },
                                            {
                                                "text": "<b>Mouth:</b> touch your mouth."
                                            },
                                            {
                                                "text": "<b>Nose:</b> touch your nose."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and have the students to make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Head, Shoulders, Knees, and Toes” storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson (<b>eyes, ears, mouth, nose</b>)."
                                    },
                                    {
                                        "text": "Play the storybook “Head, shoulders, knees and toes” and ask students to listen to the story."
                                    },
                                    {
                                        "text": "Play the storybook again. Teacher reads the story and pauses at the keywords (<b>eyes, ears, mouth, nose</b>), points to his/her body parts and asks students to repeat the words."
                                    },
                                    {
                                        "text": "Play a game to review the keywords.",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book and stops at a random page contain the day’s keywords (<b>eyes, ears, mouth, nose</b>). "
                                            },
                                            {
                                                "text": "Point to an image. Have students copy the character (e.g., touch your nose)."
                                            },
                                            {
                                                "text": "Encourage students to repeat the keyword."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Call on students to repeat keywords, correct their pronunciation if necessary."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<strong>Keywords - Eyes, Ears, Mouth and Nose</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image slider - Mouth, Ears, Eyes, Nose</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look the pictures, listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<strong>Memory game - Ears, Eyes, Nose, Mouth</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    },
                                    {
                                        "text": "Ask students to say the keywords."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Color Bada </strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and color the eyes, nose and mouth of Bada."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching - Mouth, Ears, Eyes, Nose</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, drag the keywords to match with the correct pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Match body parts – Sheep</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, draw the lines to match the body parts of the sheep."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again <strong>“Head, shoulders, knees and toes”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say goodbye to their peers and to the teacher"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 3: BẢN THÂN BÉ",
            "lesson_name": "BÀI 15: CƠ THỂ BÉ 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học về các bộ phận cơ thể: mắt, tai, miệng và mũi;"
                    },
                    {
                        "text": "Phát triển kỹ năng nghe và nói."
                    },
                    {
                        "text": "Phát triển các kỹ năng phát triển khác:",
                        "list": [
                            {
                                "text": "<strong>Phát triển nhận thức:</strong> kiến thức về khoa học – Xác định các bộ phận cơ thể "
                            },
                            {
                                "text": "<strong>Kỹ năng vận động thô:</strong> di chuyển theo bài hát đồng thời chạm tay vào đầu, vai, đầu gối, các ngón chân, mắt, tai, miệng và mũi."
                            },
                            {
                                "text": "<strong>Kỹ năng vận động tinh:</strong> trò chơi tương tác."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    {
                        "text": "KidsLoop CMS: 3-4_U2_LP15_My body 3"
                    }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh “<i>Xin chào</i>”. Vẫy tay với học sinh và khuyến khích các con chào lại cũng như lặp lại lời chào."
                                    },
                                    {
                                        "text": "Trả lời với câu <i>“Rất vui được gặp các con__”</i> và yêu cầu học sinh lặp lại câu này."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“Head, Shoulders, Knees, and Toes”<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Giáo viên nói: “<i>Hôm nay chúng ta sẽ nghe một bài hát về các bộ phận trên cơ thể các con nhé</i>”."
                                    },
                                    {
                                        "text": "Mở bài hát “<b>Head, Shoulders, Knees, and Toes</b>” và yêu cầu học sinh lắng nghe bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát lần thứ 2, dừng ở các từ (<b>cái đầu, vai, gối, ngón chân, mắt, tai, miệng, mũi</b>) và làm động tác và khuyến khích học sinh làm theo.",
                                        "list": [
                                            {
                                                "text": "<b>Head:</b> tay chạm đầu."
                                            },
                                            {
                                                "text": "<b>Shoulders:</b> tay chạm vai."
                                            },
                                            {
                                                "text": "<b>Knees:</b> tay chạm đầu gối."
                                            },
                                            {
                                                "text": "<b>Toes:</b> tay chạm ngón chân."
                                            },
                                            {
                                                "text": "<b>Eyes:</b> tay chạm mắt."
                                            },
                                            {
                                                "text": "<b>Ears:</b> tay chạm tai."
                                            },
                                            {
                                                "text": "<b>Mouth:</b> tay chạm miệng."
                                            },
                                            {
                                                "text": "<b>Nose:</b> tay chạm mũi."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lại lần nữa và để học sinh làm động tác theo bài hát."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“Head, Shoulders, Knees, and Toes.”<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Giới thiệu chủ đề và từ vựng của bài học (<b>mắt, tai, miệng, mũi</b>)."
                                    },
                                    {
                                        "text": "Mở truyện “<b>Head, shoulders, knees and toes</b>” và yêu cầu học sinh lắng nghe truyện."
                                    },
                                    {
                                        "text": "Mở truyện lại lần nữa. Giáo viên đọc và dừng ở các từ vựng (<b>mắt, tai, miệng, mũi</b>), chỉ vào bộ phận cơ thể của thầy/cô và yêu cầu học sinh lặp lại từ."
                                    },
                                    {
                                        "text": "Chơi trò chơi để ôn lại các từ vựng.",
                                        "list": [
                                            {
                                                "text": "Giáo viên lật sách và dừng lại ở một trang ngẫu nhiên có chứa từ vựng (<b>mắt, tai, miệng, mũi</b>)."
                                            },
                                            {
                                                "text": "Chỉ vào một hình ảnh. Đề nghị các học sinh bắt chước hành động nhân vật (ví dụ: chạm vào mũi)."
                                            },
                                            {
                                                "text": "Khuyến khích các học sinh nói các từ vựng quan trọng đã học."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Gọi các học sinh lặp lại các từ vựng quan trọng."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            {
                                "title": "Củng cố từ vựng"
                            },
                            {
                                "text": "<strong>Từ vựng – mắt, tai, miệng và mũi</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào các bức tranh để lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Hình trượt – Miệng, tai, mắt, mũi. </strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào bức tranh, lắng nghe và  và đọc từ vựng. "
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "title": "Trò chơi tương tác"
                            },
                            {
                                "text": "<strong>Trò chơi trí nhớ - Tai, mắt, mũi, miệng. </strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và lật 2 tấm thẻ để tìm cặp hình ảnh."
                                    },
                                    {
                                        "text": "Yêu cầu học sinh đọc từ vựng. "
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Tô màu Bada </strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và tô màu mắt, mũi, miệng của Bada."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Ghép nối – Miệng, tai, mắt, mũi.  </strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, kéo từ vựng để ghép với hình đúng. "
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Ghép bộ phận cơ thể - Con cừu </strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, vẽ các đường thẳng để nối các bộ phận cơ thể của con cừu. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Phát lại bài hát <strong>“Head, Shoulders, Knees, and Toes”</strong>."
                                    },
                                    {
                                        "text": "Yêu cầu các học sinh dọn dẹp lớp học."
                                    },
                                    {
                                        "text": "Tạm biệt các học sinh."
                                    },
                                    {
                                        "text": "Yêu cầu các học sinh nói tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}

                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song."
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about a little piggy”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“This little piggy”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the second time, pause at keywords (<b>airplane, market, picture, skateboard, taxi, biscuits, piggy, nap, dance, sound</b>) and have students stand up and practice the actions as below.",

                                            {
                                                "text": "<b>Piggy: </b> run on one spot."
                                            },
                                            {
                                                "text": "<b>Biscuit:</b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Picture: </b> turn around."
                                            },
                                            {
                                                "text": "<b>Dance:</b> shake the head."
                                            },
                                            {
                                                "text": "<b>Nap:</b> fold hands under the cheek."
                                            },
                                            { "text": "<b>Sound:</b> wink." },
                                            {
                                                "text": "<b>Airplane:</b> spread 2 arms."
                                            },
                                            {
                                                "text": "<b>Taxi:</b> jump up and down."
                                            },
                                            {
                                                "text": "<b>Skate board:</b> hop to the right."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along to the song."
                                    }
                                ]
                            }

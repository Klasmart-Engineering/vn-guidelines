            "unit": "UNIT 6: ANIMALS AND PLANTS WOLRD",
            "lesson_name": "LESSON 38: LITLLE FARM 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn vocabulary about farm: farm, owl, here, there, pig;"
                    },
                    {
                        "text": "Learn structures: “What does the ___ say?” and “The ___ says___”"
                    },
                    { "text": "Develop speaking and listening skills;" },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> students know some animals at a farm and life of the farm."
                            },
                            {
                                "text": "<strong>Aesthetic development: </strong> develop creative through art activity, make an owl."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, run one spot, clap one time, hop to the left, hop to the right, wave hands."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 3-4_U6_LP38_Little farm 2." },
                    {
                        "text": "Paper plate, glue, crayon, handout (thick paper), sticky ball, magnets."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher welcomes the class “Hello”, wave at students and encourage them wave back to the teacher."
                                    },
                                    {
                                        "text": "Practice greeting phrases. Have the students listen carefully to each phrase and respond appropriately.",
                                        "list": [
                                            {
                                                "text": "<i>Nice to see you, ___"
                                            },
                                            { "text": "<i>How are you?" },
                                            { "text": "<i>I’m fine, thank you" }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Jess and curly had a farm” Video song<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song."
                                    },
                                    {
                                        "text": "Play the song <b>“Jess and curly had a farm”</b>, pause at the keywords (farm, owl, here, there, pig) and review the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Farm: </b> run on the spot."
                                            },
                                            {
                                                "text": "<b>Owl:</b> clap one time."
                                            },
                                            {
                                                "text": "<b>Here: </b> hop to the left."
                                            },
                                            {
                                                "text": "<b>There:</b> hop to the right."
                                            },
                                            {
                                                "text": "<b>Pig:</b> wave hands."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along to the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Jess and Curly had a farm” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson <b>(farm, owl, here, there, pig)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the story book <b>“Jess and Curly had a farm”</b> from page 1 to 5, just look at the pictures, point to the pictures and ask students."
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "<i>What animals do you see?"
                                            },
                                            {
                                                "text": "<i>What does the owl say?”</i>"
                                            },
                                            {
                                                "text": "<i>What does the pig say?"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Ask students to repeat the story sentence by sentence."
                                    },
                                    {
                                        "text": "Practice the speaking by using the phrase: <i>What does the ___ say?” and “The ___ says___.” (e.g. What does the owl say? -> The owl says hoot, hoot)."
                                    },
                                    {
                                        "text": "Teacher asks students some questions after reading the story.",
                                        "list": [
                                            {
                                                "text": "<i>What animals do you see on the farm? &#x02192; I see an owl / a pig / etc. on the farm."
                                            },
                                            {
                                                "text": "<i>Do you want to have a farm? &#x02192; Yes/No, I do/don't."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Course presentation - Owl, Pig, Farm, Here, There</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the images to listen and repeat the words."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Owl, Pig, Farm, Here, There</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, invites students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the answer - Little Farm</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, tap to listen the voice and choose the correct answers."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>STEAM activity: Make an owl<b>",
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a paper plate, crayon, handout and glue for each student."
                                    },
                                    {
                                        "text": "How to do:",
                                        "list": [
                                            {
                                                "text": "Teacher helps students cut out the mouth, eyes and wings in the handout."
                                            },
                                            {
                                                "text": "Use the crayons to color the paper plate. Look at the picture below.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/owl-1-e1622515211680.png\">"
                                            },
                                            {
                                                "text": "Use a glue to stick the eyes and mouth into the face of the owl.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/owl-2-e1622515267395.png\">"
                                            },
                                            {
                                                "text": "Stick 2 wings into the owl. Look at the picture below.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/owl-3-e1622515325341.png\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Jess and Curly had a farm”</strong>"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]

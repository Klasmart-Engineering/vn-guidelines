            "unit": "UNIT 6: ANIMALS AND PLANTS WOLRD",
            "lesson_name": "LESSON 44: ITSY BITSY SPIDER 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn vocabulary: itsy bitsy, spider, went (go) up, water spout, washed (wash) out, out came (come), sunshine, rain, dried (dry) up, again;"
                    },
                    {
                        "text": "Learn the structure: It’s (sunny / cloudy / rainy) outside;"
                    },
                    { "text": "Develop speaking and listening skills;" },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development: </strong> students will learn to keep trying and to never give up."
                            },
                            {
                                "text": "<strong>Aesthetic development: </strong>develop creative through art activities, make a spider."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, pat the belly, clap the hands, shake the head, jump up."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 3-4_U6_LP44_Itsy bitsy spider 2."
                    },
                    { "text": "Playdough, pipe cleaners." }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students “<i>Hello, how are you?</i>”. Encourage them to repeat and ask the teacher, “<i>How are you?</i>”. Model the response, “<i>I’m good</i>” and give a thumb up."
                                    },
                                    {
                                        "text": "Practice greeting phrases. Have the students listen carefully to each phrase and respond appropriately.",
                                        "list": [
                                            {
                                                "text": "<i>Nice to see you, ___"
                                            },
                                            { "text": "<i>How are you?" },
                                            { "text": "<i>I’m fine, thank you" }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Itsy bitsy spider” Video song<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song."
                                    },
                                    {
                                        "text": "Play the song <b>“Itsy bitsy spider”</b>, pause at the keywords (Itsy bitsy, spider, sunshine, rain, again, dried (dry) up) and review the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Itsy bitsy spider: </b> pat the belly."
                                            },
                                            {
                                                "text": "<b>Rain:</b> turn around."
                                            },
                                            {
                                                "text": "<b>Sunshine: </b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Dried up:</b> shake the head."
                                            },
                                            { "text": "<b>Again:</b> jump up." }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along to the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Itsy bitsy spider” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson <b>(Itsy bitsy, spider, went (go) up, water spout, washed (wash) out, out came (come), sunshine, rain, dried (dry) up, again)</b>."
                                    },
                                    {
                                        "text": "Play the book <b>“Itsy bitsy spider”</b>, just look at the pictures and ask students:"
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            { "text": "<i>What animal is it?" },
                                            {
                                                "text": "<i>What did a spider do?"
                                            },
                                            { "text": "<i>What happened?" }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the story book “<b>Itsy bitsy spider</b>”, asks students to listen to the story, pauses at the vocabulary (<b>Itsy bitsy, spider, went (go) up, water spout, washed (wash) out, out came (come), sunshine, rain, dried (dry) up, again</b>) and asks students to repeat the keywords."
                                    },
                                    {
                                        "text": "Ask students to repeat the story sentence by sentence."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keyword - spider</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Itsy bitsy spider</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop puzzle - Itsy Bitsy Spider</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, match the images to complete the picture."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>STEAM activity: Make a spider.</b>",
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares play-dough and 8 pieces of pipe cleaners for each student."
                                    },
                                    {
                                        "text": "How to do:",
                                        "list": [
                                            {
                                                "text": "Teacher helps students cut out the pipe cleaners into small pieces (the length 10cm)."
                                            },
                                            {
                                                "text": "Use play-dough to make a head and body of the spider."
                                            },
                                            {
                                                "text": "Pin 8 pieces of pipe cleaners into the body of the spider and bend each leg.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/spider-e1622539164600.png\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Itsy bitsy spider”</strong>"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

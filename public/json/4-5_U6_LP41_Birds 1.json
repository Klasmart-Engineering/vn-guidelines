            "unit": "UNIT 6: ANIMALS AND PLANTS WOLRD",
            "lesson_name": "LESSON 41: BIRDS 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary about birds: owl, chicken, duck, penguin."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Learn the structure: <i>What is this ____ called? ->  A/an ___ is a bird.</i>"
                    },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<b>Cognitive development:</b> inquiry into science - students can know the characteristics of birds."
                            },
                            {
                                "text": "<b>Gross motor skills:</b> : movement following the song, spread 2 arms, wink, run on the spot, clap the hands."
                            },
                            {
                                "text": "<b>Fine motor skills:</b> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 4-5_U6_LP41_Birds 1" }]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Hello. How are you?”</i>. Encourage them to repeat and ask the teacher, <i>“How are you?”</i>. Model the response, <i>“I’m good”</i> and give a thumbs up."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“All kinds of animals” Song<i><br/>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song."
                                    },
                                    {
                                        "text": "Teacher says: “<i>We will sing a song about animals</i>”."
                                    },
                                    {
                                        "text": "Play the song <b>“All kinds of animals”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the second time, pause at some words <b>(animal, bird, parrot, goose)</b> and have students to stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Bird:</b> spread 2 arms."
                                            },
                                            { "text": "<b>Parrot:</b> wink." },
                                            {
                                                "text": "<b>Goose:</b> run on the spot."
                                            },
                                            {
                                                "text": "<b>Animal:</b> clap the hands."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again. Have the students make the actions along the video."
                                    },
                                    {
                                        "text": "Teacher instructs students to say the sentence <b>“There is all kinds of animals”</b>."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Bada’s animal handbook” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(owl, chicken, duck, penguin)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the book <b>“Bada’s animal handbook”</b> page 2. Teacher points to the picture and says that these animals are birds."
                                    },
                                    {
                                        "text": "Teacher introduces about the bird <b>“The birds have feather and lay eggs. Most birds can fly”</b>."
                                    },
                                    {
                                        "text": "Teacher points to each animal and teach the keywords <b>(owl, chicken, duck, penguin)</b>."
                                    },
                                    {
                                        "text": "Point to the picture and ask:",
                                        "list": [
                                            {
                                                "text": "<i>What animal is it? &#x02192; It is a (an) owl / chicken / duck / penguin.</i>"
                                            },
                                            {
                                                "text": "<i>What is this owl / chicken / duck / penguin called? &#x02192; This owl / chicken / duck / penguin is a bird.</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Have students repeat the keyword: <b>owl, chicken, duck, penguin.</b>"
                                    },
                                    {
                                        "text": "Ask students to repeat the keywords several times in chorus and individually and correct their pronunciation."
                                    },
                                    {
                                        "text": "Practice speaking by using the phrase <b>“What is this ___ called?”</b> and <b>“___ is a bird”</b>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<b>Course Presentation - Birds</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the animals or keywords to listen and repeat."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Card slider - Birds</b>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords.    "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<b>Memory game - Birds</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of animals."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Find multiple hotspots - Owl, Chicken, Duck, Penguin</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and choose the animals which are birds."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Multiple Choice - How many Birds?</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, count animals which are birds and choose the correct answer."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Drag the sticker - Owl, Chicken, Duck, Penguin</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, play the audio button to listen and drag the correct words into the pictures."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <strong>“All kinds of animals”</strong> again."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom."
                                    },
                                    { "text": "Say goodbye to students." },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

            "lesson_name": "LESSON 25: COOKING 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: soup, tomato, vegetable, lunch, salad, strawberry, bowl."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<b>Cognitive development:</b> students understand the importance of cooperation."
                            },
                            {
                                "text": "<b>Gross motor skills:</b> movement following the song, clap the hands, shake the body, sit down, hop to the right."
                            },
                            {
                                "text": "<b>Fine motor skills:</b> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 4-5_U4_LP25_Cooking 1" }]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher welcomes the class and asks students some questions:",
                                        "list": [
                                            {
                                                "text": "<i>Hello! How are you? &#x02192; I am fine</i>."
                                            },
                                            {
                                                "text": "<i>Have you had breakfast? &#x02192; Yes, I have</i>."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "Dance “Cooking in the kitchen”<i><br/>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song."
                                    },
                                    {
                                        "text": "Teacher says: “<i>We will sing a song about cooking in the kitchen</i>”."
                                    },
                                    {
                                        "text": "Play the song <b>“Cooking in the kitchen”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song in the second time, pause at keywords <b>(tomato, vegetable, bowl, strawberry)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Tomato:</b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Vegetable:</b> shake the body."
                                            },
                                            {
                                                "text": "<b>Bowl:</b> sit down."
                                            },
                                            {
                                                "text": "<b>Strawberry:</b> hop to the right."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and have the students make the actions along the video."
                                    },
                                    {
                                        "text": "Teacher instructs students to say the sentences <i>(There’s something cooking in the kitchen)</i> in chorus and individually."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Kitchen helpers” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(soup, tomato, vegetables, lunch, salad, strawberry, bowl)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the book <b>“Kitchen helpers”</b> and asks students to listen to the story."
                                    },
                                    {
                                        "text": "Teacher plays the story book again, pauses at each page from page 2 to 6. Teacher reads and teaches the keywords <b>(soup, tomato, vegetables, lunch, salad, strawberry, bowl)</b>."
                                    },
                                    {
                                        "text": "For example:",
                                        "list": [
                                            {
                                                "text": "At page 2: point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>Where are they? &#x02192; They are in the Wonder wood Forest</i>."
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "At page 3: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What do Abby and her friends do? &#x02192; Abby and her friends help her mom making lunch</i>."
                                                    },
                                                    {
                                                        "text": "<i>What do they want to make? &#x02192; They want to make salad, tomato soup, strawberries</i>."
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keyword: <b>salad, tomato, soup, strawberry</b>."
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same in the next pages."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a game to review the keywords. ",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book and stops at a random page containing the day’s keywords <b>(soup, tomato, vegetables, lunch, salad, strawberry, bowl)</b>."
                                            },
                                            {
                                                "text": "Point to an image and ask students to say the keywords."
                                            },
                                            {
                                                "text": "Ask students to repeat keywords and correct their pronunciation."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<b>Keywords - Strawberry, Tomato, Vegetable, Salad, Lunch, Bowl, Soup</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Image slider - Strawberry, Tomato, Vegetable, Salad, Lunch, Bowl, Soup</b>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords.  "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<b>Memory game - Tomato, Lunch, Bowl, Vegetable</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pair of the pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Memory game - Soup, salad, strawberry</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pair of the pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Coloring - Strawberry, Tomato, Vegetable, Salad, Bowl, Soup</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and color the first letters of the words."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Matching - Bowl, strawberry, vegetable, tomato</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures and match the keywords with the correct pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Choose the letters - Bowl, Soup, lunch</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the words and choose the correct letters."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <strong>“Cooking in the kitchen”</strong> again."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom."
                                    },
                                    { "text": "Say goodbye to students." },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

    "content": [
        {
            "lang": "en",
            "unit": "UNIT 5: MATHEMATICS",
            "lesson_name": "LESSON 30: NUMBERS TO 10 (2)",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some numbers to 10: one, two, three, four, five, six, seven, eight, nine, ten."
                    },
                    { "text": "Develop speaking and listening skills" },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive development:</strong> basic Math concepts – identify numbers."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song, raise one / two / three / four / five / six / seven / eight / nine / ten fingers."
                            },
                            {
                                "text": "<strong>Aesthetic development: </strong> develop creative through art activities, make the tree with numbers."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 4-5_U5_LP30_Numbers to 10 (2)" },
                    { "text": "Handout, pom-pom, white glue, crayons" }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher welcomes the class and asks students some questions:",
                                        "list": [
                                            {
                                                "text": "<i>Hello! How are you? &#x02192; I am fine</i>."
                                            },
                                            {
                                                "text": "<i>Have you had breakfast? &#x02192; Yes, I have</i>."
                                            },
                                            {
                                                "text": "<i>What food do you eat? &#x02192; I eat soup / ect.</i>."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Number rap” Song<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song <b>“Number rap”</b>, pause at keywords <b>(one, two, three, four, five, six, seven, eight, nine, ten)</b> and review the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>One: </b> raise one finger."
                                            },
                                            {
                                                "text": "<b>Two:  </b> raise two fingers."
                                            },
                                            {
                                                "text": "<b>Three:  </b> raise three fingers."
                                            },
                                            {
                                                "text": "<b>Four:  </b> raise four fingers."
                                            },
                                            {
                                                "text": "<b>Five: </b> raise five fingers."
                                            },
                                            {
                                                "text": "<b>Six:  </b> raise six fingers."
                                            },
                                            {
                                                "text": "<b>Seven:  </b> raise seven fingers."
                                            },
                                            {
                                                "text": "<b>Eight:  </b> raise eight fingers."
                                            },
                                            {
                                                "text": "<b>Nine:  </b> raise nine fingers."
                                            },
                                            {
                                                "text": "<b>Ten:  </b> raise ten fingers."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and have the students make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“My numbers” Storybook”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the numbers within 10 <b>(one, two, three, four, five, six, seven, eight, nine, ten)</b>."
                                    },
                                    {
                                        "text": "Play the story <b>“My numbers”</b>, just look at the pictures and ask students.",
                                        "list": [
                                            {
                                                "text": "<i>How many dogs are there?</i>"
                                            },
                                            {
                                                "text": "<i>How many owls are there?</i>"
                                            },
                                            {
                                                "text": "<i>How many cows are there?</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the book again, asks students to listen to the story, pauses at the numbers <b>(one, two, three, four, five, six, seven, eight, nine, ten)</b> and ask students to repeat the numbers."
                                    },
                                    {
                                        "text": "Teacher raises his / her fingers and asks students to say the number of fingers."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Numbers to 10</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the numbers to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Numbers (1-10)</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, invites students to look at the numbers and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Count & Trace to match - Numbers (6-10)</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, count and draw the lines to match the numbers with the correct images."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Match cards and numbers (1-5)</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, count and match the images with the correct numbers."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do (steam activities)",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM Activity: <strong>Make the tree with numbers</strong>"
                            },
                            {
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a handout, pom-pom, white glue, crayon for each student."
                                    }
                                ]
                            },
                            { "text": "<u>How to do:</u>" },
                            {
                                "list": [
                                    {
                                        "text": "Teacher asks students which numbers that they like from 1 to 5 and then the teacher distributes pom poms to each student. <i>(Example: The student likes number 5 and the teacher distributes 5 pom poms to that student)</i>"
                                    },
                                    {
                                        "text": "Ask students to color their tree by crayons.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Tree-1.jpg\"width=\"150\">"
                                    },
                                    {
                                        "text": "Use a white glue and stick the pom poms into the tree to make fruits.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Tree-2.jpg\"width=\"150\">"
                                    },
                                    {
                                        "text": "Teacher goes around classroom and asks students how many fruits they have. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Number rap”</strong> again"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": { "title": "Sources" },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "https://www.shutterstock.com/image-vector/tree-spherical-crown-icon-outline-illustration-520645828"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

    "content": [
        {
            "lang": "en",
            "unit": "UNIT 6: ANIMALS AND PLANTS WOLRD",
            "lesson_name": "LESSON 46: BABY ANIMALS 22",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: cat, kitten, cow, calf, bear, cub."
                    },
                    { "text": "Develop speaking and listening skills" },
                    {
                        "text": "Develop the other skills",
                        "list": [
                            {
                                "text": "<b>Cognitive development:</b> know about the baby animals."
                            },
                            {
                                "text": "<b>Gross motor skills:</b> movement following the song, step to the left and right, shake the body, sit down, clap the hands, turn around."
                            },
                            {
                                "text": "<b>Fine motor skills:</b> interactive games"
                            },
                            {
                                "text": "<b>Aesthetic development:</b> develop creative through art activities, make a bear."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 5-6_U6_LP46_Baby animals 2" },
                    { "text": "Handout, crayons, glue" }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. <i>“Good morning/afternoon”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>, encourage students to reply back with <i>“I am ___ (good)”</i> ."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“All kinds of animals” song<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song.  "
                                    },
                                    {
                                        "text": "Play the song <b>“All kinds of animals”</b>, pause at the vocabulary <b>(animal, snake, goose, lizard, goat)</b> and review the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Animal:</b> step to the left and right."
                                            },
                                            {
                                                "text": "<b>Snake:</b>  shake the body."
                                            },
                                            {
                                                "text": "<b>Goose:</b> sit down."
                                            },
                                            {
                                                "text": "<b>Lizard: </b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Goat</b>: turn around."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Bada’s animal handbook” storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson <b>(cat, kitten, cow, calf, bear, cub)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the storybook <b>“Bada’s animal handbook”</b> in page 8 and reviews the baby animals <b>“Some baby animals have their own special names. Many animals have multiple babies at a time”</b>."
                                    },
                                    {
                                        "text": "Ask students some questions:",
                                        "list": [
                                            {
                                                "text": "<i>Did you know some baby animals have special names?</i>"
                                            },
                                            {
                                                "text": "<i>What is this animal?</i>"
                                            },
                                            {
                                                "text": "<i>What other baby animals do you know?</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the book in page 8, point to the animals <b>(cat, kitten, cow, calf, bear, cub)</b> and ask students to say the animals. "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<b>Course Presentation - Baby animals 1</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the animals or keywords to listen and repeat it."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<b>Match the words_Baby Animals</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures and play the audio buttons to listen to the words and then match the correct words with the pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Drag & Drop - baby animals 1</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and match the correct animals with the keywords."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM Activity: <b>Make a bear</b>",
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a handout, crayons and glue for each student."
                                    }
                                ]
                            },
                            {
                                "text": "<u>How to do</u>",
                                "list": [
                                    {
                                        "text": "Teacher helps the students cut out the templates in the handout."
                                    },
                                    {
                                        "text": "Use the crayons to color the face, nose, mouth and ears.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/bear-1-e1622519076583.jpg\"width=\"250\" height=\"200\">"
                                    },
                                    {
                                        "text": "Stick the mouth into the face and then stick a nose into the mouth.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/bear-2.jpg\"width=\"200\" height=\"200\">"
                                    },
                                    {
                                        "text": "Stick the eyes into the face of the bear.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/bear-3.jpg\"width=\"200\" height=\"200\">"
                                    },
                                    {
                                        "text": "Stick the ears on the head of the bear.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Bear-4-e1622519283619.jpg\"width=\"200\" height=\"200\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <strong>“All kinds of animals”</strong> again"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 6: THẾ GIỚI ĐỘNG THỰC VẬT",
            "lesson_name": "BÀI 46: CON VẬT CON 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng: con mèo, con mèo con, con bò, con bê, con gấu, con gấu con."
                    },
                    { "text": "Phát triển kĩ năng nghe và nói." },
                    {
                        "text": "Phát triển các kĩ năng khác:",
                        "list": [
                            {
                                "text": "<b>Phát triển nhận thức:</b> biết về con vật con."
                            },
                            {
                                "text": "<b>Kĩ năng vận đông thô:</b> vận động theo bài hát, bước sang trái và phải, lắc lư cơ thể, ngồi xuống, vỗ tay, quay vòng tròn."
                            },
                            {
                                "text": "<b>Kĩ năng vận động tinh:</b> trò chơi tương tác."
                            },
                            {
                                "text": "<b>Phát triển thẫm mĩ:</b> thể hiện sự sáng tạo khi tham gia các hoạt động nghệ thuật, làm con gấu."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    { "text": "Kidsloop CMS: 5-6_U6_LP46_ Baby animals 2" },
                    { "text": "Bản mẫu, bút sáp màu, hồ dán" }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh <i>“Chào buổi sáng/chiều”</i>, vẫy tay với học sinh và khuyến khích học sinh vẫy tay lại với giáo viên cũng như lặp lại lời chào."
                                    },
                                    {
                                        "text": "Trả lời với <i>“Các con có khỏe không?”</i>, khuyến khích học sinh trả lời lại với <i>“con … (khỏe)”</i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“All kinds of animals” song<br/><i><i>5 phút</i></i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát <b>“All kinds of animals”</b>, dừng ở các từ vựng <b>(con vật, con rắn, con ngỗng, con thằn lằn, con dê)</b> và ôn tập các động tác bên dưới:",
                                        "list": [
                                            {
                                                "text": "<b>Animal:</b> bước sang trái và phải."
                                            },
                                            {
                                                "text": "<b>Snake:</b> lắc lư cơ thể."
                                            },
                                            {
                                                "text": "<b>Goose:</b> ngồi xuống."
                                            },
                                            {
                                                "text": "<b>Lizard: </b> vỗ tay."
                                            },
                                            {
                                                "text": "<b>Goat: </b> quay vòng tròn."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa và để học sinh làm hành động theo bài hát. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách ",
                            "text": "“Bada’s animal handbook” Storybook<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Ôn tập từ vựng của bài học <b>(con mèo, con mèo con, con bò, con bê, con gấu, con gấu con)</b>."
                                    },
                                    {
                                        "text": "Giáo viên mở sách <b>“Bada’s animal handbook”</b> ở trang 8 và ôn tập về con vật con <b>“Một số con vật con có tên đặt trưng của riêng nó. Nhiều con vật sinh nhiều con cùng 1 lúc”</b>."
                                    },
                                    {
                                        "text": "Đặt câu hỏi cho học sinh:",
                                        "list": [
                                            {
                                                "text": "<i>Các con có biết con vật con có những cái tên rất đặc biệt không?</i>"
                                            },
                                            {
                                                "text": "<i>Đó là những con gì? </i>"
                                            },
                                            {
                                                "text": "<i>Con còn biết những con vật con nào khác nữa? </i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở sách trang 8, chỉ vào con vật <b>(con mèo, con mèo con, con bò, con bê, con gấu, con gấu con)</b> và yêu cầu học sinh đọc tên con vật.."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>5 phút</i>"
                        },
                        "right_content": [
                            { "title": "Củng cố từ vựng" },
                            {
                                "text": "<b>Course Presentation - Baby animals 1</b>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và bấm vào con vật để lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<b>Match the words_Baby Animals </b>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào bức tranh và mở nút âm thanh để nghe từ và sau đó ghép từ dùng với bức tranh. "
                                    }
                                ]
                            },
                            {
                                "text": "<b>Drag & Drop - baby animals 1</b>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và ghép con vật đúng với từ vựng. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hoạt động",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            {
                                "text": "Hoạt động Khoa học – Nghệ thuật: <b>Làm con gấu</b>",
                                "list": [
                                    { "text": "Làm cá nhân." },
                                    {
                                        "text": "Giáo viên chuẩn bị bản mẫu, bút sáp màu và hồ dán cho từng học sinh."
                                    }
                                ]
                            },
                            {
                                "text": "<u>Cách làm</u>",
                                "list": [
                                    {
                                        "text": "Giáo viên giúp học sinh cắt hình mẫu từ bản mẫu."
                                    },
                                    {
                                        "text": "Dùng bút sáp màu tô màu mặt, mũi, miệng và tai.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/bear-1-e1622519076583.jpg\"width=\"250\" height=\"200\">"
                                    },
                                    {
                                        "text": "Dán miệng vào khuôn mặt và sau đó dán mũi vào miệng.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/bear-2.jpg\"width=\"200\" height=\"200\">"
                                    },
                                    {
                                        "text": "Dán mắt vào khuôn mặt của con gấu.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/bear-3.jpg\"width=\"200\" height=\"200\">"
                                    },
                                    {
                                        "text": "Dán tai vào đầu của con gấu.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Bear-4-e1622519283619.jpg\"width=\"200\" height=\"200\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Mở lại bài hát <strong>“All kinds of animals”</strong>"
                                    },
                                    {
                                        "text": "Yêu cầu  học sinh dọn dẹp lớp học."
                                    },
                                    { "text": "Tạm biệt học sinh." },
                                    {
                                        "text": "Yêu cầu học sinh nói cảm ơn, tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },

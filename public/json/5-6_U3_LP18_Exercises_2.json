    "content": [
        {
            "lang": "en",
            "unit": "UNIT 3: MY SELF",
            "lesson_name": "LESSON 18: EXERCISES 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "learn vocabulary of movement: dance, move, sing, fitness, shake, exercise, play, basketball."
                    },
                    {
                        "text": "develop speaking and listening skills"
                    },
                    {
                        "text": "develop other skills: ",
                        "list": [
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song to put the hands on the hips and shake the head, step to the left and right, clap the hands, put your hands up, shake the body, fold your arms, jump up and down."
                            },
                            {
                                "text": "<strong>Aesthetic development skills: </strong> develop creative through art activity of making a paper ball."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 5-6_U3_LP18: Exercise 2"
                    },
                    {
                        "text": "Handout, glue, scissors, blu-tack."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning/afternoon”</i>. Wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”. </i> Encourage students to reply back with <i>“I am ___ (good)” </i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Work on our fitness” Dance”<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song (dance): <b>“Work on our fitness”</b>."
                                    },
                                    {
                                        "text": "Play the song and review the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Dance: </b>put the hands on the hips and shake the head"
                                            },
                                            {
                                                "text": "<b>Move: </b>step to the left and right"
                                            },
                                            {
                                                "text": "<b>Sing:  </b>clap the hands "
                                            },
                                            {
                                                "text": "<b>Fitness:  </b>put your hands up"
                                            },
                                            {
                                                "text": "<b>Shake: </b>shake the body"
                                            },
                                            {
                                                "text": "<b>Exercise:    </b>fold your arms"
                                            },
                                            {
                                                "text": "<b>Play:  </b>jump up and down"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays a song again, have the students make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Slam dunk time! Board book”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review keywords of the lesson <b>(exercise, basketball)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the storybook from page 1-5 of the book <b>“Slam dunk time! Board book”</b> and asks students to listen to the story and clap their hands when they hear the keywords. "
                                    },
                                    {
                                        "text": "Teacher plays the storybook again, stops each page and asks students some questions."
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "At page 2: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What sport do they play? -> They play basketball.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Who play the basketball? -> Curly and Pogo play basketball.</i> "
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords and correct their pronunciation."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<strong>Keywords - Exercise 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite student to come to the board, click on the pictures and ask students to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Flashcards - Exercise 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures and write the words by clicking on the letters in the keyboard."
                                    },
                                    {
                                        "text": "Ask students to repeat the keywords."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<strong>Choose the correct answers - Exercise, Play, Basketball</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures, listen to the words and then choose the correct words."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Arrange the letter - Dance, Move, Sing, Shake</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and arrange the letters in the correct order."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do (STEAM activities)",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM Activity: <strong>“Make a paper ball”</strong>"
                            },
                            {
                                "list": [
                                    {
                                        "text": "Work in individually"
                                    },
                                    {
                                        "text": "Teacher instructs students how to make a paper ball."
                                    }
                                ]
                            },
                            {
                                "text": "<u>How to do:</u>"
                            },
                            {
                                "list": [
                                    {
                                        "text": "Teacher helps students cut out the colored strips from the handout"
                                    },
                                    {
                                        "text": "Gently fold the strips in a half and get a crease in the middle.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/04/Make-a-ball-1.png\"width=\"150\">"
                                    },
                                    {
                                        "text": "Add a glue in the middle of a strip and glue on another strip of paper forming a cross then add two more strips. <img src=\"https://kidsloop.vn/wp-content/uploads/2021/04/Make_a_ball_2-removebg-preview.png\"width=\"250\">"
                                    },
                                    {
                                        "text": "Now fold them towards the top and glue on top to get a ball shape. <img src=\"https://kidsloop.vn/wp-content/uploads/2021/04/Make_a_ball_3-removebg-preview.png\"width=\"200\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Work on our fitness”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

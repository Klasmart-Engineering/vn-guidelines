            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary of body parts: feet, legs, hands, arms, head, neck"
                    },
                    {
                        "text": "Develop speaking and listening skills"
                    },
                    {
                        "text": "Develop the other skills",
                        "list": [
                            {
                                "text": "<b>Cognitive Development:</b> inquiry into Science – Identify the body parts"
                            },
                            {
                                "text": "<b>Gross motor skills:</b> movement following the song to dance along"
                            },
                            {
                                "text": "<b>Fine motor skills:</b> play interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 5-6_U3_LP11_My body 1"
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher welcomes the class and introduces Bada and friends"
                                    },
                                    {
                                        "text": "Review names of Badanamu characters if necessary"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Mimi’s Robot”<br/><i>Dance.<br/>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Teacher says: “We will sing a song about body parts today”"
                                    },
                                    {
                                        "text": "Play the song: <b>“Mimi’s Robot”</b>"
                                    },
                                    {
                                        "text": "Make actions and encourage students to follow:",
                                        "list": [
                                            {
                                                "text": "<b>Legs:</b> shake the legs"
                                            },
                                            {
                                                "text": "<b>Feet:</b> shake the fee"
                                            },
                                            {
                                                "text": "<b>Arms:</b> shake the arms"
                                            },
                                            {
                                                "text": "<b>Hands:</b> shake the hands"
                                            },
                                            {
                                                "text": "<b>Head:</b> shake the head"
                                            },
                                            {
                                                "text": "<b>Neck:</b> rotate the head and neck"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the song again. Teacher pauses the music to focus on the day’s keywords <b>(feet, legs, hands, arms, head, neck)</b> and asks students to repeat the keywords"
                                    },
                                    {
                                        "text": "Teacher emphasizes singular nouns and plural nouns of the body parts"
                                    },
                                    {
                                        "text": "Teacher raises 1 hand and says: “<i>It is my hand”"
                                    },
                                    {
                                        "text": "Teacher raises 2 hands and say: “<i>They are my hand<b style='color: red'>s</b>”"
                                    },
                                    {
                                        "text": "Do the same with leg(<b style='color: red'>s</b>) / arm(<b style='color: red'>s</b>), ask students to repeat words (hand / hands; leg / legs; arm / arms) and correct their pronunciation"
                                    },
                                    {
                                        "text": "Teacher calls out the keywords of body parts <b>(feet, legs, hands, arms, head, neck)</b>, students point to their body parts and repeat the keywords"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Mimi’s Robot story book”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher plays the storybook <b>“Mimi’s Robot board book”</b> and asks students to listen to the story"
                                    },
                                    {
                                        "text": "Teacher plays the story again, stop at each page. Teacher reads the story slowly and asks students questions:",
                                        "list": [
                                            {
                                                "text": "<i>What is Bada playing with? -> Bada is playing with a car"
                                            },
                                            {
                                                "text": "<i>What is Abby playing with? -> Abby is playing with a frog"
                                            },
                                            {
                                                "text": "<i>What is Mimi playing with? -> Mimi is playing with a Robot"
                                            },
                                            {
                                                "text": "<i>What happens with Mimi’s robot? -> Mimi’s robot is broken"
                                            },
                                            {
                                                "text": "<i>What does Abby find? -> Abby find the robot’s legs / the robot’s arms"
                                            },
                                            {
                                                "text": "<i>What does Bada find? -> Bada finds the robot’s feet / the robot’s hands"
                                            },
                                            {
                                                "text": "<i>What does Mimi do? -> Mimi puts the legs / feet / arms / hands on the body"
                                            },
                                            {
                                                "text": "<i>What does the robot need to complete the body? -> The robot needs legs, arms, feet, hands, head to complete the body"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a game to review the keywords",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book and stops at random pages that contain the images of keywords (<b>legs, hands, feet, arms, head)"
                                            },
                                            {
                                                "text": "Teacher points to the images and invites students to say parts of the body"
                                            },
                                            {
                                                "text": "Ask students to repeat key words and correct their pronunciation",
                                                "list": [
                                                    {
                                                        "text": "Teacher flips through the book and stops at random pages that contain the images of keywords (<b>legs, hands, feet, arms, head)"
                                                    },
                                                    {
                                                        "text": "Teacher points to the images and invites students to say parts of the body"
                                                    },
                                                    {
                                                        "text": "Ask students to repeat key words and correct their pronunciation"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<b>Keywords - Robot</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures and keywords to listen and repeat the keywords"
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation"
                                    }
                                ]
                            },
                            {
                                "text": "<b>Flashcards - Parts of the Body</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, ask students to look at the pictures and say the words"
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation"
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<b>Memory game - Parts of the Body</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find pairs of pictures"
                                    },
                                    {
                                        "text": "Ask students to say the keywords"
                                    }
                                ]
                            },
                            {
                                "text": "<b>Maze - Mimi's robot</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the maze and the questions, choose the stickers to answer the questions"
                                    }
                                ]
                            },
                            {
                                "text": "<b>Matching - parts of body (Robot)</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, drag the stickers to label the parts of the robot"
                                    }
                                ]
                            },
                            {
                                "text": "<b>Find the parts – Robot</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures and find the body parts of the robot"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <strong>“Mimi’s robot”</strong> again"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say goodbye to their peers and to the teacher"
                                    }
                                ]
                            }
                        ]
                    }
                ]

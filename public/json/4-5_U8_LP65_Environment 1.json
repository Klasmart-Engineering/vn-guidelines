    "content": [
        {
            "lang": "en",
            "unit": "UNIT  8: WEATHER, SEASONS & ENVIRONMENT",
            "lesson_name": "LESSON 65: ENVIRONMENT 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: desert, hot, lizard, cactuses."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> know about the life in the desert."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, clap the hands, turn around, sit down, raise 2 hands up."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 4-5_U8_LP65_Environment 1" }]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning / afternoon”</i>. Wave at students and encourage them to wave back to you as they repeat the greeting. "
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>. Encourage students to reply back with <i>“I am ___ (good)”</i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Water song ” Video song<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song <b>“Water song”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the vocabulary <b>(water, desert, jungle, living thing)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Water: </b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Desert:</b> turn around."
                                            },
                                            {
                                                "text": "<b>Jungle: </b> sit down."
                                            },
                                            {
                                                "text": "<b>Living thing: </b> raise 2 hands up."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“A day in the desert ” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher plays the storybook <b>“A day in the desert”</b> from page 2 to page 5, asks students to listen to the story. The teacher pauses at each page, reads the story again and teaches the keywords <b>(desert, hot, lizard, cactuses)</b>."
                                    },
                                    {
                                        "text": "Example: ",
                                        "list": [
                                            {
                                                "text": "At page 2: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>Where are Bada and the penguins?  &#x02192; They are in the desert.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Is it hot? &#x02192; Yes, it is.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keyword: <b>desert, hot</b>"
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with page 3, 4 and 5."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Ask students to repeat each sentence of the story."
                                    },
                                    {
                                        "text": "Teacher plays the storybook again, asks students to listen and clap the hands when they hear the keywords."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Desert, Hot, Lizard, Cactuses</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image slider - Desert, Hot, Lizard, Cactuses</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords.  "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Environment 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of the pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching stickers - Desert, Hot, Lizard, Cactuses</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and match the keywords with the correct images."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the letters - Desert, Hot, Lizard, Cactuses</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the keywords and choose the correct letters."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Find & connect - Desert, Hot, Lizard</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, find and connect the words from the grid."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“Water song”</b> song as have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students as they leave. Encourage them to wave back to you as they also say, <i>“Goodbye”</i>."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 8: THỜI TIẾT, MÙA VÀ MÔI TRƯỜNG",
            "lesson_name": "BÀI 65: MÔI TRƯỜNG 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng: sa mạc, nóng, con thằn lằn, cây xương rồng."
                    },
                    { "text": "Phát triển kĩ năng nghe và nói." },
                    {
                        "text": "Phát triển các kĩ năng khác: ",
                        "list": [
                            {
                                "text": "<strong>Phát triển nhận thức: </strong> biết về cuộc sống ở sa mạc."
                            },
                            {
                                "text": "<strong>Kĩ năng vận đông thô:  </strong> vận động theo bài hát, vỗ tay, quay vòng tròn, ngồi xuống, giơ hai tay lên."
                            },
                            {
                                "text": "<strong>Kĩ năng vận động tinh:</strong> trò chơi tương tác"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [{ "text": "KidsLoop CMS: 4-5_U8_LP65_Environment 1" }]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh <i>“chào buổi sáng / buổi chiều”</i>. Vẫy tay chào học sinh và khuyến khích các em học sinh vẫy tay chào lại cũng như để các con lặp lại lời chào."
                                    },
                                    {
                                        "text": "Trả lời với <i>“Các con có khỏe không?”</i>. Khuyến khích học sinh trả lời với câu <i>“Con ___ (khỏe)”</i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“Water song ” Video song<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát <b>“Water song”</b> và nói học sinh lắng nghe bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát lần thứ 2, dừng ở các từ vựng <b>(nước, sa mạc, khu rừng, sinh vật sống)</b> và cho học sinh đứng lên và luyện tập các động tác bên dưới:",
                                        "list": [
                                            {
                                                "text": "<b>Water: </b> vỗ tay."
                                            },
                                            {
                                                "text": "<b>Desert:</b> quay vòng tròn."
                                            },
                                            {
                                                "text": "<b>Jungle: </b> ngồi xuống."
                                            },
                                            {
                                                "text": "<b>Living thing: </b> giơ 2 tay lên."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa và để học sinh làm hành động theo bài hát. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“A day in the desert” Storybook<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Giáo viên mở sách <b>“A day in the desert”</b> từ trang 2 đến trang 5, nói học sinh lắng nghe câu chuyện. Giáo viên dừng ở từng trang, đọc lại câu chuyện lần nữa và dạy từ vựng <b>(sa mạc, nóng, con thằn lằn, cây xương rồng)</b>."
                                    },
                                    {
                                        "text": "Ví dụ:",
                                        "list": [
                                            {
                                                "text": "Ở trang 2: Chỉ vào bức tranh và hỏi.",
                                                "list": [
                                                    {
                                                        "text": "<i>Bada và gia đình chim cánh cụt ở đâu? &#x02192; Bada và gia đình chim cánh cụt ở sa mạc.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Trời có nóng không?  &#x02192; Có, trời nóng.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Để học sinh lặp lại từ vựng: <b>sa mạc, nóng</b>"
                                            },
                                            {
                                                "text": "Nói học sinh lặp lại từ vựng vài lần đồng thanh và cá nhân và sửa phát âm của học sinh."
                                            },
                                            {
                                                "text": "Làm tương tự với trang 3, 4 và 5."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Nói học sinh lặp lại từng câu của câu chuyện."
                                    },
                                    {
                                        "text": "Giáo viên mở lại câu chuyện lần nữa, nói học sinh lắng nghe và vỗ tay khi các con nghe thấy từ vựng."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            { "title": "Củng cố từ vựng" },
                            {
                                "text": "<strong>Keywords - Desert, Hot, Lizard, Cactuses</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào các bức tranh để lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image slider - Desert, Hot, Lizard, Cactuses</strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào bức tranh, lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<strong>Memory game - Environment 1</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và lật 2 tấm thẻ để tìm các cặp hình ảnh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching stickers - Desert, Hot, Lizard, Cactuses</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và ghép từ vựng với hình ảnh đúng.  "
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the letters - Desert, Hot, Lizard, Cactuses</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào từ vựng và chọn chữ cái đúng. "
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Find & connect - Desert, Hot, Lizard</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, tìm và nối từ trong lưới từ. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Hát lại bài hát <b>“Water song”</b> và yêu cầu học sinh dọn dẹp lớp học và để các vật dụng vào đúng vị trí của nó."
                                    },
                                    {
                                        "text": "Vẫy tay chào tạm biệt học sinh và nói <i>“Chào tạm biệt”</i>. Khuyến khích học sinh vẫy tay chào giáo viên và nói <i>“Chào tạm biệt”</i>."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}

            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn numbers from 1 to 5: one, two, three, four, five"
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> basic Math concepts – Identify number to 5."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, raise one finger, raise two fingers, raise three fingers, raise four fingers, raise five fingers."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 3-4_U5_LP29_Numbers to 5 (1)" }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Hello”</i>. Wave at students and encourage them to wave back to you as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with the sentence <i>“Nice to meet you __”</i> and ask students to repeat this sentence."
                                    },
                                    {
                                        "text": "Asks students some questions:",
                                        "list": [
                                            {
                                                "text": "<i>Hello! How are you? &#x02192; Hello teacher, I am fine</i>."
                                            },
                                            {
                                                "text": "<i>Have you had breakfast/lunch? &#x02192; Yes, I have."
                                            },
                                            {
                                                "text": "<i>What food do you like? &#x02192; I like salad / soup / etc."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Number rap” video song<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song."
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about numbers”</i>."
                                    },
                                    {
                                        "text": "Play the first part of the song <b>“Number rap”</b> from “one two three” to “seven eight nine ten” and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the second part of the song where the lyric is repeated, pause at keywords <b>(one, two, three, four, five)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>One: </b> raise one finger."
                                            },
                                            {
                                                "text": "<b>Two:</b> raise two fingers."
                                            },
                                            {
                                                "text": "<b>Three: </b> raise three fingers."
                                            },
                                            {
                                                "text": "<b>Four:</b> raise four fingers."
                                            },
                                            {
                                                "text": "<b>Five:</b> raise five fingers."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and have the students make the actions along the video."
                                    },
                                    {
                                        "text": "Teacher instructs students to say the numbers <i>(one little piggy, two little birds, three little froggies, four little doggies, five little bears)</i> in chorus and individually."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“My numbers” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(one, two, three, four, five)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the book <b>“My numbers”</b> from page 1 to 6 and asks students to listen to the story."
                                    },
                                    {
                                        "text": "Teacher plays the story book again, pauses at each page from page 1 to 6, teacher reads the sentences and asks students to count items in the story and teaches the keywords <b>(one, two, three, four, five)</b>."
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "At page 2: Point to the pictures and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What is it? &#x02192; It is a dog.</i>"
                                                    },
                                                    {
                                                        "text": "<i>How many dogs are there? &#x02192; There is one dog.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Teach the structure: <i>How many … are there?</i>"
                                            },
                                            {
                                                "text": "Have students to repeat the keyword: <b>one</b>."
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same in the next pages."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a game to review the keywords",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book and stops at a random page containing the day’s keywords <b>(one, two, three, four, five)</b>."
                                            },
                                            {
                                                "text": "Ask students some questions: ",
                                                "list": [
                                                    {
                                                        "text": "<i>Example: How many dogs are there? &#x02192; There is one dog.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Ask students to repeat keywords and correct their pronunciation."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - One, Two, Three, Four, Five</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the numbers to listen and repeat the numbers."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Card slider - One, Two, Three, Four, Five</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcard, asks students to look at the pictures, listen and repeat the keywords. "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation. "
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Matching - Numbers (1-5)</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, count and draw the lines to match the numbers with the correct images."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Memory game – One, Two, Three, Four, Five</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to go to the board and turn over 2 cards to find the pairs of number."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image pairing - One, Two, Three, Four, Five</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to go to the board and drag numbers from the left to match them with corresponding images on the right."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Numbers Trace 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to match numbers from one dot to the other dot and draw the lines to connect the number words with the numnbers and the images."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Number rap”</strong>"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]

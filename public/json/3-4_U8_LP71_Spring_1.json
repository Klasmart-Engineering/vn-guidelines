    "content": [
        {
            "lang": "en",
            "unit": "UNIT  8: WEATHER, SEASONS & ENVIRONMENT",
            "lesson_name": "LESSON 71: SPRING 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: spring, flowers, bloom, garden."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development: </strong> know about the characteristics of spring."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, run on the spot, raise 2 hands up, turn around, sit down, stand up."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 3-4_U8_LP71_Spring 1." }]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students “<i>Hello, how are you</i>”. Wave at students and encourage them to wave back to you as they greet back to you <i>“Hello, I’m _____ (good, bad, fine, etc.). Thank you.”</i?"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“All four seasons” Video song <br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song. "
                                    },
                                    {
                                        "text": "Play the song <b>“All four seasons”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the vocabulary (<b>season, springtime, flowers bloom, rain, the Sun</b>) and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Season: </b> run on the spot."
                                            },
                                            {
                                                "text": "<b>Springtime:</b> raise 2 hands up."
                                            },
                                            {
                                                "text": "<b>Flowers bloom: </b> turn around."
                                            },
                                            {
                                                "text": "<b>Rain: </b> sit down."
                                            },
                                            {
                                                "text": "<b>The Sun: </b> stand up."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“The best season” storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher plays the story book <b>“The best season”</b> in page 5 and asks students to listen to the story. The teacher reads the story again and teaches the keywords (<b>spring, flowers, bloom, garden</b>)."
                                    },
                                    {
                                        "text": "For example:",
                                        "list": [
                                            {
                                                "text": "At page 5: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What does Abby think of? &#x02192; Abby thinks of pretty gardens.</i>"
                                                    },
                                                    {
                                                        "text": "<i>What season does Abby like? &#x02192; Abby likes the spring.</i>"
                                                    },
                                                    {
                                                        "text": "<i>What does Abby love? &#x02192; Abby loves seeing the flowers in bloom.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students to repeat the keyword: <b>garden, spring, flowers, bloom"
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Ask student to repeat each sentence of the story."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher asks students some questions to check their understanding.",
                                        "list": [
                                            {
                                                "text": "<i>Do you like the spring? &#x02192; Yes, I do / No, I don’t."
                                            },
                                            {
                                                "text": "<i>What do you do in the spring? &#x02192; I play in the garden."
                                            },
                                            {
                                                "text": "<i>What do you see in the spring? &#x02192; I see the flowers in bloom."
                                            },
                                            {
                                                "text": "<i>What is your favorite season? &#x02192; My favorite season is ___."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Spring</strong>",
                                "list": [
                                    {
                                        "text": "Invite student to come to the board, click on the pictures and asks students to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image Slider - Spring, Flowers, Bloom, Garden</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Spring </strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching stickers - Spring, Flowers, Bloom, Garden</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, play the audio button to listen and match the correct images into the boxes."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the correct answer - Spring</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture, play the audio button to listen and choose the correct answer."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Trace the words - Spring, Flowers, Bloom, Garden</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and trace the words."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“All four seasons”</b> song as you have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students as they leave. Encourage them to wave back to you as they also say, <i>“Goodbye”</i>."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 8: THỜI TIẾT, MÙA VÀ MÔI TRƯỜNG",
            "lesson_name": "BÀI 71: MÙA XUÂN 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng: mùa xuân, bông hoa, nở hoa, khu vườn.  "
                    },
                    { "text": "Phát triển kĩ năng nghe và nói." },
                    {
                        "text": "Phát triển các kĩ năng khác: ",
                        "list": [
                            {
                                "text": "<strong>Giáo dục phát triển nhận thức: </strong> biết về các đặc điểm của mùa xuân."
                            },
                            {
                                "text": "<strong>Kĩ năng vận đông thô:</strong> vvận động theo bài hát, chạy tại chỗ, giơ 2 tay lên, quay vòng tròn, ngồi xuống, đứng lên."
                            },
                            {
                                "text": "<strong>Kĩ năng vận động tinh:</strong> trò chơi tương tác."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [{ "text": "KidsLoop CMS: 3-4_U8_LP71_Spring 1." }]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh “<i>Xin chào, các con khỏe không?  </i>”. Vẫy chào học sinh và khuyến khích các em học sinh vẫy tay chào lại <i>“Xin chào, con ____ (tốt, tệ, khỏe, v.v.). Xin cảm ơn”.</i>"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“All four seasons ” <br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát <b>All four seasons </b> và nói học sinh lắng nghe bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát lần thứ 2, dừng ở các từ vựng (<b>season, springtime, flowers bloom, rain, the Sun</b>) và cho học sinh đứng lên và luyện tập các động tác bên dưới:",
                                        "list": [
                                            {
                                                "text": "<b>Season: </b> chạy tại chỗ."
                                            },
                                            {
                                                "text": "<b>Springtime:</b> giơ 2 tay lên."
                                            },
                                            {
                                                "text": "<b>Flowers bloom: </b> quay vòng tròn."
                                            },
                                            {
                                                "text": "<b>Rain: </b>ngồi xuống."
                                            },
                                            {
                                                "text": "<b>The Sun: </b> đứng lên."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa, yêu cầu học sinh hát và làm động tác đã tập ở trên theo nhịp điệu và lời bài hát."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“The best season” storybook<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Giáo viên mở sách <b>“The best season”</b> trang 5 và nói học sinh lắng nghe câu chuyện. Giáo viên đọc lại câu chuyện lần nữa và dạy từ vựng (<b>mùa xuân, bông hoa, nở hoa, khu vườn</b>)."
                                    },
                                    {
                                        "text": "Ví dụ:",
                                        "list": [
                                            {
                                                "text": "Ở trang 5: Chỉ vào bức tranh và hỏi.",
                                                "list": [
                                                    {
                                                        "text": "<i>Abby nghĩ về cái gì? &#x02192; Abby nghĩ về khu vườn xinh đẹp."
                                                    },
                                                    {
                                                        "text": "<i>Abby thích mùa gì? &#x02192; Abby thích mùa xuân."
                                                    },
                                                    {
                                                        "text": "<i>Abby yêu thích cái gì? &#x02192; Abby thích ngắm hoa nở."
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Để học sinh lặp lại từ vựng vài lần: <b>khu vườn, mùa xuân, bông hoa, nở hoa."
                                            },
                                            {
                                                "text": "Nói học sinh lặp lại từ vựng vài lần đồng thanh và cá nhân và sửa phát âm của học sinh."
                                            },
                                            {
                                                "text": "Nói học sinh lặp lại từng câu của câu chuyện."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Giáo viên đặt câu hỏi để kiểm tra sự hiểu bài của học sinh.",
                                        "list": [
                                            {
                                                "text": "<i>Các con có thích mùa xuân không? &#x02192; Có, con thích / Không, con không thích."
                                            },
                                            {
                                                "text": "<i>Các con làm gì vào mùa xuân? &#x02192; Con chơi trong vườn."
                                            },
                                            {
                                                "text": "<i>Các thấy gì vào mùa xuân? &#x02192; Con thấy hoa nở."
                                            },
                                            {
                                                "text": "<i>Mùa yêu thích của con là mùa nào? &#x02192; Mùa yêu thích của con là _____."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            { "title": "Củng cố từ vựng" },
                            {
                                "text": "<strong>Keywords - Spring</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào các bức tranh và nói học sinh lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image Slider - Spring, Flowers, Bloom, Garden </strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào bức tranh, lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<strong>Memory game - Spring</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và lật 2 tấm thẻ để tìm cặp hình ảnh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching stickers - Spring, Flowers, Bloom, Garden</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, mở nút âm thanh để lắng nghe và ghép hình dúng vào ô trống. "
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the correct answer - Spring</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào hình ảnh, mở nút âm thanh để lắng nghe và chọn đáp án đúng."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Trace the words - Spring, Flowers, Bloom, Garden</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và đồ từ. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Hát lại bài hát <b>“All four seasons”</b> và yêu cầu học sinh dọn dẹp lớp học và để các vật dụng và đúng vị trí của nó"
                                    },
                                    {
                                        "text": "Vẫy tay chào tạm biệt học sinh và nói <i>“Chào tạm biệt”</i>. Khuyến khích học sinh vẫy tay chào giáo viên và nói <i>“Chào tạm biệt”</i>."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}

            "unit": "UNIT  8: WEATHER, SEASONS AND ENVIRONMENT",
            "lesson_name": "LESSON 72: RECYCLING AND CONSERVATION 4",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: bag, recycle, plastic, paper, cup, litter."
                    },
                    { "text": "Develop speaking and listening skills" },
                    {
                        "text": "Develop the other skills",
                        "list": [
                            {
                                "text": "<b>Cognitive development:</b> learn different ways of recycling materials."
                            },
                            {
                                "text": "<b>Gross motor skills:</b> movement following the song, sit down, turn around, clap the hands, jump up."
                            },
                            {
                                "text": "<b>Fine motor skills:</b> interactive games"
                            },
                            {
                                "text": "<b>Aesthetic development:</b> develop creative through art activities, make a paper balloon."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 5-6_U8_LP72_Recycling and conservation 4"
                    },
                    { "text": "Balloons, newspapers, glue." }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning/afternoon”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>, encourage students to reply back with <i>“I am ___ (good)”</i>. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“We can save the world every day” Dance<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song.  "
                                    },
                                    {
                                        "text": "Play the song <b>“We can save the world every day”</b>, pause at the vocabulary  <b>(save, clean, trash, recycle)</b> and review the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Save: </b> sit down."
                                            },
                                            {
                                                "text": "<b>Clean: </b> turn around."
                                            },
                                            {
                                                "text": "<b>Trash: </b> clap the hands"
                                            },
                                            {
                                                "text": "<b>Recycle: </b> Jump up"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“A clean world” Board book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keyword of the lesson <b>(bag, recycle, plastic, paper, cup, litter)</b>."
                                    },
                                    {
                                        "text": "Go through the story <b>“A clean world”</b> from page 7 to page 11, just look at the pictures and ask students some questions."
                                    },
                                    {
                                        "text": "Example: ",
                                        "list": [
                                            {
                                                "text": "<i>What is on the ground?</i>"
                                            },
                                            {
                                                "text": "<i>What happens with the squirrel?</i>"
                                            },
                                            {
                                                "text": "<i>Who helps the squirrel?</i>"
                                            },
                                            {
                                                "text": "<i>What happens with the bird?</i>"
                                            },
                                            {
                                                "text": "<i>Who helps the bird?</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays each page of the storybook <b>“A clean world”</b> from page 7 to page 11, asks students to listen the story, pauses at the keywords <b>(bag, recycle, plastic, paper, cup, litter)</b> and reviews the keywords."
                                    },
                                    {
                                        "text": "Ask students to repeat the words."
                                    },
                                    {
                                        "text": "Teacher instructs students to read the story sentence by sentence."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<b>Keywords - Recycling and Conservation 2</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<b>Matching - voice - Recycling and conservation 4</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board."
                                    },
                                    {
                                        "text": "Look at the pictures and listen to the words and then match the correct words with the pictures."
                                    },
                                    {
                                        "text": "Look at the pictures and choose the correct words.."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Drag the words - Recycling and conservation 2</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, play the audio button to listen and drag the words into the correct boxes."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM activity: <b>Make a paper balloon</b>",
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a balloon, newspapers and glue for each student. "
                                    }
                                ]
                            },
                            {
                                "text": "<u>How to do</u>",
                                "list": [
                                    {
                                        "text": "Teacher helps students blow the balloon and seal the balloon with a tight knot to keep the air in."
                                    },
                                    {
                                        "text": "Ask students to tear the newspapers into pieces.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Balloon-1.jpg\"width=\"200\" height=\"200\">"
                                    },
                                    {
                                        "text": "Use a glue to stick pieces of newspaper into the balloon. Overlap the pieces of newspaper as you cover the entire surface of the balloon.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Balloon-2.jpg\"width=\"150\" height=\"200\">"
                                    },
                                    {
                                        "text": "Make a second layer.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Balloon-3.jpg\"width=\"150\" height=\"200\">"
                                    },
                                    {
                                        "text": "Make a third layer. Let it dry.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Balloon-4.jpg\"width=\"150\" height=\"200\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“We can save the world every day”</b> song as you have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students. Encourage them to wave back to you as they also say, <i>“Goodbye.”</i>"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

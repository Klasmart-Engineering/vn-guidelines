    "content": [
        {
            "lang": "en",
            "unit": "UNIT  7: TRAFFIC AND VEHICLES",
            "lesson_name": "LESSON 58: YOUR BOAT 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: row, boat, stream, dream."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development: </strong> Students ask and answer questions."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, clap hands one time, put 2 hands up in front, wave 2 arms in the front, 2 arms crossed in front of chest."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            },
                            {
                                "text": "<strong>Aesthetic development:</strong> develop creative through art activities, make a boat using clay."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 3-4_U7_LP58_Your boat 2." },
                    { "text": "Clay (2 different colors), wet tissue." }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students “<i>Hello, how are you?</i>”. Wave at students and encourage them to wave back to you as they greet back to you <i>“Hello, I’m _____ (good, bad, fine, etc.). Thank you.”"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Row, row, row your boat” Video song <br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <b>“Row, row, row your boat”</b> video for students, pause at the keywords (row, boat, stream, dream) and review the actions:",
                                        "list": [
                                            {
                                                "text": "<b>Row: </b> clap hands one time."
                                            },
                                            {
                                                "text": "<b>Boat:</b> put 2 hands up in front."
                                            },
                                            {
                                                "text": "<b>Stream: </b> wave 2 arms in the front."
                                            },
                                            {
                                                "text": "<b>Dream: </b> 2 arms crossed in front of chest."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again, have students sing and move along to the song using the actions above."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Row, row, row your boat” Story book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the cover page of the book and ask students to read the title of the story “Row, row, row your boat”."
                                    },
                                    {
                                        "text": "Teacher plays the e-book on CMS and asks students to find the words that sound the same (dream / stream)."
                                    },
                                    {
                                        "text": "Ask students to repeat the rhyming words (dream / stream)"
                                    },
                                    {
                                        "text": "Play the book again, ask students to listen and clap their hand when they listen to the rhyming words."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Course Presentation - Row, Boat, Stream, Dream</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Row, Boat, Stream, Dream</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the answer - Row, Boat, Stream, Dream.</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, play the audio button to listen the words and choose the correct answers"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>Steam Activity: Make a boat with clay</b>",
                                "list": [
                                    {
                                        "text": "Instruct and model how to make a boat first."
                                    },
                                    { "text": "Students work individually." },
                                    {
                                        "text": "How to do:",
                                        "list": [
                                            {
                                                "text": "Roll a piece of clay become a ball."
                                            },
                                            {
                                                "text": "Use the thumb to press and flatten the ball out."
                                            },
                                            {
                                                "text": "Making edges to keep water out."
                                            },
                                            {
                                                "text": "Use another small piece of clay to make a paddle."
                                            },
                                            {
                                                "text": "After finishing, have students wash their hands using wet tissues.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/boat.png\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“Row, row, row your boat”</b> song as you have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students as they leave. Encourage them to wave back to you as they also say, <i>“Goodbye”</i>."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 7: GIAO THÔNG VÀ PHƯƠNG TIỆN GIAO THÔNG",
            "lesson_name": "BÀI 58:  THUYỀN CỦA BẠN 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng: chèo thuyền, thuyền, dòng suối, giấc mơ."
                    },
                    { "text": "Phát triển kĩ năng nghe và nói." },
                    {
                        "text": "Phát triển các kĩ năng khác: ",
                        "list": [
                            {
                                "text": "<strong>Giáo dục phát triển nhận thức: </strong> học sinh hỏi và trả lời câu hỏi."
                            },
                            {
                                "text": "<strong>Kĩ năng vận đông thô:</strong> vận động theo bài hát, vỗ tay 1 lần, ngửa bàn tay phía trước, lượn sóng 2 cánh tay, bắt chéo 2 tay trước ngực."
                            },
                            {
                                "text": "<strong>Kĩ năng vận động tinh:</strong> trò chơi tương tác."
                            },
                            {
                                "text": "<strong>Giáo dục phát triển thẫm mĩ:</strong> thể hiện sự sáng tạo khi tham gia các hoạt động nghệ thuật, làm chiếc thuyền đất sét."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    { "text": "KidsLoop CMS: 3-4_U7_LP58_Your boat 2." },
                    { "text": "Đất sét (2 màu khác nhau), khăn giấy ướt. " }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh “<i>Xin chào. Các con có khỏe không?</i>”. Vẫy chào học sinh và khuyến khích các em học sinh vẫy tay chào lại <i>“Xin chào, con ____ (tốt, tệ, khỏe, v.v.). Xin cảm ơn”</i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“Row, row, row your boat” <br/><i>5 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Mở bài hát <b>Row, row, row your boat </b>cho học sinh nghe, dừng ở từ vựng (<b>chèo, thuyền, dòng suối, giấc mơ</b>) và ôn tập các động tác.",
                                        "list": [
                                            {
                                                "text": "<b>Row: </b> vỗ tay 1 lần."
                                            },
                                            {
                                                "text": "<b>Boat:</b> ngửa bàn tay phía trước."
                                            },
                                            {
                                                "text": "<b>Stream: </b> lượn sóng 2 cánh tay ."
                                            },
                                            {
                                                "text": "<b>Dream: </b> bắt chéo 2 tay trước ngực."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa, yêu cầu học sinh hát và làm động tác đã tập ở trên theo nhịp điệu và lời bài hát."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“Row, row, row your boat” Storybook<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Mở trang bìa của sách và yêu cầu học sinh đọc tựa đề của truyện <b>“Row, row, row your boat”</b>. "
                                    },
                                    {
                                        "text": "Giáo viên mở sách điện tử trên CMS và yêu cầu học sinh tìm từ có vần giống nhau (dream / stream)."
                                    },
                                    {
                                        "text": "Yêu cầu học sinh lặp lại các từ có vần với nhau (dream / stream)"
                                    },
                                    {
                                        "text": "Mở sách lại lần nữa, yêu cầu học sinh lắng nghe và vỗ tay khi các con nghe thấy từ có âm vần giống nhau."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>5 phút</i>"
                        },
                        "right_content": [
                            { "title": "Củng cố từ vựng" },
                            {
                                "text": "<strong>Course Presentation - Row, Boat, Stream, Dream</strong>",
                                "list": [
                                    {
                                        "text": "Bấm chọn mỗi hình và yêu cầu học sinh lắng nghe và lặp lại từ vựng đó. Chỉnh phát âm cho học sinh."
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<strong>Flashcards - Row, Boat, Stream, Dream</strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào hình và đọc từ."
                                    },
                                    {
                                        "text": "Thu âm giọng đọc của học sinh và kiểm tra kết quả."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the answer - Row, Boat, Stream, Dream.</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, mở nút âm thanh để lắng nghe từ vựng và chọn đáp án đúng. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>Hoạt động Khoa học – Nghệ thuật: Làm chiếc thuyền bằng đất sét</b>",
                                "list": [
                                    {
                                        "text": "Trước hết, hướng dẫn và làm mẫu cách làm chiếc thuyền bằng đất sét."
                                    },
                                    { "text": "Học sinh làm theo cá nhân." },
                                    {
                                        "text": "Cách làm:",
                                        "list": [
                                            {
                                                "text": "Cuộn tròn 1 miếng đất sét thành hình tròn như quả bóng nhỏ."
                                            },
                                            {
                                                "text": "Dùng ngón tay cái nhấn dẹp viên đất sét đó.."
                                            },
                                            {
                                                "text": "Bẻ cong để tạo góc không cho nước vào."
                                            },
                                            {
                                                "text": "Dùng một miếng đất sét khác để làm mái chèo."
                                            },
                                            {
                                                "text": "Sau khi hoàn thành, cho học sinh lau tay bằng khăn giấy ướt.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/boat.png\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Hát lại bài hát <b>“Row, row, row your boat”</b> và yêu cầu học sinh dọn dẹp lớp học và để các vật dụng và đúng vị trí của nó."
                                    },
                                    {
                                        "text": "Vẫy tay chào tạm biệt học sinh và nói <i>“Chào tạm biệt”</i>. Khuyến khích học sinh vẫy tay chào giáo viên và nói <i>“Chào tạm biệt”</i>."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}

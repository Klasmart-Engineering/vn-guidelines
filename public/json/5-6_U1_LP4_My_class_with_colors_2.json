                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some secondary colours: purple, orange, green, pink which are mixed by primary colors"
                    },
                    {
                        "text": "Develop speaking and listening skills"
                    },
                    {
                        "text": "Develop the other development skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive development:</strong> understand the mixing primary colors creates new colors"
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song and jump with characters"
                            },
                            {
                                "text": "<strong>Aesthetic development:</strong> develop creative through art activities, mixing color with play-dough"
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "5-6_U1_LP4_ My class with colours 2"
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher welcomes the class and introduces Bada and friends"
                                    },
                                    {
                                        "text": "Review names of Badanamu characters if necessary"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Mixing colors”<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by reviewing the song."
                                    },
                                    {
                                        "text": "Play the song: <strong>“Mixing colors”</strong>, pause at the keywords (purple, orange, green, pink) and review the actions below:",
                                        "list": [
                                            {
                                                "text": "<strong>Purple:</strong> Clap the hands"
                                            },
                                            {
                                                "text": "<strong>Orange:</strong> Turn around"
                                            },
                                            {
                                                "text": "<strong>Green:</strong> Sit down"
                                            },
                                            {
                                                "text": "<strong>Pink:</strong> Wiggle"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and make the action along the song"
                                    },
                                    {
                                        "text": "Ask students to review secondary colors <strong>(purple, orange, green, pink)</strong>",
                                        "list": [
                                            {
                                                "text": "<i>Red and blue make purple</i>"
                                            },
                                            {
                                                "text": "<i>Yellow and red make orange</i>"
                                            },
                                            {
                                                "text": "<i>Yellow and blue make green</i>"
                                            },
                                            {
                                                "text": "<i>White and red make pink</i>"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“My colours” storybook”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords <strong>(purple, orange, green, pink)</strong>"
                                    },
                                    {
                                        "text": "Teach plays the storybook in page 5, 6, 7 and 9 and asks students to listen the colours"
                                    },
                                    {
                                        "text": "Teacher pauses at each page, points to colours and additional vocabulary <i>(Ecco, grape, flower, glove, hopping horse, carrot, yarn, cat, button, dinosaur, tree, mitten, wig, shoes, horn, pig)</i> and asks students say the vocabulary"
                                    },
                                    {
                                        "text": "Teacher asks students to say whole sentences and corrects their pronunciation",
                                        "list": [
                                            {
                                                "text": "<i>It is a (an) purple Ecco / grape / etc.</i>"
                                            },
                                            {
                                                "text": "<i>It is an (a) orange carrot / hopping horse / etc.</i>"
                                            },
                                            {
                                                "text": "<i>It is a (an) green button / dinosaur / etc.</i>"
                                            },
                                            {
                                                "text": "<i>It is a (an) pink wig / horn / etc.</i>"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<strong>Course Presentation - Purple, orange, green and pink</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the colors and pictures to listen and repeat the words"
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation"
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<strong>Mixing colors - Green, Orange, Purple</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, drag the button to mix color and say the name of the secondary color"
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the correct answers – 04 colors</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and choose the correct answers"
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Combine colors - 04 colors</strong>",
                                "list": [
                                    {
                                        "text": "Teacher reads the questions and asks students to drag the words into the correct boxes"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do (steam activities)",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM Activity: <strong>“Mixing colors with play-dough”</strong>"
                            },
                            {
                                "list": [
                                    {
                                        "text": "Teacher prepares play-dough of primary colors (red, blue, yellow, white) for students"
                                    },
                                    {
                                        "text": "Work in individually"
                                    }
                                ]
                            },
                            {
                                "text": "<u>How to do:</u>"
                            },
                            {
                                "list": [
                                    {
                                        "text": "Each student has play-dough with 4 primary colors (red, blue, yellow, white)"
                                    },
                                    {
                                        "text": "Teacher instructs students to mix color and make secondary colors (green, purple, orange, pink)"
                                    },
                                    {
                                        "text": "Ask students to choose 2 primary colors and mix it together",
                                        "list": [
                                            {
                                                "text": "<i>Red + blue = purple</i>"
                                            },
                                            {
                                                "text": "<i>Red +  yellow = orange</i>"
                                            },
                                            {
                                                "text": "<i>White +  red = pink</i>"
                                            },
                                            {
                                                "text": "<i>Yellow + blue =  green</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Ask students to use these colors and make items that they are in the story book <img src=\"https://kidsloop.vn/wp-content/uploads/2021/04/u2-pl4.png\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <strong>“Mixing color”</strong> again"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say goodbye to their peers and to the teacher"
                                    }
                                ]
                            }
                        ]
                    }
                ]

            "unit": "UNIT 8: WEATHER, SEASONS & ENVIRONMENT",
            "lesson_name": "LESSON 65: SEASONS AND WEATHER 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: spring, rainy, hot, sunny, summer."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> learn about the changing seasons and the clothes to wear in different types of weather."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, shake the head, put 2 hands on the hips, sit down, clap the hands, turn around."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 5-6_U8_LP65_Season and weather 1" }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. <i>“Good morning/afternoon”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>, encourage students to reply back with <i>“I am ___ (good)”</i>. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“The rainbow weather team” Chant<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the first part of the chant <b>“The rainbow weather team”</b> and ask students to listen the song."
                                    },
                                    {
                                        "text": "Play the second part of the song where the lyric is repeated, pause at the keywords <b>(hot, sunny, summer, spring, rainy)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Hot: </b> shake the head."
                                            },
                                            {
                                                "text": "<b>Sunny: </b> put 2 hands on the hips."
                                            },
                                            {
                                                "text": "<b>Summer: </b> sit down"
                                            },
                                            {
                                                "text": "<b>Spring: </b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Rainy: </b> turn around."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“The rainbow weather team” Board book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Read the title <b>“The rainbow weather team”</b> and have students repeat the title of the book."
                                    },
                                    {
                                        "text": "Teacher plays the board book <b>“The rainbow weather team”</b> from page 2 to page 6 and asks students to listen to the story. The teacher pauses at each page, reads the story again and teaches the keywords <b>(hot, sunny, summer, spring, rainy)</b>."
                                    },
                                    {
                                        "text": "Example:  ",
                                        "list": [
                                            {
                                                "text": "At page 4: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>How is the weather? &#x02192; It is rainy.</i>"
                                                    },
                                                    {
                                                        "text": "<i>What is Jess wearing? &#x02192; Jess is wearing a spring rain jacket.</i>"
                                                    },
                                                    {
                                                        "text": "<i>What season is it? &#x02192; It is spring.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keywords: <b>rainy, spring</b>."
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with the pages 2, 3, 5 and 6."
                                            },
                                            {
                                                "text": "Ask students to repeat each sentence of the story."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the story again, asks students to listen the story and repeat the keywords when they hear the keywords."
                                    },
                                    {
                                        "text": "Teacher asks students to look outside and practice the phrase <i>“It’s ___”. (e.g. It’s hot / sunny / rainy)</i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Seasons and weather 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Flashcards - Seasons and weather 1</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Seasons and weather 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of the picture."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching - Seasons and weather 1 </strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, drag the images from the left to match them with corresponding images on the right."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Arrange - Spring</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and arrange the letters in the correct order."
                                    },
                                    { "text": "Ask students to say the word." }
                                ]
                            },
                            {
                                "text": "<strong>Arrange - Summer</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and arrange the letters in the correct order."
                                    },
                                    { "text": "Ask students to say the word." }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“The Rainbow weather team”</b> song as you have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students. Encourage them to wave back to you as they also say, <i>“Goodbye.”</i>"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

    "content": [
        {
            "lang": "en",
            "unit": "UNIT 3: MY SELF",
            "lesson_name": "LESSON 13: MY BODY 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some body parts: head, shoulders, knees and toes;"
                    },
                    {
                        "text": "Develop speaking and listening skills."
                    },
                    {
                        "text": "Develop the other development skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development:</strong> Inquiry into Science – Identify the body parts."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song to touch students' head, shoulders, knees, toes."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 3-4_U3_LP13 _My body 1"
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. “<i>Hello.</i>” Wave at students and encourage them to wave back to you as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with the sentence “<i>Nice to meet you __</i>” and ask students to repeat this sentence."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Head, Shoulders, Knees, and Toes”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song."
                                    },
                                    {
                                        "text": "Teacher(s) says: <i>“We will sing a song about our body parts today”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“Head, Shoulders, Knees, and Toes”</b> and pause at the words (<b>head, shoulders, knees, toes</b>), make actions and encourage students to dance along.",
                                        "list": [
                                            {
                                                "text": "<b>Head:</b> touch your head."
                                            },
                                            {
                                                "text": "<b>Shoulders:</b> touch your shoulders."
                                            },
                                            {
                                                "text": "<b>Knees:</b> touch your knees."
                                            },
                                            {
                                                "text": "<b>Toes:</b> touch your toes."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and have the students to make the actions along the video."
                                    },
                                    {
                                        "text": "When the song finishes, teacher(s) may point and say: “<i>This is/They are my _____ (head/shoulders/knees/toes)</i>”."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Head, Shoulders, Knees, and Toes” storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson (head, shoulders, knees and toes)."
                                    },
                                    {
                                        "text": "Play the storybook “Head, shoulders, knees and toes” and ask students to listen to the story."
                                    },
                                    {
                                        "text": "Play the storybook again. Teacher reads the story and pauses at the keywords (head, shoulders, knees and toes), points to his/her body parts and asks students to repeat the words."
                                    },
                                    {
                                        "text": "Review the keywords:",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book and stops at a random page contain the day’s keywords. "
                                            },
                                            {
                                                "text": "Point to an image. Have students copy the character (e.g., touch your toes)."
                                            },
                                            {
                                                "text": "Encourage students to say the keyword."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Call on students to repeat keywords, correct their pronunciation if necessary."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<strong>Keywords - My body 1 & Voice</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image Slider - Head, Shoulders, Knees and Toes.</strong>",
                                "list": [
                                    {
                                        "text": "Teacher opens the pictures and asks students to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<strong>Matching - Head, shoulders, knees and toes.</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and match the keywords with the pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Tracing - My body 1.</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and draw a line from one dot to the other."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Memory Game - Head, Shoulders, Knees and Toes.</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Coloring - head</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and color the word: head."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again <strong>“Head, shoulders, knees and toes”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say goodbye to their peers and to the teacher"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 3: BẢN THÂN BÉ",
            "lesson_name": "BÀI 13: CƠ THỂ BÉ 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học về các bộ phận cơ thể; đầu, vai, đầu gối và ngón chân;"
                    },
                    {
                        "text": "Phát triển kỹ năng nghe và nói."
                    },
                    {
                        "text": "Phát triển các kỹ năng phát triển khác:",
                        "list": [
                            {
                                "text": "<strong>Phát triển nhận thức:</strong> kiến thức về khoa học – Xác định các bộ phận cơ thể "
                            },
                            {
                                "text": "<strong>Kỹ năng vận động thô:</strong> di chuyển theo bài hát đồng thời chạm tay vào đầu, vai, đầu gối và các ngón chân."
                            },
                            {
                                "text": "<strong>Kỹ năng vận động tinh:</strong> trò chơi tương tác."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    {
                        "text": "KidsLoop CMS: 3-4_U3_LP13_My body 1"
                    }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh “<i>Xin chào</i>”. Vẫy tay với học sinh và khuyến khích các con chào lại cũng như lặp lại lời chào."
                                    },
                                    {
                                        "text": "Trả lời với câu <i>“Rất vui được gặp các con__”</i> và yêu cầu học sinh lặp lại câu này."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“Head, Shoulders, Knees, and Toes”<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Giáo viên nói: “<i>Hôm nay chúng ta sẽ hát một bài hát về các bộ phận cơ thể của chúng ta</i>”."
                                    },
                                    {
                                        "text": "Phát bài hát: “Head, Shoulders, Knees, and Toes”, dừng ở các từ (<b>cái đầu, vai, gối, ngón chân</b>), và làm động tác và khuyến khích học sinh làm theo.",
                                        "list": [
                                            {
                                                "text": "<b>Head:</b> tay chạm đầu."
                                            },
                                            {
                                                "text": "<b>Shoulders:</b> tay chạm vai."
                                            },
                                            {
                                                "text": "<b>Knees:</b> tay chạm đầu gối."
                                            },
                                            {
                                                "text": "<b>Toes:</b> tay chạm ngón chân."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lại lần nữa và để học sinh làm động tác theo bài hát."
                                    },
                                    {
                                        "text": "Khi bài hát kết thúc, giáo viên có thể chỉ vào một bộ phận và nói: “<i>Đây là ______ (đầu/vai/gối/ngón chân) của cô.</i>"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“Head, Shoulders, Knees, and Toes.”<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Giới thiệu chủ đề và từ vựng của bài học (<b>cái đầu, vai, gối và ngón chân</b>)."
                                    },
                                    {
                                        "text": "Mở truyện “Head, shoulders, knees and toes” và yêu cầu học sinh lắng nghe truyện."
                                    },
                                    {
                                        "text": "Mở truyện lại lần nữa. Giáo viên đọc truyện và dừng ở từ vựng (cái đầu, vai, gối và ngón chân), chỉ vào bộ phận cơ thể và yêu cầu học sinh lặp lại từ."
                                    },
                                    {
                                        "text": "Ôn lại các từ vựng.",
                                        "list": [
                                            {
                                                "text": "Giáo viên lật sách và dừng lại ở một trang ngẫu nhiên."
                                            },
                                            {
                                                "text": "Chỉ vào một hình ảnh. Đề nghị các học sinh bắt chước hành động nhân vật (ví dụ: chạm vào các ngón chân)."
                                            },
                                            {
                                                "text": "Khuyến khích các học sinh nói các từ vựng quan trọng đã học."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Gọi các học sinh lặp lại các từ vựng quan trọng."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            {
                                "title": "Củng cố từ vựng"
                            },
                            {
                                "text": "<strong>Từ vựng – Cơ thể của bé 1 và âm thanh</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào các bức tranh để lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Hình trượt – Cơ thể của bé 1 và âm thanh</strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các bức tranh và yêu cầu học sinh lắng nghe và lặp lại từ vưng học sinh nói từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "title": "Trò chơi tương tác"
                            },
                            {
                                "text": "<strong>Ghép - Đầu, vai, gối, ngón chân</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và ghép từ vựng với hình ảnh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Đồ - Cơ thể của bé</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và vẽ 1 đường thẳng từ điểm này đến điểm khác. "
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Trò chơi trí nhớ - Đầu, vai, gối, ngón chân</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và lật 2 tấm thẻ để tìm cặp hình ảnh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Tô màu – Từ “cái đầu” </strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và tô màu từ: cái đầu."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Phát lại bài hát <strong>“Head, Shoulders, Knees, and Toes”</strong>."
                                    },
                                    {
                                        "text": "Yêu cầu các học sinh dọn dẹp lớp học."
                                    },
                                    {
                                        "text": "Tạm biệt các học sinh."
                                    },
                                    {
                                        "text": "Yêu cầu các học sinh nói tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}

            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: circle, triangle, rectangle, square, oval, diamond, heart, star."
                    },
                    { "text": "Develop speaking and listening skills." },
                    { "text": "Learn the structure: It is a …" },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development: </strong> basic Math concepts – identify shapes."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong>movement following the song, raise 2 arms and make a circle, raise 2 hands, put 2 arms in front of the chest and parallel the chest, jump up and down."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",

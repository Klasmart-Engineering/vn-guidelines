    "content": [
        {
            "lang": "en",
            "unit": "UNIT 4: PROFESSION",
            "lesson_name": "LESSON 27: CONSTRUCTION 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn vocabulary of construction: light, door, window, replace, paint."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> students know how to solve specific problems."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, wink, jump up and down, turn around, hop to the right, sit down."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 5-6_U4_LP27_Construction 3" }]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher welcomes to the class and asks students some questions:",
                                        "list": [
                                            {
                                                "text": "<i>Hello! How are you? &#x02192; I am fine /good / great."
                                            },
                                            {
                                                "text": "<i>Have you had breakfast? &#x02192; Yes, I have."
                                            },
                                            {
                                                "text": "<i>Do you want to become a constructor? &#x02192; Yes, I do."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher elicits the keywords for students and corrects their answer."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "Chant “Movie magic”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song"
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about construction”</i>."
                                    },
                                    {
                                        "text": "Play the first part of the song <b>“Movie magic”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the second part song where the lyric is repeated, pause at the keywords <b>(light, door, window, replace, paint)</b> and have students stand up and practice the actions as below:",
                                        "list": [
                                            {
                                                "text": "<b>Door: </b>jump up and down."
                                            },
                                            { "text": "<b>Light:</b> wink." },
                                            {
                                                "text": "<b>Paint:  </b>sit down."
                                            },
                                            {
                                                "text": "<b>Replace:</b> hop to the right."
                                            },
                                            {
                                                "text": "<b>Window:</b> turn around."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again. Have the students make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "Board book “Movie magic”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(light, door, window, replace, paint)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the storybook “<b>Movie magic</b>” and asks students to listen to the story."
                                    },
                                    {
                                        "text": "Teacher plays the storybook again, pauses at each page from 7 to 13, teacher reads and teaches the keywords <b>(light, door, window, replace, paint)</b>."
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "At page 7: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>(Point to the picture) What is this? &#x02192; This is a door / window.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Will glass doors make the theater brighter? &#x02192; Yes, they will.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keywords: <B>door, window</b>."
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same in the next pages."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a game to review the keywords",
                                        "list": [
                                            {
                                                "text": "Teacher flips through the book and stops at a random page containing the day’s keywords <b>(light, door, window, replace, paint)</b>."
                                            },
                                            {
                                                "text": "Point to the pictures and ask students to say the keywords."
                                            },
                                            {
                                                "text": "Teacher asks students to repeat the keywords several times and corrects their pronunciation."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher asks students a question after reading the book.",
                                        "list": [
                                            {
                                                "text": "<i>What do you do if you are a constructor? &#x02192;I build a house / I paint a house/ etc.</i>"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Course Presentation - Light, Door, Window, Replace, Paint</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Card slider - Light, Door, Window, Replace, Paint</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcard, asks students to look at the pictures, listen and repeat the keywords.  "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation. "
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Light, Door, Window, Replace, Paint </strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Arrange “PAINT”</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and arrange the letters in correct order."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Arrange “DOOR”</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and arrange the letters in correct order."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Match the correct words - Construction 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures, choose the correct words and match it with the pictures."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Movie magic”</strong>"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 4: NGHỀ NGHIỆP  ",
            "lesson_name": "BÀI 27:  XÂY DỰNG 3.",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng về xây dựng: đèn, cửa ra vào, cửa sổ, thay thế, sơn."
                    },
                    { "text": "Phát triển kĩ năng nghe và nói." },
                    {
                        "text": "Phát triển các kĩ năng khác: ",
                        "list": [
                            {
                                "text": "<strong>Giáo dục phát triển nhận thức: </strong> học sinh biết cách giải quyết các vấn đề cụ thể."
                            },
                            {
                                "text": "<strong>Kĩ năng vận đông thô:  </strong> vận động theo bài hát, chớp mắt, nhảy lên và xuống, quay vòng tròn, nhảy sang phải, ngồi xuống."
                            },
                            {
                                "text": "<strong>Kĩ năng vận động tinh:</strong> trò chơi tương tác"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    { "text": "KidsLoop CMS: 5-6_U4_LP27_Construction 3." }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Giáo viên chào đón các học sinh vào lớp học và hỏi học sinh vài câu hỏi:",
                                        "list": [
                                            {
                                                "text": "<i>Xin chào! Các con có khỏe không? &#x02192; Con khỏe / tốt / tuyệt."
                                            },
                                            {
                                                "text": "<i>Các con căn sáng chưa? &#x02192; Rồi, con ăn rồi."
                                            },
                                            {
                                                "text": "<i>Các con có muốn trở thành người xây dựng không? &#x02192; Có, con muốn"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Giáo viên gợi ý từ vựng cho học sinh và sửa đáp án cho học sinh."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "Chant “Movie magic”<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Giáo viên nói: <i>“Hôm nay chúng ta sẽ nghe một bài hát về ngành xây dựng.”</i>"
                                    },
                                    {
                                        "text": "Mở phần đầu của bài hát <b>“Movie magic”</b> và nói học sinh lắng nghe bài hát."
                                    },
                                    {
                                        "text": "Mở phần thứ 2 của bài hát nơi lời bài hát lặp lại, dừng ở từ vựng <b>(đèn, cửa ra vào, cửa sổ, thay thế, sơn)</b> và cho học sinh đứng lên và luyện tập các động tác bên dưới:",
                                        "list": [
                                            {
                                                "text": "<b>Light: </b> chớp mắt."
                                            },
                                            {
                                                "text": "<b>Door:  </b> nhảy lên và xuống."
                                            },
                                            {
                                                "text": "<b>Window:  </b> quay vòng tròn."
                                            },
                                            {
                                                "text": "<b>Replace:</b> nhảy lò cò về bên phải"
                                            },
                                            {
                                                "text": "<b>Paint:</b> ngồi xuống."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa. Để học sinh làm hành động theo bài hát. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "Board book “Movie magic”<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Giới thiệu chủ đề và từ vựng quan trọng của bài học <b>(đèn, cửa ra vào, cửa sổ, thay thế, sơn)</b>."
                                    },
                                    {
                                        "text": "Giáo viên mở sách <b>“Movie magic”</b> và nói học sinh lắng nghe truyện."
                                    },
                                    {
                                        "text": "Giáo viên mở sách lại lần nữa, dừng ở từng trang từ trang 7 đến trang 13, giáo viên đọc và dạy từ vựng <b>(đèn, cửa ra vào, cửa sổ, thay thế, sơn)</b>."
                                    },
                                    {
                                        "text": "Ví dụ:",
                                        "list": [
                                            {
                                                "text": "Ở trang 7: Chỉ vào bức tranh và hỏi.",
                                                "list": [
                                                    {
                                                        "text": "<i>(Chỉ vào bức tranh) Đây là cái gì? &#x02192; Đây là cửa ra vào / cửa sổ</i>."
                                                    },
                                                    {
                                                        "text": "<i>Cửa ra vào bằng kính sẽ làm cho ra nhà hát sáng hơn không? &#x02192; Có, nó sẽ làm cho nhà hát sáng lên."
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Cho học sinh lặp lại từ vựng: <b>cửa ra vào, cửa sổ</b>."
                                            },
                                            {
                                                "text": "Nói học sinh lặp lại từ vựng đồng thanh và cá nhân vài lần và sửa phát âm của học sinh."
                                            },
                                            {
                                                "text": "Làm tương tự ở các trang tiếp theo."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Chơi trò chơi để ôn tập từ vựng.",
                                        "list": [
                                            {
                                                "text": "Giáo viên lật sách và dừng ở trang bất kì có chứa từ vựng <b>(đèn, cửa ra vào, cửa sổ, thay thế, sơn)</b>."
                                            },
                                            {
                                                "text": "Chỉ vào bức tranh và nói học sinh đọc từ vựng."
                                            },
                                            {
                                                "text": "Giáo viên nói học sinh lặp lại từ vựng vài lần và sửa phát âm của học sinh."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Sau khi đọc xong sách, giáo viên đặt câu hỏi cho học sinh.",
                                        "list": [
                                            {
                                                "text": "<i>Các con làm gì nếu con là một người xây dựng?  &#x02192; Con xây nhà / con sơn nhà /…</i>"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            { "title": "Củng cố từ vựng" },
                            {
                                "text": "<strong>Course Presentation - Light, Door, Window, Replace, Paint</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào hình ảnh để lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Card slider - Light, Door, Window, Replace, Paint</strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào bức tranh, lắng nghe và lặp lại từ vựng. "
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<strong>Memory game - Light, Door, Window, Replace, Paint </strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và lật 2 tấm thẻ để tìm cặp hình ảnh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Arrange “PAINT”</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào bức tranh và sắp xếp chữ cái theo đúng thứ tự."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Arrange “DOOR”</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào bức tranh và sắp xếp chữ cái theo đúng thứ tự."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Match the correct words - Construction 2 </strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào bức tranh, chọn từ đúng và ghép nó với bức tranh. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Mở lại bài hát <b>“Movie magic”</b>."
                                    },
                                    {
                                        "text": "Yêu cầu học sinh dọn dẹp lớp học."
                                    },
                                    { "text": "Tạm biệt học sinh." },
                                    {
                                        "text": "Yêu cầu học sinh nói tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}

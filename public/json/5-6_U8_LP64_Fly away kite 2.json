    "content": [
        {
            "lang": "en",
            "unit": "UNIT  8: WEATHER, SEASONS & ENVIRONMENT",
            "lesson_name": "LESSON 64: FLY AWAY KITE 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: kite, up, down, windy, fly, tree, stuck, hill, climb."
                    },
                    { "text": "Develop speaking and listening skills" },
                    {
                        "text": "Develop the other skills",
                        "list": [
                            {
                                "text": "<b>Cognitive development:</b> students know how to solve the problems together."
                            },
                            {
                                "text": "<b>Gross motor skills:</b> movement following the song, run on the spot, turn around, clap the hands, raise 2 hands up. "
                            },
                            {
                                "text": "<b>Fine motor skills:</b> interactive games"
                            },
                            {
                                "text": "<b>Aesthetic development:</b> develop creative through art activities, make a kite."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 5-6_U8_LP64_Fly away kite 2" },
                    {
                        "text": "Handout, crayons, craft sticks (1cm x 15cm), craft sticks (1cm x 6cm), glue, pieces of wool (the length 30cm)."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning/afternoon”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>, encourage students to reply back with <i>“I am ___ (good)”</i>. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Rise and shine” Video song<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song.  "
                                    },
                                    {
                                        "text": "Play the song <b>“Rise and shine”</b>, pause at the vocabulary  <b>(come and play, rise and shine, the sun, up)</b> and review the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Come and play: </b> run on the spot."
                                            },
                                            {
                                                "text": "<b>Rise and shine: </b> turn around."
                                            },
                                            {
                                                "text": "<b>The sun: </b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Up: </b> raise 2 hands up."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Fly away kite” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Ask students to read the title of the story <b>“Fly Away Kite”</b>."
                                    },
                                    {
                                        "text": "Go through the book <b>“Fly away kite”</b>, just look at the pictures and ask students some questions."
                                    },
                                    {
                                        "text": "Example: ",
                                        "list": [
                                            { "text": "<i>What is it?</i>" },
                                            {
                                                "text": "<i>Who flies the kite?</i>"
                                            },
                                            {
                                                "text": "<i>What is happening here?</i>"
                                            },
                                            {
                                                "text": "<i>How do you think the characters will get their kite?</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the storybook <b>“Fly away kite”</b> and asks students to listen to the story. The teacher pauses at keywords <b>(kite, up, down, windy, fly, tree, stuck, hill, climb)</b> and reviews the keywords."
                                    },
                                    {
                                        "text": "Ask students to repeat the words."
                                    },
                                    {
                                        "text": "Teacher instructs students to read the story sentence by sentence."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<b>Keywords - Fly Away Kite 1</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Keywords - Fly Away Kite 2</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<b>Memory game - Fly away kite 2</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of the pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Find the words - Windy, Fly, Stuck, Climb</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and draw the lines to find the words."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Trace & Match - Fly away kite</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and draw the lines to match the keywords with the correct pictures."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM activity: <b>Make a kite</b>",
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a handout, crayons, 2 craft stick (1cm x 15cm), 1 craft stick (1cm x 6cm), glue, a piece of wool (the length 30cm) for each student."
                                    }
                                ]
                            },
                            {
                                "text": "<u>How to do</u>",
                                "list": [
                                    {
                                        "text": "Teacher helps students cut out the templates in the handout."
                                    },
                                    {
                                        "text": "Use the crayons to color the templates.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Kite-1-e1623054711487.jpg\"width=\"200\" height=\"200\">"
                                    },
                                    {
                                        "text": "Use a glue to stick the craft sticks into the kite. Look at the picture below.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Kite-2-e1623054769512.jpg\"width=\"150\" height=\"200\">"
                                    },
                                    {
                                        "text": "Stick the bow shapes into the string and then stick this string into the kite.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Kite-3.png\"width=\"250\" height=\"200\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“Rise and shine”</b> song as you have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students. Encourage them to wave back to you as they also say, <i>“Goodbye.”</i>"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },

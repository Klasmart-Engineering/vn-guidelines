            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary about bugs: worm, snail, spider, butterfly, caterpillar."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Learn the structure: <i>What is this ____ called? -> ___ is a bug</i>."
                    },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> inquiry into science – Know the characteristics of the bugs."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, clap the hands, shake the body, jump up, turn around, put 2 hands on hips."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 4-5_U6_LP43_Bugs 1" }]

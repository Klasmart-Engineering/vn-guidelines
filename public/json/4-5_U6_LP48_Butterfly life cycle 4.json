        {
            "lang": "en",
            "unit": "UNIT 6: ANIMALS AND PLANTS WOLRD",
            "lesson_name": "LESSON 48: BUTTERFLY LIFE CYCLE 4",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn vocabulary: caterpillar, butterfly, wings, breeze"
                    },
                    { "text": "Develop speaking and listening skills" },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive development:</strong> know the life cycle of the butterfly."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song, turn around, spread 2 arms, shake the body."
                            },
                            {
                                "text": "<strong>Aesthetic development: </strong> develop creative through art activities, make a caterpillar."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 4-5_U6_LP48_Butterfly life cycle 4"
                    },
                    {
                        "text": "Handout, pipe cleaner, pom poms, white glue, colored marker"
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Hello. How are you?”</i>. Encourage them to repeat and ask the teacher, <i>“How are you?”</i>. Model the response, <i>“I’m good”</i> and give a thumbs up."
                                    },
                                    {
                                        "text": "Use the greeting <i>“Nice to see you again, ___.”</i> and encourage students to repeat the greeting."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Little butterfly”<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song <b>“Little butterfly”</b>, pause at the words  <b>(butterfly, wings, breeze)</b> and review the actions as below:",
                                        "list": [
                                            {
                                                "text": "<b>Butterfly:</b> turn around."
                                            },
                                            {
                                                "text": "<b>Wings:</b> spread 2 arms and wave."
                                            },
                                            {
                                                "text": "<b>Breeze:</b> shake the body."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Bada and the Squirrel” Storybook”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson <b>(caterpillar, butterfly)</b>."
                                    },
                                    {
                                        "text": "Play the story book <b>“Bada and the squirrel”</b>  from page 1 to 5, ask students to listen to the story."
                                    },
                                    {
                                        "text": "Teacher points to the pictures and ask students some questions",
                                        "list": [
                                            {
                                                "text": "<i>What animals / plants do you see?</i>"
                                            },
                                            {
                                                "text": "<i>Where does the __(animal name) live?</i>"
                                            },
                                            {
                                                "text": "<i>What sound does the ___(animal name) make?</i>"
                                            },
                                            {
                                                "text": "<i>Do you remember what butterflies are? Are they mammals / birds / bug ?</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the story again, ask students to listen, pause at the keywords and ask them repeat the keywords."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Butterfly life cycle 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite student to come to the board, click on the picture or keywords and asks students to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Butterfly life cycle 2</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Arrange stickers - Caterpillar, Butterfly</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, drag the stickers in the correct order to complete the words."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do (steam activities)",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM Activity: <strong>Make a caterpillar</strong>"
                            },
                            {
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a handout, pom poms, white glue, 2 pieces of pipe cleaner, colored markers for each student."
                                    }
                                ]
                            },
                            { "text": "<u>How to do:</u>" },
                            {
                                "list": [
                                    {
                                        "text": "Teacher help students to cut out the pipe cleaner into small pieces (the length 2cm)."
                                    },
                                    {
                                        "text": "Use colored marker to draw the eyes into a pom-pom to make the head of caterpillar.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Caterpillar-1-e1622685153274.jpg\"width=\"150\">"
                                    },
                                    {
                                        "text": "Use a white glue to stick a head into the end of the leaf in the handout.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Caterpillar-2.jpg\"width=\"150\">"
                                    },
                                    {
                                        "text": "Stick 5 or 6 pom poms into the leaf to make a segmented caterpillar.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Caterpillar-3.jpg\"width=\"150\">"
                                    },
                                    {
                                        "text": "Curve out 2 pieces of pipe cleaner and stick it into the head of the caterpillar.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Caterpillar-4.jpg\"width=\"150\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Little butterfly”</strong> again"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Source",
                            "text": "<i></i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "https://www.shutterstock.com/image-vector/illustration-isolated-colorful-black-white-leaves-250941271"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

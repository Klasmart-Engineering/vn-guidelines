    "content": [
        {
            "lang": "en",
            "unit": "UNIT 5: MATHEMATICS",
            "lesson_name": "LESSON 34: SHAPES 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: circle, triangle, rectangle, square, oval, diamond, heart, star."
                    },
                    { "text": "Develop speaking and listening skills" },
                    { "text": "Learn the structure: It is a …" },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive development:</strong> basic Math concepts – Identify the shapes."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song, raise 2 arms and make a circle, raise 2 hands, put 2 arms in front of the chest and parallel the chest, jump up and down."
                            },
                            {
                                "text": "<strong>Aesthetic development: </strong> develop creative through art activities, make the shapes from the pipe cleaners."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 4-5_U5_LP34_Shapes 2" },
                    { "text": "Pipe cleaners." }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Hello. How are you?”</i>. Encourage them to repeat and ask the teacher, <i>“How are you?”</i>. Model the response, <i>“I’m good”</i> and give a thumbs up."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Shape song” Song<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song <b>“Shape song”</b> pause at keywords <b>(circle, triangle, rectangle, square, oval, diamond, heart, star)</b> and review the actions.",
                                        "list": [
                                            {
                                                "text": "<b>Circle: </b> raise 2 arms and make a circle."
                                            },
                                            {
                                                "text": "<b>Square:  </b> raise 2 hands."
                                            },
                                            {
                                                "text": "<b>Rectangle:  </b> put 2 arms in front of the chest and parallel the chest."
                                            },
                                            {
                                                "text": "<b>Triangle:  </b> jump up and down."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and have the students make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“My shapes” Storybook”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson <b>(circle, triangle, rectangle, square, oval, diamond, heart, star)</b> and extra vocabulary <b>(candy, ice cream cone, bus, picture, penguin, kite, love, wish)</b>."
                                    },
                                    {
                                        "text": "Play the book <b>“My shapes”</b>, just look at the pictures, point to the pictures and ask students.",
                                        "list": [
                                            {
                                                "text": "<i>What shape is it?</i>"
                                            },
                                            { "text": "<i>What is it?</i>" }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the book <b>“My shapes”</b>, points to the keywords, asks students to listen and repeat the words. "
                                    },
                                    {
                                        "text": "Play the book again. Teacher calls out the words and students point to the correct pictures"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>BG_Course Presentation - Shape Song 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the shapes to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Shape song 2</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, invites students to look at the shapes and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching - Oval, Diamond, Heart, Star</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, match the keywords with the correct images."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do (steam activities)",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM Activity: <strong>Make shapes from the pipe cleaners</strong>"
                            },
                            {
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares 8 pipe cleaners for each student."
                                    }
                                ]
                            },
                            { "text": "<u>How to do:</u>" },
                            {
                                "list": [
                                    {
                                        "text": "Teacher instructs students to fold the pipe cleaners and makes the shapes. Look at the picture below. <img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Shape-1-e1622177267141.jpg\"width=\"200\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Shape song”</strong> again"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 5: TOÁN HỌC CỦA BÉ",
            "lesson_name": "BÀI 34: HÌNH HỌC 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng: hình tròn, hình tam giác, hình chữ nhật, hình vuông, hình bầu dục, hình thoi, hình trái tim, hình ngôi sao."
                    },
                    { "text": "Phát triển kĩ năng nghe và nói. " },
                    { "text": "Học cấu trúc câu: Nó có hình …" },
                    {
                        "text": "Phát triển các kĩ năng khác:",
                        "list": [
                            {
                                "text": "<strong>Phát triển nhận thức: </strong> làm quen với một số khái niệm sơ đẳng về toán học – Xác định hình học."
                            },
                            {
                                "text": "<strong>Phát triển thể chất: </strong>vận động theo bài hát, giơ hai cánh tay lên làm thanh hình tròn, giơ 2 tay lên, đặt 2 cánh tay về phía trước và song song với ngực, nhảy lên và xuống."
                            },
                            {
                                "text": "<strong>Phát triển thẩm mỹ:  </strong> thể hiện sự sáng tạo khi tham gia các hoạt động nghệ thuật, làm hình học từ cây rửa ống hút."
                            },
                            {
                                "text": "<strong>Kỹ năng vận động tinh:</strong> trò chơi tương tác"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    { "text": "KidsLoop CMS: 4-5_U5_LP34_Shapes 2" },
                    { "text": "Cây rửa ống hút" }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh <i>“Xin chào. Các con có khỏe không?”</i>. Khuyến khích học sinh lặp lại và hỏi giáo viên, <i>“Thầy cô có khỏe không?”</i>. Trả lời mẫu, <i>“Cô / thầy khỏe”</i> và đưa ngón tay cái lên."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“Shape song” Song<br/><i>5 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát <b>“Shape song”</b>, dừng ở các từ vựng <b>(hình tròn, hình tam giác, hình chữ nhật, hình bầu dục, hình thoi, hình trái tim, hình ngôi sao)</b> và ôn tập các động tác bên dưới:",
                                        "list": [
                                            {
                                                "text": "<b>Circle: </b> giơ 2 cánh tay lên làm hình tròn."
                                            },
                                            {
                                                "text": "<b>Square:  </b> giơ hai tay lên."
                                            },
                                            {
                                                "text": "<b>Rectangle:  </b> đặt 2 cánh tay trước ngực và song song với ngực."
                                            },
                                            {
                                                "text": "<b>Triangle:  </b> nhảy lên và xuống."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa và để học sinh làm hành động theo bài hát. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“My shapes” Storybook<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Ôn tập từ vựng của bài học <b>(hình tròn, hình tam giác, hình chữ nhật, hình bầu dục, hình thoi, hình trái tim, hình ngôi sao)</b> và các từ phụ <b>(kẹo, kem ốc quế, xe buýt, bức tranh, chim cánh cụt, con diều, tình yêu thương, điều mong ước)</b>."
                                    },
                                    {
                                        "text": "Mở sách <b>“My shapes”</b>, chỉ nhìn vào các bức tranh, chỉ vào bức tranh và hỏi học sinh.",
                                        "list": [
                                            {
                                                "text": "<i>Đây là hình gì?</i>"
                                            },
                                            { "text": "<i>Đây là cái gì?</i>" }
                                        ]
                                    },
                                    {
                                        "text": "Giáo viên mở sách <b>“My shapes”</b>, chỉ vào từ vựng, yêu cầu học sinh lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Mở sách lại lần nữa. Giáo viên đọc từ và học sinh chỉ vào hình đúng."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>5 phút</i>"
                        },
                        "right_content": [
                            { "title": "Củng cố từ vựng" },
                            {
                                "text": "<strong>BG_Course Presentation - Shape Song 2</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào các hình học để lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh. "
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<strong>Flashcards - Shape song 2</strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào hình học và đọc từ."
                                    },
                                    {
                                        "text": "Thu âm giọng đọc của học sinh và kiểm tra kết quả."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching - Oval, Diamond, Heart, Star</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, ghép từ vựng với hình đúng. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hoạt động khoa học nghệ thuật",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            {
                                "text": "Hoạt động Khoa học – Nghệ thuật:<strong> Tạo hình từ cây rửa ống hút</strong>."
                            },
                            {
                                "list": [
                                    { "text": "Làm cá nhân." },
                                    {
                                        "text": "Giáo viên chuẩn bị 8 cây rửa ống hút cho từng học sinh."
                                    }
                                ]
                            },
                            { "text": "<u>Cách làm: </u>" },
                            {
                                "list": [
                                    {
                                        "text": "Giáo viên hướng dẫn học sinh gấp cây rửa ống hút và tạo các hình. Nhìn vào các bức tranh bên dưới.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Shape-1-e1622177267141.jpg\"width=\"200\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Mở lại bài hát  <b>“Shape song”</u>"
                                    },
                                    {
                                        "text": "Yêu cầu học sinh dọn dẹp lớp học."
                                    },
                                    { "text": "Tạm biệt học sinh." },
                                    {
                                        "text": "Yêu cầu học sinh nói cảm ơn, tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}

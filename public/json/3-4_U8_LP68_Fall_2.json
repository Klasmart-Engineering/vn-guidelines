    "content": [
        {
            "lang": "en",
            "unit": "UNIT  8: WEATHER, SEASONS & ENVIRONMENT",
            "lesson_name": "LESSON 68: FALL 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: leave, fall, tree, jump."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development: </strong> know about the characteristics of the fall."
                            },
                            {
                                "text": "<strong>Aesthetic development: </strong> develop creative through art activities, color the picture."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, shake the body, stomp the feet, turn around, sit down, clap the hands."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 3-4_U8_LP68_Fall 2." },
                    { "text": "Handout, crayon." }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students “<i>Hello, how are you</i>”. Wave at students and encourage them to wave back to you as they greet back to you <i>“Hello, I’m _____ (good, bad, fine, etc.). Thank you.”</i?"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Months of the year” Video song <br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song. "
                                    },
                                    {
                                        "text": "Play the song <b>“Months of the year”</b>, pause at the vocabulary (<b>winter time, spring, summer time, fall, leave</b>) and review the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Winter time: </b> shake the body."
                                            },
                                            {
                                                "text": "<b>Spring:</b> stomp the feet."
                                            },
                                            {
                                                "text": "<b>Summer time: </b> turn around."
                                            },
                                            {
                                                "text": "<b>Fall: </b> sit down."
                                            },
                                            {
                                                "text": "<b>Leave: </b> clap the hands."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“The best season” storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords (<b>leave, fall, tree, jump</b>)."
                                    },
                                    {
                                        "text": "Teacher plays the story book <b>“The best season”</b> in page 4, just looks at the picture and asks students."
                                    },
                                    {
                                        "text": "For example:",
                                        "list": [
                                            {
                                                "text": "<i>What do you see? &#x02192; I see the leaves.</i>"
                                            },
                                            {
                                                "text": "<i>What color are the leaves? &#x02192; The leaves are yellow / orange.</i>"
                                            },
                                            {
                                                "text": "<i>What season is it? &#x02192; It is Fall.</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the book again, asks students to listen, pause at the keywords (<b>leave, fall, tree, jump</b>) and asks students to repeat the keywords."
                                    },
                                    {
                                        "text": "Practice speaking with structure <i>“What is your favorite season? &#x02192; My favorite season is ____”."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Fall</strong>",
                                "list": [
                                    {
                                        "text": "Invite student to come to the board, click on the pictures and asks students to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Fall, Leaves, Tree, Jump</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the answer - Fall, Leaves, Tree, Jump</strong>",
                                "list": [
                                    {
                                        "text": "Invite student to come to the board, look at the images, play the audio button to listen and choose the correct answers."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>STEAM activity: Color the picture</b>",
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a handout and crayons for each student."
                                    },
                                    {
                                        "text": "How to do:",
                                        "list": [
                                            {
                                                "text": "Teacher distributes the handout and crayons to student."
                                            },
                                            {
                                                "text": "Ask students to color the picture with the fall season.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/fall-1-e1623300801517.png\">"
                                            },
                                            {
                                                "text": "Teacher points to their picture and asks students questions:",
                                                "list": [
                                                    {
                                                        "text": "<i>What is it?"
                                                    },
                                                    {
                                                        "text": "<i>What season is it?"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“Months of the year”</b> song as you have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students as they leave. Encourage them to wave back to you as they also say, <i>“Goodbye”</i>."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 8: THỜI TIẾT, MÙA VÀ MÔI TRƯỜNG",
            "lesson_name": "BÀI 68: MÙA THU 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng: lá cây, mùa thu, cái cây, nhảy lên.  "
                    },
                    { "text": "Phát triển kĩ năng nghe và nói." },
                    {
                        "text": "Phát triển các kĩ năng khác: ",
                        "list": [
                            {
                                "text": "<strong>Giáo dục phát triển nhận thức: </strong> biết về các đặc điểm của mùa thu."
                            },
                            {
                                "text": "<strong>Giáo dục phát triển thẫm mĩ: </strong> thể hiện sự sáng tạo khi tham gia các hoạt động nghệ thuật, tô màu bức tranh."
                            },
                            {
                                "text": "<strong>Kĩ năng vận đông thô:</strong> vận động theo bài hát, lắc cơ thể, dậm chân, quay vòng tròn, ngồi xuống, vỗ tay."
                            },
                            {
                                "text": "<strong>Kĩ năng vận động tinh:</strong> trò chơi tương tác."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    { "text": "KidsLoop CMS: 3-4_U8_LP68_Fall 2." },
                    { "text": "Bản mẫu, bút màu sáp." }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh “<i>Xin chào, các con khỏe không?  </i>”. Vẫy chào học sinh và khuyến khích các em học sinh vẫy tay chào lại <i>“Xin chào, con ____ (tốt, tệ, khỏe, v.v.). Xin cảm ơn”.</i>"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“Month of the year” <br/><i>5 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát <b>Month of the year</b>, dừng ở các từ vựng (<bmùa đông, mùa xuân, mùa hè, mùa thu, lá cây</b>) và ôn tập các động tác bên dưới:",
                                        "list": [
                                            {
                                                "text": "<b>Wintertime: </b> lắc cơ thể."
                                            },
                                            {
                                                "text": "<b>Spring:</b> dậm chân."
                                            },
                                            {
                                                "text": "<b>Summertime: </b> quay vòng tròn."
                                            },
                                            {
                                                "text": "<b>Fall: </b> ngồi xuống."
                                            },
                                            { "text": "<b>Leave: </b> vỗ tay." }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa, yêu cầu học sinh hát và làm động tác đã tập ở trên theo nhịp điệu và lời bài hát."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“The best season” storybook<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Ôn tập từ vựng (<b>lá cây, mùa thu, cây, nhảy</b>)."
                                    },
                                    {
                                        "text": "Giáo viên mở sách <b>“The best season”</b> ở trang 4, chỉ vào bức tranh và hỏi học sinh."
                                    },
                                    {
                                        "text": "Ví dụ:",
                                        "list": [
                                            {
                                                "text": "<i>Các con thấy cái gì? &#x02192; Con thấy nhiều lá."
                                            },
                                            {
                                                "text": "<i>Lá có màu gì? &#x02192; Lá có màu vàng / cam."
                                            },
                                            {
                                                "text": "<i>Đây là mùa gì? &#x02192; Đó là mùa thu."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Giáo viên mở sách lại lần nữa, yêu cầu học sinh lắng nghe, dừng ở từ vựng (<b>lá cây, mùa thu, cây, nhảy</b>) và yêu cầu học sinh lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên hướng dẫn học sinh luyện nói với cấu trúc <i>“Mùa con thích là mùa gì? &#x02192; Mùa con thích là mùa ___”."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>5 phút</i>"
                        },
                        "right_content": [
                            { "title": "Củng cố từ vựng" },
                            {
                                "text": "<strong>Keywords - Fall</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào các bức tranh và nói học sinh lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<strong>Flashcards - Fall, Leaves, Tree, Jump</strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào hình và đọc từ."
                                    },
                                    {
                                        "text": "Thu âm giọng đọc của học sinh và kiểm tra kết quả."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the answer - Fall, Leaves, Tree, Jump</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào hình ảnh, mở nút âm thanh để lắng nghe và chọn đáp án đúng. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hoạt động",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>Hoạt động Khoa học – Nghệ thuật: Tô màu bức tranh.</b>",
                                "list": [
                                    { "text": "Làm cá nhân." },
                                    {
                                        "text": "Giáo viên chuẩn bị bản mẫu và bút màu sáp cho từng học sinh."
                                    },
                                    {
                                        "text": "Cách làm:",
                                        "list": [
                                            {
                                                "text": "Giáo viên phát bản mẫu và bút màu sáp cho học sinh."
                                            },
                                            {
                                                "text": "Nói học sinh tô màu bức tranh với mùa thu.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/fall-1-e1623300801517.png\">"
                                            },
                                            {
                                                "text": "Giáo viên chỉ vào bức tranh và đặt câu hỏi::",
                                                "list": [
                                                    {
                                                        "text": "<i>Đây là cái gì?"
                                                    },
                                                    {
                                                        "text": "<i>Đây là mùa gì?"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Hát lại bài hát <b>“Months of the year”</b> và yêu cầu học sinh dọn dẹp lớp học và để các vật dụng và đúng vị trí của nó"
                                    },
                                    {
                                        "text": "Vẫy tay chào tạm biệt học sinh và nói <i>“Chào tạm biệt”</i>. Khuyến khích học sinh vẫy tay chào giáo viên và nói <i>“Chào tạm biệt”</i>."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

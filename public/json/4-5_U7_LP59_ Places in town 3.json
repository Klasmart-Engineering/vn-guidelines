    "content": [
        {
            "lang": "en",
            "unit": "UNIT 7: TRAFFIC AND VEHICLES",
            "lesson_name": "LESSON 59: PLACES IN TOWN 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: fire station, hardware store, police station."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> know some places in the community."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, turn around, run on the spot, put hands on the hips, shake the head. "
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 4-5_U7_LP59_Places in town 3" }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning/afternoon”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>, encourage students to reply back with <i>“I am ___ (good)”</i>. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“I’ve been around ” Dance<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about places”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“I’ve been around”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the vocabulary <b>(around, everywhere, police station, hardware store)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Around: </b> turn around."
                                            },
                                            {
                                                "text": "<b>Everywhere:</b> run on the spot."
                                            },
                                            {
                                                "text": "<b>Police station: </b> put hands on the hips."
                                            },
                                            {
                                                "text": "<b>Hardware store: </b> shake the head."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“The Great, Big Hat Mixup” Board book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(fire station, hardware store, police station)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the board book <b>“The great, big hat mixup”</b>, asks students to listen to the story. The teacher pauses at each page from page 7 to 12. The teacher reads the story again and teaches the keywords <b>(fire station, hardware store, police station)</b>."
                                    },
                                    {
                                        "text": "Example: ",
                                        "list": [
                                            {
                                                "text": "At page 7: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What does Jess have? &#x02192; Jess has a Curly’s hat.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Where does Bada go to see Curly? &#x02192; Bada goes to the fire station to see Curly.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keyword: <b>fire station</b>"
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with the next pages."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher instructs students to repeat each sentence of the story."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Places in Town 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image slider - Places in Town 2</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Places in Town 2 </strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Multiple choice - Places in town 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures, play the audio button to listen and choose the correct answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Order stickers - Places in town 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the images and arrange the stickers to complete the words."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Places in town 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and match the keywords with the corrects images."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching - Places in Town Keyword</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and draw the lines to match the images with the keywords."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“I’ve been around”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {

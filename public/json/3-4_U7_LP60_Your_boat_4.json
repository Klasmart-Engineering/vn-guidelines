                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    { "text": "Review keywords: row, boat, stream, dream" },
                    { "text": "Learn addition words: down, gently, merrily." },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development: </strong> Students ask and answer questions."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, sit down, put 2 hands up in front, wave 2 arms in the front, clap the hands."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            },
                            {
                                "text": "<strong>Aesthetic development:</strong> develop creative through art activities, color a picture."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 3-4_U7_LP60_Your boat 4." },
                    { "text": "Handout, crayon." }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students “<i>Hello, how are you?</i>”. Wave at students and encourage them to wave back to you as they greet back to you <i>“Hello, I’m _____ (good, bad, fine, etc.). Thank you.”"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Row, row, row your boat” Video song <br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <b>“Row, row, row your boat”</b>, pause at the keywords (<b>gently down, boat, stream, merrily</b>) and review the actions."
                                    },
                                    {
                                        "text": "On the second play, make actions and encourage students to follow:",
                                        "list": [
                                            {
                                                "text": "<b>Gently down: </b> sit down."
                                            },
                                            {
                                                "text": "<b>Boat:</b> put 2 hands up in front."
                                            },
                                            {
                                                "text": "<b>Stream: </b> wave 2 arms in the front."
                                            },
                                            {
                                                "text": "<b>Merrily: </b> clap the hands."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again, have students sing and move along to the song using the actions above."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Row, row, row your boat” Story book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the book and ask students to read the title of the book <b>“Row, row, row your boat”</b>."
                                    },
                                    {
                                        "text": "Review the words (<b>row, boat, stream, dream, down, gently, merrily</b>)"
                                    },
                                    {
                                        "text": "Play the book and ask students to touch the words on the screen, ask students to say the words by structure <i>“Here is___”</i>."
                                    },
                                    {
                                        "text": "Play the book again, ask students to listen the story, pause at the words (<b>row, boat, stream, dream, down, gently, merrily</b>) and ask students to repeat the words."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keyword - Your boat 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Gently, Down, Merrily</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the answer - gently, down, merrily</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures, play the audio button to listen and choose the correct answers."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>Steam Activity: Color the picture of the scene.</b>",
                                "list": [
                                    {
                                        "text": "Talk about the image. Have students to count how many ducks and kittens."
                                    },
                                    {
                                        "text": "Have students to color the picture. Before coloring, talk about color that students want to choose to color."
                                    },
                                    {
                                        "text": "Teacher can check comprehension by asking “Where is _____?” and students to answer “Here is _____” and point to the object."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“Row, row, row your boat”</b> song as you have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students as they leave. Encourage them to wave back to you as they also say, <i>“Goodbye”</i>."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

            "unit": "UNIT 6: ANIMALS AND PLANTS WOLRD",
            "lesson_name": "LESSON 52: GARDENING 4",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    { "text": "Learn vocabulary: soil, seed, water, garden." },
                    { "text": "Develop speaking and listening skills" },
                    {
                        "text": "Learn the structure: <i>Plants need ___ to grow.</i>"
                    },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive development:</strong> know what the plants need to grow."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song, sit down, raise thumb down, turn around, run on the spot."
                            },
                            {
                                "text": "<strong>Aesthetic development: </strong> develop creative through art activities, color the picture."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 4-5_U6_LP52_Gardening 4" },
                    { "text": "Handout, crayons" }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Hello. How are you?”</i>. Encourage them to repeat and ask the teacher, <i>“How are you?”</i>. Model the response, <i>“I’m good”</i> and give a thumbs up."
                                    },
                                    {
                                        "text": "Use the greeting <i>“Nice to see you again, ___.”</i> and encourage students to repeat the greeting."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Grow That Corn” Dance<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song <b>“Grow That Corn”</b>, pause at the keywords <b>(soil, seed, water, garden)</b> and review the actions as below:",
                                        "list": [
                                            {
                                                "text": "<b>Soil:</b> sit down."
                                            },
                                            {
                                                "text": "<b>Seed:</b> raise thumb down."
                                            },
                                            {
                                                "text": "<b>Water:</b> turn around."
                                            },
                                            {
                                                "text": "<b>Garden:</b> run on the spot."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Bada and Curly grow corn” Board book”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson <b>(soil, seed, water, garden)</b>."
                                    },
                                    {
                                        "text": "Play the story book <b>“Bada and Curly grow corn”</b>  from page 4 to page 11, just look at the pictures and ask students.",
                                        "list": [
                                            {
                                                "text": "<i>What do Curly and Bada put in the soil?</i>"
                                            },
                                            {
                                                "text": "<i>What they are doing?</i>"
                                            },
                                            {
                                                "text": "<i>What is happening?</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the story book again, asks students to listen to the story. Teacher pauses at the vocabulary <b>(soil, seed, water, garden)</b> and asks students to repeat the vocabulary."
                                    },
                                    {
                                        "text": "Teacher asks students some questions after reading the story.",
                                        "list": [
                                            {
                                                "text": "<i>What does a corn need to grow? &#x02192; A corn needs water / soil to grow?</i>"
                                            },
                                            {
                                                "text": "<i>What do you need to grow? &#x02192; I need food / water / etc. to grow.</i>"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Gardening 2 (4-5)</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Gardening 2 (3-4)</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the answer - Soil, Seed, Water, Garden</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures, play the audio button to listen and choose the correct answers."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do (steam activities)",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM Activity: <strong>Color the garden</strong>"
                            },
                            {
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a handout and crayons for each student."
                                    }
                                ]
                            },
                            { "text": "<u>How to do:</u>" },
                            {
                                "list": [
                                    {
                                        "text": "Teacher distributes a handout and crayons for the students."
                                    },
                                    {
                                        "text": "Use crayons to color the picture.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Garden-1.jpg\"width=\"150\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Grow That Corn”</strong> again"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Source",
                            "text": "<i></i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "https://www.shutterstock.com/image-illustration/childlike-drawing-kids-plant-tree-mountains-1463063018"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

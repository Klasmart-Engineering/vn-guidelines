    "content": [
        {
            "lang": "en",
            "unit": "UNIT 6: ANIMALS AND PLANTS WOLRD",
            "lesson_name": "LESSON 49: GARDENING 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn vocabulary: corn, grow, plant, sunlight;"
                    },
                    {
                        "text": "Learn the structure: “Plants need ___ to grow”;"
                    },
                    {
                        "text": "Develop speaking and listening skills;"
                    },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development: </strong> know what the plants need to grow."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, jump up, clap the hands, shake the body, sit down."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 3-4_U6_LP49_Gardening 1."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students “<i>Hello, how are you?</i>”. Encourage them to repeat and ask the teacher, “<i>How are you?</i>”. Model the response, “<i>I’m good</i>” and give a thumb up."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Chant: Bada and Curly grow corn” <br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song."
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about growing corn”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“Chant: Bada and Curly grow corn”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the keywords (<b>corn, grow, plant, sunlight</b>) and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Grow: </b> jump up."
                                            },
                                            {
                                                "text": "<b>Corn:</b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Plant: </b> shake the body."
                                            },
                                            {
                                                "text": "<b>Sunlight: </b> sit down."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along to the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Bada and Curly grow corn” Board book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(corn, grow, plant, sunlight)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the Board book “<b>Bada and Curly grow corn</b>”, asks students to listen to the story. Teacher pauses at each page from page 1-4. Teacher reads the story again and teaches the vocabulary (<b>corn, grow, plant, sunlight</b>)."
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "At page 2: Point to the pictures and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What is this?  &#x02192; This is a corn.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Do Bada and Curly love corn?  &#x02192; Yes, they do.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": " Have students to repeat the keyword: <b>corn.</b>"
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same in pages 3 and 4."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Ask students to repeat the story sentence by sentence."
                                    },
                                    {
                                        "text": "Teacher instructs students to practice speaking with the structure: <b>The plants need ___ to grow. ",
                                        "list": [
                                            {
                                                "text": "Example: <i>The plants need <u>sunlight </u>to grow.</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher asks students some questions after reading the story.",
                                        "list": [
                                            {
                                                "text": "<i>What do Bada and Curly grow?  &#x02192; They grow the corn."
                                            },
                                            {
                                                "text": "<i>What does a corn need to grow?  &#x02192; A corn needs sunlight to grow."
                                            },
                                            {
                                                "text": "<i>What do you need to grow?  &#x02192; I need food / water / etc. to grow."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<strong>Keywords - Gardening 1 (3-4)</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Card Slider - Gardening</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<strong>Memory game - Gardening 1 (3-4)</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching - Plant, Corn, Grow</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, tap the audio button to listen and arrange the stickers to complete the words."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching - corn</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture to match the images of corn into the picture."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Coloring – Corn</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, read the word the color the word: corn"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Bada and Curly grown corn”</strong>"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

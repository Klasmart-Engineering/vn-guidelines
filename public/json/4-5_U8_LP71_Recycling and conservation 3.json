            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: bag, recycle, plastic, paper, cup, litter."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> learn different ways of recycling materials."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, sit down, turn around, clap the hands, jump up."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 4-5_U8_LP71_Recycling and conservation 3"

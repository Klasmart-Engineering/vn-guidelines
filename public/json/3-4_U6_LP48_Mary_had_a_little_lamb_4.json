                                            {
                                                "text": "<b>Laugh and play: </b> hop to the left and right."
                                            },
                                            {
                                                "text": "<b>Teacher:</b> put 2 hands on the hips."
                                            },
                                            {
                                                "text": "<b>Wait: </b> sit down."
                                            },
                                            {
                                                "text": "<b>Appear: </b> turn around."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along to the song."
                                    }
                                ]
                            }

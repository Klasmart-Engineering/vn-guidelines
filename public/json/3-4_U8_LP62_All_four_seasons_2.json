    "content": [
        {
            "lang": "en",
            "unit": "UNIT  8: WEATHER, SEASONS & ENVIRONMENT",
            "lesson_name": "LESSON 62: ALL FOUR SEASONS 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: winter, summer, fall, spring."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development: </strong> know about 4 seasons in a year."
                            },
                            {
                                "text": "<strong>Aesthetic development: </strong> develop creative through art activities, make a winter hat."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, wink, clap one time, raise the left hand, raise the right hand."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 3-4_U8_LP62_All four seasons 2." },
                    { "text": "Handout, pom poms, white glue, crayons." }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students, say “<i>Hello</i>”. Wave at students and encourage them to wave back to you as they repeat the greeting."
                                    },
                                    {
                                        "text": "Introduce the topic by explaining to the students that they will be learning about four seasons."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“All four seasons” Video song <br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song."
                                    },
                                    {
                                        "text": "Play the song <b>“All four seasons”</b> pause at the vocabulary (<b>winter, spring, summer, fall</b>) and review the actions as below.",
                                        "list": [
                                            { "text": "<b>Winter: </b> wink." },
                                            {
                                                "text": "<b>Spring:</b> clap one time."
                                            },
                                            {
                                                "text": "<b>Summer: </b> raise the left hand."
                                            },
                                            {
                                                "text": "<b>Fall: </b> raise the right hand."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along to the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“The best season” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson <b>(winter, spring, summer, fall)</b>."
                                    },
                                    {
                                        "text": "Play the book “<b>The best season </b>”, look at the pictures and ask students."
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            { "text": "<i>What is it?</i>" },
                                            { "text": "<i>Where are they?</i>" }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the again, asks students to listen to the story, pauses at the keywords (<b>winter, spring, summer, fall</b>) and asks students to repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher instructs students to read each sentence of the story."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keyword – All Four Seasons</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Winter, Spring, Summer, Fall</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching activities - Winter, Spring, Summer, Fall</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and draw the lines to match the seasons with the activities."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>STEAM activity: Make a winter hat.</b>",
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a handout, some pom poms, white glue and crayons for each student."
                                    },
                                    {
                                        "text": "How to do:",
                                        "list": [
                                            {
                                                "text": "Teacher helps students cut out the template in the handout."
                                            },
                                            {
                                                "text": "Use the crayons to color a hat. <img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/winter-hat-1-e1623060694766.png\">"
                                            },
                                            {
                                                "text": "Use a white glue to stick some pom poms into the hat to make the hat more beautiful. <img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/winter-hat-2-e1623060642540.png\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“All four seasons”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": { "title": "Sources" },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "https://www.shutterstock.com/image-vector/winter-hat-white-pompom-vector-isolated-24510719"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 8: THỜI TIẾT, MÙA VÀ MÔI TRƯỜNG",
            "lesson_name": "BÀI 62: BỐN MÙA 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng: mùa đông, mùa hè, mùa thu, mùa xuân"
                    },
                    { "text": "Phát triển kĩ năng nghe và nói." },
                    {
                        "text": "Phát triển các kĩ năng khác: ",
                        "list": [
                            {
                                "text": "<strong>Giáo dục phát triển nhận thức: </strong> biết về 4 mùa trong năm."
                            },
                            {
                                "text": "<strong>Giáo dục phát triển thẫm mĩ: </strong> thể hiện sự sáng tạo khi tham gia các hoạt động nghệ thuật, làm mũ mùa đông."
                            },
                            {
                                "text": "<strong>Kĩ năng vận đông thô:</strong> vận động theo bài hát, chớp mắt, vỗ tay 1 lần, giơ tay trái lên, giơ tay phải lên."
                            },
                            {
                                "text": "<strong>Kĩ năng vận động tinh:</strong> trò chơi tương tác."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    { "text": "KidsLoop CMS: 3-4_U8_LP62_All four seasons 2" },
                    { "text": "Bản mẫu, cục pom pom, keo sữa, bút màu sáp." }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh “<i>Xin chào</i>”, vẫy tay với học sinh và khuyến khích học sinh vẫy tay lại với giáo viên cũng như lặp lại lời chào."
                                    },
                                    {
                                        "text": "Giới thiệu chủ đề bằng cách giải thích với học sinh là các con sẽ học về 4 mùa."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“All four seasons” <br/><i>5 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát <b>“All four seasons”</b>, dừng ở các từ vựng (mùa đông, mùa xuân, mùa hè, mùa thu) và ôn tập các động tác bên dưới.",
                                        "list": [
                                            {
                                                "text": "<b>Winter: </b> chớp mắt."
                                            },
                                            {
                                                "text": "<b>Spring:</b> vỗ tay 1 lần."
                                            },
                                            {
                                                "text": "<b>Summer: </b> giơ tay trái lên."
                                            },
                                            {
                                                "text": "<b>Fall: </b> giơ tay phải lên."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa. Để học sinh làm hành động theo bài hát.  "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“The best season” book<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Ôn tập từ vựng của bài học <b>(mùa đông, mùa xuân, mùa hè, mùa thu)</b>."
                                    },
                                    {
                                        "text": "Mở sách “<b>The best season</b>”, nhìn vào các bức tranh và hỏi học sinh."
                                    },
                                    {
                                        "text": "Ví dụ:",
                                        "list": [
                                            { "text": "<i>Đây là cái gì?</i>" },
                                            { "text": "<i>Họ ở đâu?</i>" }
                                        ]
                                    },
                                    {
                                        "text": "Giáo viên mở sách lại lần nữa, yêu cầu học sinh lắng nghe truyện, dừng ở từ vựng (mùa đông, mùa xuân, mùa hè, mùa thu) và yêu cầu học sinh lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên hướng dẫn học sinh đọc từng câu của truyện."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>5 phút</i>"
                        },
                        "right_content": [
                            { "title": "Củng cố từ vựng" },
                            {
                                "text": "<strong>Keyword – All Four Seasons</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào hình ảnh để lắng nghe và lập lại từ."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<strong>Flashcards - Winter, Spring, Summer, Fall</strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào hình và đọc từ."
                                    },
                                    {
                                        "text": "Thu âm giọng đọc của học sinh và kiểm tra kết quả."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching activities - Winter, Spring, Summer, Fall</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và vẽ các đường thẳng để ghép các mùa với các hoạt động. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hoạt động",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>Hoạt động Khoa học – Nghệ thuật: Làm cái mũ mùa đông.</b>",
                                "list": [
                                    { "text": "Làm cá nhân." },
                                    {
                                        "text": "Giáo viên chuẩn bị bản mẫu, vài cục pom pom, keo sữa và bút màu sáp cho từng học sinh."
                                    },
                                    {
                                        "text": "Cách làm:",
                                        "list": [
                                            {
                                                "text": "Giáo viên giúp học sinh cắt hình mẫu từ bản mẫu."
                                            },
                                            {
                                                "text": "Dùng bút màu sáp để tô cái mũ. <img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/winter-hat-1-e1623060694766.png\">"
                                            },
                                            {
                                                "text": "Sử dụng keo sữa để dán vài cục pom pom vào cái mũ để làm cái mũ đẹp hơn. <img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/winter-hat-2-e1623060642540.png\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Mở lại bài hát <b>“All four seasons”</b>."
                                    },
                                    {
                                        "text": "Yêu cầu học sinh dọn dẹp lớp học."
                                    },
                                    { "text": "Tạm biệt học sinh." },
                                    {
                                        "text": "Yêu cầu học sinh nói cảm ơn, tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    },

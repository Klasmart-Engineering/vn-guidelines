{
    "banner": "https://i.ibb.co/9p7wMjP/gl-03.jpg",
    "content": [
        {
            "lang": "en",
            "unit": "UNIT 8: WEATHER, SEASONS & ENVIRONMENT",
            "lesson_name": "LESSON 62: ALL FOUR SEASONS 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: winter, summer, fall, spring."
                    },
                    { "text": "Develop speaking and listening skills" },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive development:</strong> know about 4 seasons in a year."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song, wink, clap one time, raise the left hand, raise the right hand. "
                            },
                            {
                                "text": "<strong>Aesthetic development: </strong> develop creative through art activities, make a snowflake."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 4-5_U8_LP62_All four seasons 2" },
                    { "text": "Beads, pipe cleaners" }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students, say <i>“Hello”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Introduce the topic by explaining to the students that they will be learning about four seasons."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“All four seasons” Video song<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song."
                                    },
                                    {
                                        "text": "Play the song <b>“All four seasons”</b>, pause at the vocabulary <b>(winter, spring, summer, fall)</b> and review the actions as below.",
                                        "list": [
                                            { "text": "<b>Winter: </b> wink." },
                                            {
                                                "text": "<b>Spring:</b> clap one time."
                                            },
                                            {
                                                "text": "<b>Summer: </b> raise the left hand."
                                            },
                                            {
                                                "text": "<b>Fall: </b> raise the right hand."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students to make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“The best season” Storybook”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson <b>(winter, spring, summer, fall)</b>."
                                    },
                                    {
                                        "text": "Play the story book <b>“The best season”</b>, just look at the pictures and ask students such as.",
                                        "list": [
                                            { "text": "<i>What is it?</i>" },
                                            {
                                                "text": "<i>Where are they?</i>"
                                            },
                                            {
                                                "text": "<i>What do you see?</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the story book again, asks students to listen to the story. The teacher pauses at the keywords <b>(winter, spring, summer, fall)</b> and asks students to repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher instructs students to repeat each sentence of the story."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - All Four Seasons</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Winter, Spring, Summer, Fall</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose stickers - Winter, Spring, Summer, Fall</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, play the audio button to listen the words and match the correct images into the boxes."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do (steam activities)",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM Activity: <strong>Make a snowflake</strong>"
                            },
                            {
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares 3 pieces of pipe cleaners, some beads for each student."
                                    }
                                ]
                            },
                            { "text": "<u>How to do:</u>" },
                            {
                                "list": [
                                    {
                                        "text": "Teacher helps students cut out the pipe cleaners in half."
                                    },
                                    {
                                        "text": "Fold the small (halved) pipe cleaners in half and then twist them together on the bend.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Snow-1.jpg\"width=\"200\" height=\"200\">"
                                    },
                                    {
                                        "text": "Twist the third small pipe cleaner around the first two to make a snowflake.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Snow-2.jpg\"width=\"200\" height=\"200\">"
                                    },
                                    {
                                        "text": "Thread some beads into the snowflake.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Snow-3.jpg\"width=\"200\" height=\"200\">"
                                    },
                                    {
                                        "text": "Wrapped the end of the pipe cleaner to curl it. <img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/snow-4.jpg\"width=\"200\" height=\"200\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“All four seasons</strong> again."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom."
                                    },
                                    { "text": "Say goodbye to students." },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 8: THỜI TIẾT, MÙA VÀ MÔI TRƯỜNG",
            "lesson_name": "BÀI 62: BỐN MÙA 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng: mùa đông, mùa hè, mùa thu, mùa xuân.  "
                    },
                    { "text": "Phát triển kĩ năng nghe và nói " },
                    {
                        "text": "Phát triển các kĩ năng khác:",
                        "list": [
                            {
                                "text": "<strong>Phát triển nhận thức: </strong> biết về 4 mùa trong năm."
                            },
                            {
                                "text": "<strong>Kĩ năng vận đông thô: </strong> vận động theo bài hát, chớp mắt, vỗ tay 1 lần, giơ tay trái lên, giơ tay phải lên."
                            },
                            {
                                "text": "<strong>Phát triển thẩm mỹ:</strong> thể hiện sự sáng tạo khi tham gia các hoạt động nghệ thuật, làm bông tuyết."
                            },
                            {
                                "text": "<strong>Kỹ năng vận động tinh:</strong> trò chơi tương tác"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    { "text": "KidsLoop CMS: 4-5_U8_LP62_All four seasons 2" },
                    { "text": "Hạt xỏ vòng tay, cây rửa ống hút" }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh <i>“Xin chào”</i>, vẫy tay với học sinh và khuyến khích học sinh vẫy tay lại với giáo viên cũng như lặp lại lời chào."
                                    },
                                    {
                                        "text": "Giới thiệu chủ đề bằng cách giải thích với học sinh là các con sẽ học về 4 mùa."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“All four seasons ” Dance<br/><i>5 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát <b>“All four seasons”</b>, dừng ở các từ vựng <b>(mùa đông, mùa xuân, mùa hè, mùa thu)</b> và ôn động tác bên dưới:",
                                        "list": [
                                            {
                                                "text": "<b>Winter: </b> chớp mắt."
                                            },
                                            {
                                                "text": "<b>Spring:</b> vỗ tay 1 lần."
                                            },
                                            {
                                                "text": "<b>Summer: </b> giơ tay trái lên."
                                            },
                                            {
                                                "text": "<b>Fall: </b> giơ tay phải lên."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa và để học sinh làm hành động theo bài hát. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“The best season ” Storybook<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Ôn tập từ vựng của bài học <b>(mùa đông, mùa xuân, mùa hè, mùa thu)</b>.  "
                                    },
                                    {
                                        "text": "Mở truyện <b>“The best season”</b>, chỉ nhìn vào các bức tranh và hỏi học sinh như.",
                                        "list": [
                                            { "text": "<i>Đây là cái gì?</i>" },
                                            { "text": "<i>Họ ở đâu?</i>" },
                                            {
                                                "text": "<i>Các con thấy cái gì?</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Giáo viên mở truyện lại lần nữa, yêu cầu học sinh lắng nghe truyện. Giáo viên dừng từng ở từ vựng <b>(mùa đông, mùa xuân, mùa hè, mùa thu)</b> và yêu cầu học sinh lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên hướng dẫn học sinh lặp lại từng câu của truyện."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>5 phút</i>"
                        },
                        "right_content": [
                            { "title": "Củng cố từ vựng" },
                            {
                                "text": "<strong>Keywords - All Four Seasons</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào các bức tranh để lắng nghe và lặp lại từ vựng"
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh. "
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<strong>Flashcards - Winter, Spring, Summer, Fall</strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào hình và đọc từ."
                                    },
                                    {
                                        "text": "Thu âm giọng đọc của học sinh và kiểm tra kết quả."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose stickers - Winter, Spring, Summer, Fall</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, mở nút âm thanh để lắng nghe từ và ghép hình ảnh đúng vào ô trống."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hoạt động khoa học nghệ thuật",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            {
                                "text": "Hoạt động Khoa học – Nghệ thuật:<strong> Làm bông tuyết</strong>."
                            },
                            {
                                "list": [
                                    { "text": "Làm cá nhân." },
                                    {
                                        "text": "Giáo viên chuẩn bị 3 đoạn cây rửa ống hút, vài hạt xỏ vòng tay cho từng học sinh."
                                    }
                                ]
                            },
                            { "text": "<u>Cách làm: </u>" },
                            {
                                "list": [
                                    {
                                        "text": "Giáo viên giúp học sinh cắt đôi cây rửa ống hút."
                                    },
                                    {
                                        "text": "Gấp đôi cây rửa ống hút và xoắn chúng lại với nhau.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Snow-1.jpg\"width=\"200\" height=\"200\">"
                                    },
                                    {
                                        "text": "Xoắn cây rửa ống hút thứ 3 vào hai cây đầu tiên để làm bông tuyết.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Snow-2.jpg\"width=\"200\" height=\"200\">"
                                    },
                                    {
                                        "text": "Xỏ vài hạt xỏ vòng tay vào bông tuyết.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/Snow-3.jpg\"width=\"200\" height=\"200\">"
                                    },
                                    {
                                        "text": "Quấn phần cuối của cây rửa ống hút để làm cong nó.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/06/snow-4.jpg\"width=\"200\" height=\"200\">"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Mở lại bài hát  <b>“All four seasons”</u>"
                                    },
                                    {
                                        "text": "Yêu cầu học sinh dọn dẹp lớp học."
                                    },
                                    { "text": "Tạm biệt học sinh." },
                                    {
                                        "text": "Yêu cầu học sinh nói cảm ơn, tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}

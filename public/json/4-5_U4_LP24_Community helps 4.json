{
    "banner": "https://i.ibb.co/9p7wMjP/gl-03.jpg",
    "content": [
        {
            "lang": "en",
            "unit": "UNIT 4: PROFESSION",
            "lesson_name": "LESSON 24: COMMUNITY HELPS 4",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn vocabulary of professions: builder, bus driver, doctor, firefighter."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<strong>Cognitive development:</strong> inquiry into Society – Students classify the characters."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song, raise the left hand, turn around, clap the hands, wink."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            },
                            {
                                "text": "<strong>Aesthetic development skills:</strong> develop creative through art activities, doctor paper tube puppet."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 4-5_U4_LP4_Community helps 4" },
                    {
                        "text": "Handout, crayon, colored paper (red, blue, yellow, orange), glue."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning / afternoon”</i> Wave at students and encourage them to wave back to you as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i> Encourage students to reply back with <i>“I am ___ (good)”</i>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "Chant “Agent M”<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song: Agent M, pause at the keywords <b>(builder, firefighter, doctor, bus driver)</b> and review the actions as below:",
                                        "list": [
                                            {
                                                "text": "<b>Builder:</b> raise the left hand."
                                            },
                                            {
                                                "text": "<b>Firefighter:</b> turn around."
                                            },
                                            {
                                                "text": "<b>Doctor:</b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Bus driver:</b>  wink."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again. Have the students make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Agent M” Board book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson <b>(firefighter, doctor, bus driver)</b>. "
                                    },
                                    {
                                        "text": "Play the story <b>“Agent M”</b>, focus on page 7 to page 12, point to the characters and ask students.",
                                        "list": [
                                            {
                                                "text": "<i>What does Curly do? &#x02192; Curly is a firefighter.</i>"
                                            },
                                            {
                                                "text": "<i>What does Jess do? &#x02192; Jess is a doctor</i>."
                                            },
                                            {
                                                "text": "<i>What does Mat do? &#x02192; Mat is a bus driver</i>."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher plays the story again, asks students to listen to the story, pauses at the keywords <b>(firefighter, doctor, bus driver)</b> and asks students to repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher instructs students to read each sentence of the story."
                                    },
                                    {
                                        "text": "Teacher describes keywords <b>(builder, firefighter, doctor, bus driver)</b> by body language and asks students to guess the jobs."
                                    },
                                    {
                                        "text": "Ask students to repeat keywords and correct their pronunciation."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Community Helps 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords. "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Flashcards - Community Helps 2</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, invites students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Coloring - Bus driver letters</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and color the letters to spell the word: bus driver."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do (Steam activities)",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "STEAM Activity: <strong>Doctor paper tube puppet</strong>"
                            },
                            {
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares a toilet paper tube, glue, scissors, crayon for each student."
                                    },
                                    {
                                        "text": "Teacher instructs students to make a doctor paper tube."
                                    },
                                    {
                                        "text": "<u>How to do:</u>",
                                        "list": [
                                            {
                                                "text": "Teacher helps students to cut out the templates in the handout."
                                            },
                                            {
                                                "text": "Color pictures by crayons.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Doctor-1.png\"width=\"200\" height=\"200\">"
                                            },
                                            {
                                                "text": "Glue the body into the paper tube.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Doctor-2-e1622083991587.png\"width=\"200\" height=\"200\">"
                                            },
                                            {
                                                "text": "Fold the arms on the line and glue into the paper tube to make arms then glue a face mask and a sheet of paper into the doctor.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Doctor-3-e1622084043701.png\"width=\"200\" height=\"200\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <strong>“Agent M”</strong> again"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 4: NGHỀ NGHIỆP",
            "lesson_name": "BÀI 24: GIÚP ĐỠ CỘNG ĐỒNG 4",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng về nghề nghiệp: người xây dựng, tài xế xe buýt, bác sĩ, lính cứu hỏa."
                    },
                    { "text": "Phát triển kỹ năng nghe và nói." },
                    {
                        "text": "Phát triển các kỹ năng khác:",
                        "list": [
                            {
                                "text": "<strong>Phát triển nhận thức: </strong> khám phá xã hội – Học sinh có thể phân loại nhân vật."
                            },
                            {
                                "text": "<strong>Kỹ năng vận động thô:</strong> vận động theo bài hát, giơ tay trái lên, quay vòng tròn, vỗ tay, chớp mắt."
                            },
                            {
                                "text": "<strong>Kỹ năng vận động tinh:</strong>trò chơi tương tác."
                            },
                            {
                                "text": "<strong>Phát triển thẫm mĩ:</strong> thể hiện sự sáng tạo khi tham gia các hoạt động nghệ thuật, làm bác sĩ từ ống giấy."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    { "text": "KidsLoop CMS: 4-5_U4_LP24_Community helps 4" },
                    {
                        "text": "Bản mẫu, bút màu sáp, giấy màu (đỏ, xanh dương, vàng, cam), hồ dán."
                    }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh <i>“Chào buổi sáng / buổi chiều”</i>. Vẫy tay với học sinh và khuyến khích học sinh vẫy tay lại với thầy / cô cũng như lặp lại lời chào."
                                    },
                                    {
                                        "text": "Trả lời với câu <i>“Các con có khỏe không?”</i>. Khuyến khích học sinh trả lời lại với <i>“Con ___ (tốt)</i>.”"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“Agent M” Chant<br/><i>5 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Giáo viên mở bài hát <b>“Agent M”</b>, dừng ở từ vựng <b>(người xây dựng, lính cứu hỏa, bác sĩ, tài xế xe buýt)</b> và ôn tập các động tác bên dưới:",
                                        "list": [
                                            {
                                                "text": "<b>Builder</b>: giơ tay trái lên."
                                            },
                                            {
                                                "text": "<b>Firefighter</b>: quay vòng tròn."
                                            },
                                            {
                                                "text": "<b>Doctor</b>: vỗ tay."
                                            },
                                            {
                                                "text": "<b>Bus driver</b>: chớp mắt."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa. Để học sinh làm hành động theo bài hát."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“Agent M” Board book <br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Ôn tập từ vựng của bài học <b>(lính cứu hỏa, bác sĩ, tài xế xe buýt)</b>."
                                    },
                                    {
                                        "text": "Mở truyện <b>“Agent M”</b>, tập trung vào trang 7 đến trang 12, chỉ vào các nhân vật và hỏi học sinh.",
                                        "list": [
                                            {
                                                "text": "<i>Curly làm nghề gì? &#x02192; Curly là người lính cứu hỏa.</i>"
                                            },
                                            {
                                                "text": "<i>Jess làm nghề gì? &#x02192; Jess là bác sĩ</i>."
                                            },
                                            {
                                                "text": "<i>Mat làm nghề gì? &#x02192; Mat là tài xế xe buýt</i>."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Giáo viên mở sách lại lần nữa, yêu cầu học sinh lắng nghe truyện, dừng ở từ vựng <b>(lính cứu hỏa, bác sĩ, tài xế xe buýt)</b> và yêu cầu học sinh lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên hướng dẫn học sinh đọc từng câu của truyện."
                                    },
                                    {
                                        "text": "Giáo viên mô tả từ vựng <b>(người xây dựng, lính cứu hỏa, bác sĩ, tài xế xe buýt)</b>."
                                    },
                                    {
                                        "text": "Nói học sinh lặp lại từ vựng và sửa phát âm của học sinh."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>5 phút</i>"
                        },
                        "right_content": [
                            { "title": "Luyện tập từ vựng" },
                            {
                                "text": "<strong>Keywords - Community Helps 2</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào hình ảnh để lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<strong>Flashcards - Community Helps 2</strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào hình và đọc từ."
                                    },
                                    {
                                        "text": "Thu âm giọng đọc của học sinh và kiểm tra kết quả."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Coloring - Bus driver letters</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và tô màu chữ cái để đánh vần từ: bus driver"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hoạt động khoa học nghệ thuật",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            {
                                "text": "Hoạt động Khoa học - Nghệ thuật: <strong>Làm bác sĩ từ ống giấy</strong>"
                            },
                            {
                                "list": [
                                    { "text": "Làm cá nhân." },
                                    {
                                        "text": "Giáo viên chuẩn bị 1 lõi giấy, hồ dán, kéo, bút sáp màu cho mỗi học sinh."
                                    },
                                    {
                                        "text": "Giáo viên hướng dẫn học sinh làm bác sĩ."
                                    },
                                    {
                                        "text": "<u>Cách làm:</u>",
                                        "list": [
                                            {
                                                "text": "Giáo viên giúp học sinh cắt hình mẫu từ bản mẫu."
                                            },
                                            {
                                                "text": "Tô màu bức tranh bằng bút màu sáp.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Doctor-1.png\"width=\"200\" height=\"200\">"
                                            },
                                            {
                                                "text": "Dán cơ thể vào ống giấy.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Doctor-2-e1622083991587.png\"width=\"200\" height=\"200\"> "
                                            },
                                            {
                                                "text": "Gấp cánh tay theo đường kẻ và dán vào ống giấy làm tay sau đó dán khẩu trang và tờ giấy vào người bác sĩ. <img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Doctor-3-e1622084043701.png\"width=\"200\" height=\"200\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Phát lại bài hát “<b>Agent M</b>”."
                                    },
                                    {
                                        "text": "Yêu cầu học sinh dọn dẹp lớp học."
                                    },
                                    { "text": "Tạm biệt học sinh." },
                                    {
                                        "text": "Yêu cầu học sinh nói cảm ơn, tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {

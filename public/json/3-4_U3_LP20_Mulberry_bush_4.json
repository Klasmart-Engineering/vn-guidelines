    "content": [
        {
            "lang": "en",
            "unit": "UNIT 3: MY SELF",
            "lesson_name": "LESSON 20: MULBERRY BUSH 4",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn the keywords: bush, early, morning, go round."
                    },
                    {
                        "text": "Learn to take care of themselves and practice healthy habits."
                    },
                    {
                        "text": "Develop speaking and listening skills."
                    },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "Cognitive Development: Nutrition and health – Know some morning routines."
                            },
                            {
                                "text": "Gross motor skills: movement following the song."
                            },
                            {
                                "text": "Fine motor skills: play interactive games."
                            },
                            {
                                "text": "Aesthetic development: develop creative through art activity - make brushing teeth model."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 3-4_U3_LP20: Mulberry bush 4."
                    },
                    {
                        "text": "Handout, crayon, scissors."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. <i>“Hello”</i>. Wave at students and encourage them to wave back to you as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with the sentence <i>“Nice to meet you __”</i> and ask students to repeat this sentence."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Mulberry Bush”<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song."
                                    },
                                    {
                                        "text": "Play the song of <b>“Mulberry bush”</b> pause at the words (go around bush, early in the morning) and review the actions:",
                                        "list": [
                                            {
                                                "text": "<b>Go round:</b> turn round."
                                            },
                                            {
                                                "text": "<b>Bush:</b> clap the hand."
                                            },
                                            {
                                                "text": "<b>Early in the morning:</b> jump."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and ask students to sing and do actions along."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Mulberry Bush”<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review keywords of the lesson (<b>bush, early, morning, go round</b>)."
                                    },
                                    {
                                        "text": "Teacher plays storybook <b>“Mulberry Bush”</b> and asks students to listen to the story."
                                    },
                                    {
                                        "text": "Teacher plays the story book again in page 2 and 3, pauses at the keywords (<b>go round, bush, early, morning</b>) and reviews the keywords."
                                    },
                                    {
                                        "text": "Ask students to repeat the keywords."
                                    },
                                    {
                                        "text": "Play the story again, point to the pictures and ask students some questions."
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "<i>What do they do? &#x02192; They go round the bush</i>."
                                            },
                                            {
                                                "text": "<i>What is the name of the bush? &#x02192; Mulberry bush</i>."
                                            },
                                            {
                                                "text": "<i>When do they go round the bush? &#x02192; They go round the bush in the early morning</i>”."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<b>Keywords – Mulberry bush 2</b>",
                                "list": [
                                    {
                                        "text": "Invite student to come to the board, click on the pictures and ask students to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Flashcards - go round, bush, early, morning</b>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, invites students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<b>Drag stickers - Mulberry bush</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, drag and drop the stickers in the correct order."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>STEAM activity: I can do it.</b>",
                                "list": [
                                    {
                                        "text": "Work in individually."
                                    },
                                    {
                                        "text": "How to do:",
                                        "list": [
                                            {
                                                "text": "Teacher can help students cut out the pictures from the handout and cut 2 dashed lines of the mouth."
                                            },
                                            {
                                                "text": "Color the picture by crayon. <img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/brush-teeth-1-e1621326314566.jpg\">"
                                            },
                                            {
                                                "text": "Put the brush through the mouth template for brushing teeth activity. <img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/brush-teeth-2-e1621326378350.jpg\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <strong>“Mulberry Bush”</strong> again"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say goodbye to their peers and to the teacher"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 3: BẢN THÂN BÉ",
            "lesson_name": "BÀI 20: BỤI CÂY DÂU TẰM 4",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ vựng: bụi cây, sớm, sáng, đi vòng quanh."
                    },
                    {
                        "text": "Học các chăm sóc bản thân và thực hiện những thói quen tốt cho sức khỏe."
                    },
                    {
                        "text": "Phát triển kĩ năng nghe và nói."
                    },
                    {
                        "text": "Phát triển các kĩ năng khác:",
                        "list": [
                            {
                                "text": "<b>Phát triển nhận thức:</b> Dinh dưỡng và sức khỏe – Biết về các thói quen vào buổi sáng."
                            },
                            {
                                "text": "<b>Kĩ năng vận đông thô:</b> vận động theo bài hát."
                            },
                            {
                                "text": "<b>Kĩ năng vận động tinh:</b> chơi trò chơi tương tác."
                            },
                            {
                                "text": "<b>Giáo dục phát triển thẩm mĩ:</b> thể hiện sự sáng tạo khi tham gia các hoạt động nghệ thuật, làm mô hình đánh răng."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    {
                        "text": "Kidsloop CMS: 3-4_U3_LP20: Mulberry bush 4."
                    },
                    {
                        "text": "Bản mẫu, kéo, bút màu sáp."
                    }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh <i>“Xin chào”</i>. Vẫy tay với học sinh và khuyến khích các con chào lại cũng như lặp lại lời chào."
                                    },
                                    {
                                        "text": "Trả lời với câu <i>“Rất vui được gặp các con”</i> và yêu cầu học sinh lặp lại câu này."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“Mulberry Bush”<br/><i><i>5 phút</i></i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Giáo viên mở bài hát “Mulberry bush”, dừng ở các từ vựng (go, round, bush, early in the morning) và ôn tập các động tác.",
                                        "list": [
                                            {
                                                "text": "<b>Go round: </b> xoay vòng tròn."
                                            },
                                            {
                                                "text": "<b>Bush:</b> vỗ tay."
                                            },
                                            {
                                                "text": "<b>Early in the morning:</b> nhảy lên."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa và nói học sinh hát và làm động tác theo bài hát."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách ",
                            "text": "“Mulberry Bush”<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Ôn tập từ vựng quan trọng của bài học <b>(đi vòng quanh, bụi cây, buổi sáng, sớm)</b>."
                                    },
                                    {
                                        "text": "Giáo viên mở sách <b>“Mulberry bush”</b> và yêu cầu học sinh lắng nghe truyện."
                                    },
                                    {
                                        "text": "Giáo viên mở truyện lại lần nữa ở trang 2 đến 3, dừng ở từ vựng (<b>đi vòng quanh, bụi cây, buổi sáng, sớm</b>) và ôn tập từ vựng."
                                    },
                                    {
                                        "text": "Yêu cầu học sinh lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Mở truyện lại lần nữa, chỉ vào bức tranh và đặt câu hỏi cho học sinh."
                                    },
                                    {
                                        "text": "Ví dụ:",
                                        "list": [
                                            {
                                                "text": "<i>Họ làm gì? &#x02192; Họ đi vòng quanh bụi cây</i>."
                                            },
                                            {
                                                "text": "<i>Tên của bụi cây đó là gì? &#x02192; Bụi cây dâu tằm</i>."
                                            },
                                            {
                                                "text": "<i>Họ đi vòng quanh bụi cây khi nào? &#x02192; Họ đi vòng quanh bụi cây vào buổi sáng sớm.</i>"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>5 phút</i>"
                        },
                        "right_content": [
                            {
                                "title": "Củng cố từ vựng"
                            },
                            {
                                "text": "<b>Từ vựng – Bụi dâu tằm 2</b>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào các bức tranh và nói học sinh lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Thẻ hình – Đi vòng quanh, bụi, sớm, buổi sáng</b>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào hình và đọc từ. Thu âm giọng đọc của học sinh và kiểm tra kết quả."
                                    }
                                ]
                            },
                            {
                                "title": "Trò chơi tương tác"
                            },
                            {
                                "text": "<b>Kéo nhãn dán – Bụi dâu tằm </b>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, kéo và thả hình dán đúng thứ tự."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hoạt động",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>Hoạt động Khoa học – Nghệ thuật: “Tôi có thể làm nó”.</b>",
                                "list": [
                                    {
                                        "text": "Làm cá nhân."
                                    },
                                    {
                                        "text": "Cách làm:",
                                        "list": [
                                            {
                                                "text": "Giáo viên có thể giúp học sinh cắt các bức tranh từ bản mẫu và cắt 2 đường nét đứt của miệng."
                                            },
                                            {
                                                "text": "Tô màu bức tranh bằng bút màu sáp.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/brush-teeth-1-e1621326314566.jpg\">"
                                            },
                                            {
                                                "text": "Đặt bàn chải xuyên qua mô hình miệng để đánh răng. <img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/brush-teeth-2-e1621326378350.jpg\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Mở lại bài hát <b>“Mulberry Bush”</b>"
                                    },
                                    {
                                        "text": "Yêu cầu các học sinh dọn dẹp lớp học."
                                    },
                                    {
                                        "text": "Tạm biệt các học sinh."
                                    },
                                    {
                                        "text": "Yêu cầu học sinh nói cảm ơn, tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },

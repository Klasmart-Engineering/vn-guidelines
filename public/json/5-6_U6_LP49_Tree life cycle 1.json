    "content": [
        {
            "lang": "en",
            "unit": "UNIT 6: ANIMALS AND PLANTS WOLRD",
            "lesson_name": "LESSON 49: TREE LIFE CYCLE 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: forest, tree, squirrel."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> know about the life cycle of a tree."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, step to the left and right, shake the body, turn around, sit down."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 5-6_U6_LP49_Tree life cycle 1" }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. <i>“Good morning/afternoon”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>, encourage students to reply back with <i>“I am ___ (good)”</i> ."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Cute little puppies” Song<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about trees”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“Tiny a little seed”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the vocabulary  <b>(tree, pollen, leaves, fruit)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Tree: </b> step to the left and right."
                                            },
                                            {
                                                "text": "<b>Pollen:</b> shake the body."
                                            },
                                            {
                                                "text": "<b>Leaves: </b> turn around."
                                            },
                                            {
                                                "text": "<b>Fruit: </b> sit down."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again and have the students make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Bada and the Squirrel ” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(forest, tree, squirrel)</b>."
                                    },
                                    {
                                        "text": "Ask students to repeat the title of the story <b>“Bada and the Squirrel”</b>. "
                                    },
                                    {
                                        "text": "Teacher plays the storybook <b>“Bada and the Squirrel”</b> in pages from 2 to 4. Teacher opens each page, asks students to listen to the story. The teacher reads the story again and teaches the keywords <b>(forest, tree, squirrel)</b>."
                                    },
                                    {
                                        "text": "Example: ",
                                        "list": [
                                            {
                                                "text": "At page 2: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>Where is Bada? &#x02192;Bada is in the forest.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keyword: <b>Forest</b>."
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with pages 3 and 4."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Course Presentation - Forest, Squirrel, Tree</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures or keywords to listen and repeat."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Flashcards - Forest, Squirrel, Tree</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words. "
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Forest, Squirrel, Tree </strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Squirrel</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture, choose the correct answer and match it to the picture."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Tree</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture, choose the correct answer and match it to the picture."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Quiz - Tree Life Cycle 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the words and match the correct pictures with the words."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Tiny little seed”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 6: THẾ GIỚI ĐỘNG THỰC VẬT",
            "lesson_name": "BÀI 49: VÒNG ĐỜI CỦA CÂY 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    { "text": "Học từ vựng: khu rừng, cây, con sóc." },
                    { "text": "Phát triển kĩ năng nghe và nói." },
                    {
                        "text": "Phát triển các kĩ năng khác: ",
                        "list": [
                            {
                                "text": "<strong>Phát triển nhận thức: </strong> biết về vòng đời của cây."
                            },
                            {
                                "text": "<strong>Kĩ năng vận đông thô:  </strong> vận động theo bài hát, bước sáng trái và phải, lắc lư cơ thể, quay vòng tròn, ngồi xuống."
                            },
                            {
                                "text": "<strong>Kĩ năng vận động tinh:</strong> trò chơi tương tác"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    { "text": "KidsLoop CMS: 5-6_U6_LP49_ Tree life cycle 1" }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh <i>“Chào buổi sáng/chiều”</i>, vẫy tay với học sinh và khuyến khích học sinh vẫy tay lại với giáo viên cũng như lặp lại lời chào."
                                    },
                                    {
                                        "text": "Trả lời với <i>“Các con có khỏe không?”</i>, khuyến khích học sinh trả lời lại với <i>“Con … (khỏe)</i>”."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“Tiny a little seed” song<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Giáo viên nói: <i>“Hôm nay chúng ta sẽ nghe một bài hát về cây”</i>."
                                    },
                                    {
                                        "text": "Mở bài hát <b>“Tiny a little seed”</b> và nói học sinh lắng nghe bài hát."
                                    },
                                    {
                                        "text": "Mở bài hát lần thứ 2, dừng ở các từ vựng <b>(cây, phấn hoa, lá, trái)</b> và cho học sinh đứng lên và luyện tập các động tác bên dưới:",
                                        "list": [
                                            {
                                                "text": "<b>Tree: </b> bước sang trái và sang phải."
                                            },
                                            {
                                                "text": "<b>Pollen:  </b> lắc lư cơ thể."
                                            },
                                            {
                                                "text": "<b>Leaves:  </b> quay vòng tròn."
                                            },
                                            {
                                                "text": "<b>Fruit:</b> ngồi xuống."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Mở bài hát lần nữa. Để học sinh làm hành động theo bài hát. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách",
                            "text": "“Bada and the Squirrel” Storybook<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Giới thiệu chủ đề và từ vựng của bài học <b>(khu rừng, cái cây, con sóc)</b>. "
                                    },
                                    {
                                        "text": "Yêu cầu học sinh lặp lại tựa đề của truyện <b>“Bada and the Squirrel”</b> "
                                    },
                                    {
                                        "text": "Giáo viên mở sách <b>“Bada and the Squirrel”</b> từ trang 2 đến trang 4. Giáo viên mở từng trang, nói học sinh lắng nghe câu chuyện. Giáo viên đọc lại câu chuyện lần nữa và dạy từ vựng <b>(khu rừng, cái cây, con sóc)</b>."
                                    },
                                    {
                                        "text": "Ví dụ:",
                                        "list": [
                                            {
                                                "text": "Ở trang 2: Chỉ vào bức tranh và hỏi.",
                                                "list": [
                                                    {
                                                        "text": "<i>Bada đang ở đâu? &#x02192; Bada đang ở trong rừng.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Để học sinh lặp lại từ vựng vài lần: <b>forest.</b>"
                                            },
                                            {
                                                "text": "Yêu cầu học sinh lặp lại từ vựng vài lần đồng thanh và cá nhân và sửa phát âm của học sinh."
                                            },
                                            {
                                                "text": "Làm tương tự với các trang 3 và 4."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            { "title": "Củng cố từ vựng" },
                            {
                                "text": "<strong>Course Presentation - Forest, Squirrel, Tree</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và bấm vào hình ảnh hoặc từ vựng để lắng nghe và lặp lại."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Flashcards - Forest, Squirrel, Tree</strong>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào hình và đọc từ."
                                    },
                                    {
                                        "text": "Thu âm giọng đọc của học sinh và kiểm tra kết quả."
                                    }
                                ]
                            },
                            { "title": "Trò chơi tương tác" },
                            {
                                "text": "<strong>Memory game - Forest, Squirrel, Tree </strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng và lật 2 tấm thẻ để tìm cặp hình ảnh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Squirrel</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào bức tranh, chon đáp án đúng và ghép với bức tranh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Tree</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào bức tranh, chon đáp án đúng và ghép với bức tranh."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Quiz - Tree Life Cycle 1</strong>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào từ và ghép hình đúng với từ."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Mở lại bài hát <b>“Tiny little seed”</b>."
                                    },
                                    {
                                        "text": "Yêu cầu học sinh dọn dẹp lớp học."
                                    },
                                    { "text": "Tạm biệt học sinh." },
                                    {
                                        "text": "Yêu cầu học sinh nói cảm ơn, tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}

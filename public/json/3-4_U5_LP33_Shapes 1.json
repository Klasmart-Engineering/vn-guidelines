    "content": [
        {
            "lang": "en",
            "unit": "UNIT 5: MATHEMATICS",
            "lesson_name": "LESSON 33: SHAPES 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn about basic shapes: circle, triangle, square, rectangle."
                    },
                    { "text": "Develop speaking and listening skills." },
                    { "text": "Learn the structure: It is a _______." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> basic Math concepts – Identify the shapes."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, clap the hands, make a circle with 2 arms, use 2 hands to make a triangle, put 2 arms and parallel with the chest."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 3-4_U5_LP33_Shapes 1." }]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Teacher welcomes the class and asks students the question:",
                                        "list": [
                                            {
                                                "text": "<i>Hello! How are you? &#x02192; I am fine.</i>."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Encourage students to reply back with <i>“I am …”</i>."
                                    },
                                    {
                                        "text": "Use the greeting <i>“Nice to see you again”</i> and encourage students to say this sentence."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Shape song” video song<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song."
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about shapes”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“Shape song”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the second time, pause at the keywords <b>(square, circle, triangle, rectangle)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Square: </b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Circle:</b> make a circle with 2 arms."
                                            },
                                            {
                                                "text": "<b>Triangle: </b> use 2 hands to make a triangle."
                                            },
                                            {
                                                "text": "<b>Rectangle:</b> put 2 arms and parallel with the chest."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along to the song."
                                    },
                                    {
                                        "text": "Teacher instructs the students to say the sentence <i>“It is a ______ (circle, triangle, rectangle, square)</i>”."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“My shapes” Storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(square, circle, triangle, rectangle)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the story book <b>“My shapes”</b> from page 1 to 5, pauses at each page, asks students to listen to the story."
                                    },
                                    {
                                        "text": "Teacher reads the story again and teaches the words <b>(square, circle, triangle, rectangle, candy, ice cream cone, bus, picture)</b>."
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "At page 2: Point to the pictures and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What shape is it? &#x02192; It is a circle.</i>"
                                                    },
                                                    {
                                                        "text": "<i>What is it? &#x02192; It is a candy.</i>"
                                                    },
                                                    {
                                                        "text": "<i>What shape is a candy? &#x02192; The candy is a circle.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students to repeat the keyword: <b>circle, candy</b>."
                                            },
                                            {
                                                "text": "Ask students to say the sentence: <i>The candy is a circle</i>."
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords and the sentence several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same in the next pages."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Course presentation - Circle, Triangle, Square, Rectangle</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the shapes to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image slider - Circle, Triangle, Square, Rectangle</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcard, asks students to look at the pictures, listen and repeat the keywords. "
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation. "
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Shape Song</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Count & Match – shapes</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board."
                                    },
                                    {
                                        "text": "Slide 1: Count write the numbers of the shapes."
                                    },
                                    {
                                        "text": "Slide 2: Match the shapes with the words and the images."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Match - Circle, Triangle, Square, Rectangle</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, match the keywords with the correct shapes."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Trace & color - Rectangle</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, trace and color the shape."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Shape song”</strong>"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

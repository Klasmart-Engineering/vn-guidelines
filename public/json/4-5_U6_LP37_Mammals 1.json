            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary about mammals: cat, dog, bear."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Learn the structure: <i>What is it?-> It is a ___.  / A ___ is a mammal</i>."
                    },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> inquiry into science – students can identify the mammals and know the characteristic of mammals."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, clap one time, turn around, spread 2 arms, wink, shake a head, run on the sport."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [{ "text": "Kidsloop CMS: 4-5_U6_LP37_Mammals 1" }]

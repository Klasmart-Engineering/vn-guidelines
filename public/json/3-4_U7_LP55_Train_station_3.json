            "unit": "UNIT  7: TRAFFIC AND VEHICLES",
            "lesson_name": "LESSON 55: TRAIN STATION 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: a board, climb, whistle, ticket."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development: </strong> know how the train works."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, put hands on the hips, clap the hands, pat the belly, put on the spot."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 3-4_U7_LP55_Train station 3." }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students “<i>Hello, how are you?</i>”. Wave at students and encourage them to wave back to you as they greet back to you <i>“Hello, I’m _____ (good, bad, fine, etc.). Thank you.”"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Down by the station” Video song <br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song."
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about the train station”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“Down by the station”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the keywords (<b>climb on aboard, whistle, ticket, off we go</b>) and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Climb on aboard: </b> put hands on the hips."
                                            },
                                            {
                                                "text": "<b>Whistle:</b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Ticket: </b> pat the belly."
                                            },
                                            {
                                                "text": "<b>Off we go: </b> run on the spot."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along to the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Down by the station” Story book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(aboard, climb, whistle, ticket)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the story book “<b>Down by the station </b>”, asks students to listen to the story. The teacher pauses at each page from page 8 to 11."
                                    },
                                    {
                                        "text": "The teacher reads the story again and teaches the keywords (<b>aboard, climb, whistle, ticket</b>)."
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "At page 8: Point to the pictures and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>Where is the pufferbelly? ?  &#x02192; The pufferbelly is on aboard.</i>"
                                                    },
                                                    {
                                                        "text": "<i>What does the pufferbelly do?  &#x02192; The pufferbelly climbs on aboard and blows the whistle.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": " Have students to repeat the keyword: <b>aboard, climb, whistle.</b>"
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with pages 9, 10 and 11."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher asks students questions to check their understanding.",
                                        "list": [
                                            {
                                                "text": "<i>Have you ever seen a train? &#x02192; Yes, I have."
                                            },
                                            {
                                                "text": "<i>Where do you see it? &#x02192; It is in the train station."
                                            },
                                            {
                                                "text": "<i>How does a train work? &#x02192; Chug chug puff puff."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Aboard, Climb, Whistle, Ticket</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image Slider - Aboard, Climb, Whistle, Ticket</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Train station 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Match the correct words - Train station 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, match the correct word to each image."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching stickers - Aboard, Climb, Whistle, Ticket</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, play the audio button to listen and drag the correct images into the boxes."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Train - Trace the shapes</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and trace the the wheels of the train."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Down by the station”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

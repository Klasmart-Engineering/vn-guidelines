{
    "banner": "https://i.ibb.co/9p7wMjP/gl-03.jpg",
    "content": [
        {
            "lang": "en",
            "unit": "UUNIT 2: MY FAMILY",
            "lesson_name": "LESSON 8: SAY GOODNIGHT 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: Teddy Bear, wiggle, nose, toes, light, turn around, I love you."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other development skills:",
                        "list": [
                            {
                                "text": "<strong>Emotional Development:</strong> students expresses positive feelings."
                            },
                            {
                                "text": "<strong>Gross motor skill:</strong> movement following the song: wink, turn around, touch the nose, touch the ground, touch the toes, sit-down, stand up."
                            },
                            {
                                "text": "<strong>Aesthetic Development:</strong> draw a night landscape."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 3-4_U2_LP8_Say goodnight 2." },
                    { "text": "Handout, crayons, glue, star stickers." }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. “<i>Hello.</i>” Wave at students and encourage them to wave back to you as they repeat the greeting."
                                    },
                                    {
                                        "text": "Ask students <i>“What is your name?” </i> and encourage students to answer the question."
                                    },
                                    {
                                        "text": "Review names of Badanamu characters if necessary."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Teddy Bear, Teddy Bear, say goodnight”<br/><i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song of the story “Teddy Bear, teddy Bear, say goodnight”, pause at the words (<b>teddy bear, turn around, wiggle your nose, touch the ground, touch your toes, turn off light, say good light, say good night</b>) and review the actions:",
                                        "list": [
                                            {
                                                "text": "<b>Teddy Bear, Teddy Bear:</b> wink."
                                            },
                                            {
                                                "text": "<b>Turn around:</b> turn around."
                                            },
                                            {
                                                "text": "<b>Wiggle your nose:</b> touch the nose."
                                            },
                                            {
                                                "text": "<b>Touch the ground:</b> touch the ground."
                                            },
                                            {
                                                "text": "<b>Touch your toes:</b> touch the toes."
                                            },
                                            {
                                                "text": "<b>Turn off the light:</b> sit down."
                                            },
                                            {
                                                "text": "<b>Say good night:</b> stand up."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again. Have the students to make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Teddy Bear, Teddy Bear, say goodnight” storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson (<b>Teddy Bear, wiggle, nose, toes, light, turn around, I love you</b>)."
                                    },
                                    {
                                        "text": "Teacher plays the storybook “Teddy Bear, teddy Bear, say goodnight” and asks students to read the title of the story."
                                    },
                                    {
                                        "text": "Point to the pictures and asks students:",
                                        "list": [
                                            {
                                                "text": "Example:",
                                                "list": [
                                                    {
                                                        "text": "<i>Who does Bada play with? &#x02192; Bada plays with Teddy bear."
                                                    },
                                                    {
                                                        "text": "<i>What do Bada and Teddy bear do? &#x02192; Bada and Teddy bear turn around / touch the ground / wiggle the nose / etc."
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the storybook again, ask students to listen to the story, pause at the keywords and review it."
                                    },
                                    {
                                        "text": "Ask students to repeat the keywords: teddy bear, wiggle, nose, toes, light, turn around, I love you and correct their pronunciation."
                                    },
                                    {
                                        "text": "Instruct students to say the phrases (<b>touch the ground, wiggle your nose, touch you toes, I love you, turn off the light, say goodnight</b>)"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Say goodnight</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, touch to the images and listen to the keywords."
                                    },
                                    {
                                        "text": "Ask students to repeat the keywords and correct their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Say goodnight</strong>",
                                "list": [
                                    {
                                        "text": "Inivte students to come to the board and turn over 2 cards to find the pairs of the pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop – Teddy</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, drag the parts of the teddy bear to put the teddy together."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<strong>STEAM Activity: “A night landscape”</strong>"
                            },
                            {
                                "list": [
                                    { "text": "Work in individually." },
                                    {
                                        "text": "Teacher prepares the handout, crayon, stickers (star) and glue for students."
                                    },
                                    {
                                        "text": "Teacher instructs students how to make a Goodnight Moon and makes a model."
                                    },
                                    {
                                        "text": "How to do:",
                                        "list": [
                                            {
                                                "text": "Draw and color a circle into the window to make a Moon.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/window-1.png\">"
                                            },
                                            {
                                                "text": "Stick stickers (star) around the Moon to make the stars.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/window-2.png\">"
                                            },
                                            {
                                                "text": "Color the window with red and black.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/window-3.png\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again <strong>“Teddy Bear, Teddy Bear, say goodnight”</strong>"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say goodbye to their peers and to the teacher"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": { "title": "Sources" },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "https://www.shutterstock.com/image-vector/modern-new-clear-double-pvc-sash-1420401131"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

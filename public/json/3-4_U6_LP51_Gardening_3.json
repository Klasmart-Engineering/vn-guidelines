            "lesson_name": "LESSON 51: GARDENING 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn vocabulary: soil, seed, water, garden;"
                    },
                    {
                        "text": "Learn the structure: “Plants need ___ to grow”;"
                    },
                    {
                        "text": "Develop speaking and listening skills;"
                    },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development: </strong> know what the plants need to grow."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, sit down, raise thumb down, turn around, run on the spot."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 3-4_U6_LP51_Gardening 3."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students “<i>Hello, how are you?</i>”. Encourage them to repeat and ask the teacher, “<i>How are you?</i>”. Model the response, “<i>I’m good</i>” and give a thumb up."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Chant: Bada and Curly grow corn” <br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song."
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about growing corn”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“Chant: Bada and Curly grow corn”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the keywords (<b>soil, seed, water, garden</b>) and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Soil: </b> sit down."
                                            },
                                            {
                                                "text": "<b>Seed:</b> raise thumb down."
                                            },
                                            {
                                                "text": "<b>Water: </b> turn around."
                                            },
                                            {
                                                "text": "<b>Garden: </b> run on the spot."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along to the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Bada and Curly grow corn” Board book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(soil, seed, water, garden)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the Board book “<b>Bada and Curly grow corn</b>”, asks students to listen to the story. Teacher pauses at each page from page 4 to page 11. Teacher reads the story again and teaches the vocabulary (<b>soil, seed, water, garden</b>)."
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "At page 4: Point to the pictures and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What is this?  &#x02192; This is the soil.</i>"
                                                    },
                                                    {
                                                        "text": "<i>What do the plants need to grow?  &#x02192; The plants need soil / good soil to grow.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": " Have students to repeat the keyword: <b>soil.</b>"
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same in the next pages."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Ask students to repeat the story sentence by sentence."
                                    },
                                    {
                                        "text": "Teacher instructs students to practice speaking with the structure: <b>The plants need ___ to grow. ",
                                        "list": [
                                            {
                                                "text": "Example: <i>The plants need <u>water </u>to grow.</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher asks students some questions after reading the story.",
                                        "list": [
                                            {
                                                "text": "<i>What does a corn need to grow?  &#x02192; A corn needs water / soil to grow."
                                            },
                                            {
                                                "text": "<i>What do you need to grow?  &#x02192; I need food / water / etc. to grow."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<strong>Keywords - Gardening 2 (3-4)</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Image Slider - Gardening 2 (3-4)</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<strong>Memory game - Gardening 2 (3-4)</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching & Coloring - Soil, Seed, Water, Garden</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, match the stickers with the correct words and color the first letters of the words."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the letters - Water, Soil</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the words and choose the correct letters"
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose the correct answer - Water</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and the question, choose the correct answer."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Bada and Curly grown corn”</strong>"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

{
    "banner": "https://i.ibb.co/9p7wMjP/gl-03.jpg",
    "content": [
        {
            "lang": "en",
            "unit": "UNIT 3: MY SELF",
            "lesson_name": "LESSON 14: HEALTHY EATING 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn name of of food: healthy snack, apple, carrot, strawberry, banana."
                    },
                    {
                        "text": "Develop speaking and listening skills."
                    },
                    {
                        "text": "Develop the other skills:",
                        "list": [
                            {
                                "text": "<b>Cognitive development:</b> students can identify the healthy food."
                            },
                            {
                                "text": "<b>Gross motor skills:</b> movement following the song to clap your hand, run at one spot, touch your ears, thumb down, jump up, turn around."
                            },
                            {
                                "text": "<b>Fine motor skills:</b> play interactive games."
                            },
                            {
                                "text": "<b>Aesthetic development:</b> make an apple using paper plate and coloured paper."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 4-5_U3_LP14_Healthy eating 2."
                    },
                    {
                        "text": "Paper plate, glue, colored paper (red, green, brown)."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students <i>“Good morning / afternoon”</i>. Wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?” </i> Encourage students to reply back with <i>“I am ___ (good).”</i>"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Bada food patrol” Chant.<i><br/>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the <b>Chant: Bada food patrol</b>, pause at the words (<b>healthy snack, apple, carrot, candy, strawberry, banana, cookie</b>) and review the actions.",
                                        "list": [
                                            {
                                                "text": "<b>Healthy snack:</b> clap your hand."
                                            },
                                            {
                                                "text": "<b>Apple:</b> run at one spot."
                                            },
                                            {
                                                "text": "<b>Carrot:</b> touch your ears."
                                            },
                                            {
                                                "text": "<b>Candy:</b> thumb down."
                                            },
                                            {
                                                "text": "<b>Strawberry:</b> jump up."
                                            },
                                            {
                                                "text": "<b>Banana:</b> turn around."
                                            },
                                            {
                                                "text": "<b>Cookie:</b> thumb down."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song the third time. Have the students make the actions along the video."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Bada food patrol” Boardbook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson (<b>healthy snack, treat, apple, food, strawberry, carrot</b>)."
                                    },
                                    {
                                        "text": "Play the <b>Boardbook: Bada food patrol</b>, just look at the pictures and ask questions such as <i>“What is Mat eating?”, “What are some snacks do you see?”</i>."
                                    },
                                    {
                                        "text": "Teacher plays the book again, asks students to listen to the story, pauses at the keywords (<b>healthy snack, treat, apple, food, strawberry, carrot</b>) and asks students to repeat the words."
                                    },
                                    {
                                        "text": "Teacher instructs students to read each sentence of the story."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<b>Keywords - Healthy eating 1 </b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures and keywords to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<b>Flashcards - Healthy Eating 1</b>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, invites students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Green sticker - Healthy eating</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures, drag and drop the green sticker into the correct answer."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>STEAM activity: Making a paper plate apple</b>",
                                "list": [
                                    {
                                        "text": "Work in individually."
                                    },
                                    {
                                        "text": "Teacher prepares the paper plate, glue, colored paper (red, green, brown) for each student."
                                    },
                                    {
                                        "text": "Teacher instructs students how to make a paper plate apple."
                                    },
                                    {
                                        "text": "How to do:",
                                        "list": [
                                            {
                                                "text": "Tear red paper into smaller pieces."
                                            },
                                            {
                                                "text": "Glue the pieces of red paper onto the paper plate.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Apple-1-e1621483260122.png\">"
                                            },
                                            {
                                                "text": "Tear the brown paper to make stem, the green paper to make a leaf and glue to the back of the paper plate.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Apple-2-e1621483301145.png\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the Chant <strong>“Bada food patrol”</strong> again."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom."
                                    },
                                    {
                                        "text": "Say goodbye to students."
                                    },
                                    {
                                        "text": "Ask students to say goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "lang": "vi",
            "unit": "CHƯƠNG 3: BẢN THÂN BÉ",
            "lesson_name": "BÀI 14: ĂN UỐNG KHỎE MẠNH 2",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "4-5 tuổi"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 phút"
                }
            ],
            "learning": {
                "title": "Mục tiêu bài học",
                "subtitle": "Học sinh sẽ được:",
                "list": [
                    {
                        "text": "Học từ về tên thực phẩm: bữa ăn nhẹ tốt cho sức khỏe, quả táo, cà rốt, dâu tây, chuối."
                    },
                    {
                        "text": "Phát triển kĩ năng nghe và nói."
                    },
                    {
                        "text": "Phát triển các kĩ năng khác:",
                        "list": [
                            {
                                "text": "<b>Phát triển nhận thức: </b> học sinh có thể xác định được thực phẩm lành mạnh."
                            },
                            {
                                "text": "<b>Kĩ năng vận đông thô:</b> vận động theo nhạc, chạy tại chỗ, vỗ tay 1 cái, chạm vào tai, trỏ ngón tay cái xuống, nhảy lên, quay vòng tròn."
                            },
                            {
                                "text": "<b>Kĩ năng vận động tinh:</b> qua các trò chơi tương tác."
                            },
                            {
                                "text": "<b>Phát triển thẩm mỹ:</b> làm quả táo với đĩa giấy và giấy màu."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Dụng cụ - Học liệu",
                "list": [
                    {
                        "text": "Kidsloop CMS: 4-5_U3_LP14_Healthy eating 2"
                    },
                    {
                        "text": "Đĩa giấy, hồ dán, giấy màu (đỏ, xanh lá cây, nâu)"
                    }
                ]
            },
            "lessons": {
                "title": "Tiến trình bài học",
                "list": [
                    {
                        "left_content": {
                            "title": "Mở đầu",
                            "text": "<i>3 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Chào học sinh <i>“Chào buổi sáng / buổi chiều”</i>. Vẫy tay với học sinh và khuyến khích học sinh vẫy tay lại với giáo viên cũng như lặp lại lời chào."
                                    },
                                    {
                                        "text": "Trả lời với câu “<i>Các con có khỏe không?</i>”. Khuyến khích học sinh trả lời lại với “<i>Con ___ (tốt).</i>”"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hát",
                            "text": "“Bada food patrol” Chant.”.<br/><i><i>5 phút</i></i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Bắt đầu bài học bằng một bài hát."
                                    },
                                    {
                                        "text": "Phát bài <b>Chant: Bada food patrol</b>, dừng ở các từ (<b>bữa ăn nhẹ lành mạnh, quả táo, củ cà rốt, kẹo, quả dâu tây, quả chuối, bánh quy</b>) và ôn tập các động tác.",
                                        "list": [
                                            {
                                                "text": "<b>Healthy snack:</b> vỗ tay."
                                            },
                                            {
                                                "text": "<b>Apple:</b> chạy tại chỗ."
                                            },
                                            {
                                                "text": "<b>Carrot:</b> chạm vào tai."
                                            },
                                            {
                                                "text": "<b>Candy:</b> trỏ ngón tay cái xuống."
                                            },
                                            {
                                                "text": "<b>Strawberry:</b> nhảy lên."
                                            },
                                            {
                                                "text": "<b>Banana:</b> quay vòng tròn."
                                            },
                                            {
                                                "text": "<b>Cookie:</b> trỏ ngón tay cái xuống."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Giáo viên mở lại bài hát lần thứ 3. Để học sinh làm hành động theo bài hát."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Đọc sách ",
                            "text": "“Bada food patrol” Boardbook<br/><i>10 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Ôn tập từ vựng quan trọng của bài học (<b>bữa ăn tốt cho sức khỏe, món ăn ngọt, quả táo, đồ ăn, quả dâu tây, củ cà rốt</b>)."
                                    },
                                    {
                                        "text": "Giáo viên mở sách “<b>Boardbook: Bada food patrol</b>”, chỉ nhìn vào các bức tranh. Đặt câu hỏi như <i>“Mat đang ăn gì?”, “Các con thấy các đồ ăn nhẹ gì?”</i>"
                                    },
                                    {
                                        "text": "Giáo viên mở sách lại lần nữa, yêu cầu học sinh lắng nghe truyện, dừng ở các từ vựng (<b>bữa ăn tốt cho sức khỏe, món ăn ngọt, quả táo, đồ ăn, quả dâu tây, củ cà rốt</b>) và yêu cầu học sinh lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên hướng dẫn học sinh đọc từng câu của truyện."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Vui chơi",
                            "text": "<i>5 phút</i>"
                        },
                        "right_content": [
                            {
                                "title": "Củng cố từ vựng"
                            },
                            {
                                "text": "<b>Từ vựng – Ăn uống lành mạnh 1</b>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, bấm vào các bức tranh và từ vựng để lắng nghe và lặp lại từ vựng."
                                    },
                                    {
                                        "text": "Giáo viên sửa phát âm của học sinh."
                                    }
                                ]
                            },
                            {
                                "title": "Trò chơi tương tác"
                            },
                            {
                                "text": "<b>Thẻ hình - Ăn uống lành mạnh 1</b>",
                                "list": [
                                    {
                                        "text": "Giáo viên mở các thẻ hình, yêu cầu học sinh nhìn vào hình và đọc từ."
                                    },
                                    {
                                        "text": "Thu âm giọng đọc của học sinh và kiểm tra kết quả."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Hình dán màu xanh lá cây - Ăn uống lành mạnh</b>",
                                "list": [
                                    {
                                        "text": "Mời học sinh lên bảng, nhìn vào các bức tranh, kéo và thả hình dán màu xanh lá cây vào đáp án đúng."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Hoạt động",
                            "text": "<i>20 phút</i>"
                        },
                        "right_content": [
                            {
                                "text": "<b>Hoạt động Khoa học – Nghệ thuật: “Làm quả táo bằng đĩa giấy”</b>",
                                "list": [
                                    {
                                        "text": "Hoạt động cá nhân."
                                    },
                                    {
                                        "text": "Giáo viên chuẩn bị đĩa giấy, hồ dán, giấy màu (đỏ, xanh lá cây, nâu) cho từng học sinh."
                                    },
                                    {
                                        "text": "Giáo viên hướng dẫn cho học sinh cách làm quả táo bằng đĩa giấy."
                                    },
                                    {
                                        "text": "Cách làm:",
                                        "list": [
                                            {
                                                "text": "Xé giấy màu đỏ thành từng mảnh nhỏ."
                                            },
                                            {
                                                "text": "Dán những mẫu giấy màu đỏ lên đĩa giấy.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Apple-1-e1621483260122.png\">"
                                            },
                                            {
                                                "text": "Xé giấy màu nâu để làm thân, giấy màu xanh làm lá và dán váo mặt sau của đĩa giấy.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/05/Apple-2-e1621483301145.png\">"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Kết thúc",
                            "text": "<i>2 phút</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Mở lại bài hát <strong>“Bada food patrol”</strong>"
                                    },
                                    {
                                        "text": "Yêu cầu các học sinh dọn dẹp lớp học."
                                    },
                                    {
                                        "text": "Tạm biệt các học sinh."
                                    },
                                    {
                                        "text": "Yêu cầu học sinh nói cảm ơn, tạm biệt với các bạn trong lớp và giáo viên."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}

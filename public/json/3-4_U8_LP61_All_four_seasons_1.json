            "lesson_name": "LESSON 61: ALL FOUR SEASONS 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "3-4 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: winter, summer, fall, spring."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive Development: </strong> know about 4 seasons in a year."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, wink, clap one time, raise the left hand, raise the right hand."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> play interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    { "text": "Kidsloop CMS: 3-4_U8_LP61_All four seasons 1." }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students “<i>Hello</i>”. Wave at students and encourage them to wave back to you as they repeat the greeting."
                                    },
                                    {
                                        "text": "Introduce the topic by explaining to the students that they will be learning about four seasons."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“All four seasons” Video song <br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to a song."
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about the seasons”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“All four seasons”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the keywords (<b>winter, spring, summer, fall</b>) and have students stand up and practice the actions as below.",
                                        "list": [
                                            { "text": "<b>Winter: </b> wink." },
                                            {
                                                "text": "<b>Spring:</b> clap one time."
                                            },
                                            {
                                                "text": "<b>Summer: </b> raise the left hand."
                                            },
                                            {
                                                "text": "<b>Fall: </b> raise the right hand."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along to the song."
                                    },
                                    {
                                        "text": "Teacher instructs students to say sentence “Winter, spring, summer, fall”."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“The best season” storybook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(winter, spring, summer, fall)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the story book “<b>The best season </b>”, asks students to listen to the story. The teacher pauses at each page. The teacher reads the story again and teaches the keywords (winter, spring, summer, fall)."
                                    },
                                    {
                                        "text": "For example: ",
                                        "list": [
                                            {
                                                "text": "At page 2: Point to the pictures and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>Where are they?  &#x02192; They are at the beach.</i>"
                                                    },
                                                    {
                                                        "text": "<i>What season is this?  &#x02192; It is a summer.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": " Have students to repeat the keyword: <b>Summer.</b>"
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with the next pages."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher asks students questions to check their understanding.",
                                        "list": [
                                            {
                                                "text": "<i>How many seasons are there? &#x02192; There are 4 seasons."
                                            },
                                            {
                                                "text": "<i>What are they? &#x02192; They are spring, winter, summer, fall."
                                            },
                                            {
                                                "text": "<i>What is your favorite season? &#x02192; My favorite season is spring / winter / etc."
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keyword – All Four Seasons</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Card Slider - All Four Seasons</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures, listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game – Spring, Summer, Fall, Winter</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Dop - Winter, Spring, Summer, Fall</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the images and match the correct words with the images."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Four Seasons - Activities</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and place the activities to match the seasons."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Coloring – Seasons</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and color the picture."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“All four seasons”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

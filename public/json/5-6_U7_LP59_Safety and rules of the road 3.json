            "lesson_name": "LESSON 59: SAFETY AND RULES OF THE ROAD 3",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: sign, red light, look both ways, green light, crosswalk."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> know about safe and rules of the road."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong>movement following the song, put hands on the hips, shake the head to the left and right, sit down, stand up. "
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 5-6_U7_LP59_Safety and rules of the road 3"
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. <i>“Good morning/afternoon”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>, encourage students to reply back with <i>“I am ___ (good)”</i>. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Watch your step” Dance<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Teacher says: <i>“We will sing a song about the safety on the road”</i>."
                                    },
                                    {
                                        "text": "Play the song <b>“Watch your step”</b> and ask students to listen to the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the vocabulary <b>(watch your step, look both ways, red, green)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Watch your step: </b> put hands on the hips."
                                            },
                                            {
                                                "text": "<b>Look both ways: </b> shake the head to the left and right."
                                            },
                                            {
                                                "text": "<b>Red: </b> sit down."
                                            },
                                            {
                                                "text": "<b>Green: </b> stand up."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“This way, ducklings” Board book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Introduce the topic and keywords of the lesson <b>(sign, red light, look both ways, green light, crosswalk)</b>."
                                    },
                                    {
                                        "text": "Teacher plays the board book <b>“This way, ducklings”</b> and asks students to listen to the story. The teacher pauses at each page from page 6 to page 11 and reads the story again and teaches the keywords <b>(sign, red light, look both ways, green light, crosswalk)</b>."
                                    },
                                    {
                                        "text": "Example: ",
                                        "list": [
                                            {
                                                "text": "At page 6: Point to the picture and ask",
                                                "list": [
                                                    {
                                                        "text": "<i>What is it? &#x02192; It is the crosswalk.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "At page 7: Point to the picture and ask",
                                                "list": [
                                                    {
                                                        "text": "<i> What is color of the traffic light? &#x02192; It is the red light / green light</i>."
                                                    },
                                                    {
                                                        "text": "<i>What do we do before crossing the street? &#x02192; We look both ways.</i>"
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keyword: <b>crosswalk, red light, green light, look both ways</b>."
                                            },
                                            {
                                                "text": "Ask students to repeat the keywords several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with the next pages."
                                            },
                                            {
                                                "text": "Ask students to repeat each sentence of the story."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Teacher teaches and emphasizes students <b>“Look both ways before crossing the street”</b>."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Course Presentation - Safety & Rules of the Road 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and click on the pictures to listen and repeat the words."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Flashcards - Safety & Rules of the Road 2</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Safety & Rules of the Road 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of pictures."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag & Drop - Safety & Rules of the Road 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the keywords, choose the images and match them with the keywords."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching words - Safety and rules of the road 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to board, ask students to match the correct words with the images."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Choose matching words - Safety and rules of the road 2</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures and choose the correct answers."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song again  <strong>“Watch your step”</strong>."
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    { "text": "Say goodbye to students" },
                                    {
                                        "text": "Ask students to say thank you and goodbye to their peers and to the teacher."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

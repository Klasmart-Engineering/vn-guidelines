    "content": [
        {
            "lang": "en",
            "unit": "UNIT 3: MY SELF",
            "lesson_name": "LESSON 16: HEALTHY HABITS 4",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "learn vocabulary of personal hygiene: wash your hands, dry your hands, eat soup, rest."
                    },
                    {
                        "text": "develop speaking and listening skills"
                    },
                    {
                        "text": "develop other skills",
                        "list": [
                            {
                                "text": "<b>Cognitive Development:</b> physical development - nutrition and health."
                            },
                            {
                                "text": "<b>Gross motor skills:</b> movement following the song to touch the head, pretend sneezing, pretend grabbing a tissue."
                            },
                            {
                                "text": "<b>Fine motor skills:</b> play interactive games"
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 5-6_U3_LP16_Healthy habits 4."
                    },
                    {
                        "text": "1 bottles of gel hand sanitizer, towels or tissue."
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. “<i>Good morning/afternoon.</i>” Wave at students and encourage them to wave back to the teacher as they repeat the greeting"
                                    },
                                    {
                                        "text": "Reply with “<i>How are you today?</i>” Encourage students to reply back with “<i>I am ___ (good).</i>"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“Three sick Kittens” Dance.<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song. "
                                    },
                                    {
                                        "text": "Play the song (dance): <b>“Three sick Kittens”</b>"
                                    },
                                    {
                                        "text": "Review the actions and encourage students to follow:",
                                        "list": [
                                            {
                                                "text": "<b>Sick:</b> touch your forehead."
                                            },
                                            {
                                                "text": "<b>Sneeze:</b> pretend sneezing"
                                            },
                                            {
                                                "text": "<b>Grab a tissue:</b> pretend grabbing a tissue."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play a song again, pause the song and focus on the keywords and ask students to repeat the keywords in several times."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“Three sick Kittens” boardbook<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Review the keywords of the lesson (<b>wash your hands, dry your hands, eat soup, rest</b>)."
                                    },
                                    {
                                        "text": "Activate prior knowledge by asking your students what the story “Three Sick Kittens” by asking some questions:",
                                        "list": [
                                            {
                                                "text": "<i>What sickness did the kittens have?</i>"
                                            },
                                            {
                                                "text": "<i>What food did Bada give them?</i>"
                                            },
                                            {
                                                "text": "<i>What should the kittens do after eating?</i>"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Before reading, go through the book and have your students point out the keywords in the story and repeat the keywords."
                                    },
                                    {
                                        "text": "Play the boardbook and read it to students. Teacher stops at the keywords and asks students to repeat words"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>5 mins</i>"
                        },
                        "right_content": [
                            {
                                "title": "Reinforce vocabulary"
                            },
                            {
                                "text": "<b>Keywords - Healthy habits 2</b>",
                                "list": [
                                    {
                                        "text": "Invite student to come to the board, click on the pictures and asks students to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Flashcards - Healthy habits 3</b>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards and asks students to repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "title": "Interactive games"
                            },
                            {
                                "text": "<b>Find the correct words - wash hands</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and choose the correct word."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Find the correct words - dry hands</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and choose the correct word."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Find the correct words - eat soup </b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and choose the correct word."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Find the correct words – Rest</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the picture and choose the correct word."
                                    }
                                ]
                            },
                            {
                                "text": "<b>Choose the correct words - Healthy habits</b>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures, listen to the words and choose the correct words."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Do",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            {
                                "text": "Activity: <b>“Washing hands”</b>",
                                "list": [
                                    {
                                        "text": "Teacher instructs students how to wash their hands."
                                    }
                                ]
                            },
                            {
                                "text": "<u>How to do</u>",
                                "list": [
                                    {
                                        "text": "Teacher instructs students how to wash their hands step by step and makes a model.",
                                        "list": [
                                            {
                                                "text": "Apply enough hand sanitizer.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/04/Washing-hand-1.png\"width=\"150\" height=\"150\">"
                                            },
                                            {
                                                "text": "Rub your hands palm to palm in circular motions. Rotate clockwise and anticlockwise.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/04/Washing-hand-2.png\"width=\"150\" height=\"150\">"
                                            },
                                            {
                                                "text": "With your fingers linked through the other hand, use your right palm to rub the back of your left hand. Then swap.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/04/Washing-hand-3.png\"width=\"150\" height=\"150\">"
                                            },
                                            {
                                                "text": "Link your fingers together, facing each other, into clasped hands. Then rub your palms and fingers together.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/04/Washing-hand-4.png\"width=\"150\" height=\"150\">"
                                            },
                                            {
                                                "text": "Enclose your right hand around your left thumb and rub as you rotate it, then swap.<img src=\"https://kidsloop.vn/wp-content/uploads/2021/04/Washing-hand-5.png\"width=\"150\" height=\"150\">"
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Invite a student practice washing hand and dry hands with the towel if needed."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Play the song <strong>“Three sick Kittens”</strong> again"
                                    },
                                    {
                                        "text": "Tell students to tidy up the classroom"
                                    },
                                    {
                                        "text": "Say goodbye to students"
                                    },
                                    {
                                        "text": "Ask students to say goodbye to their peers and to the teacher"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sources"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "https://www.highspeedtraining.co.uk/hub/7-steps-of-hand-washing-poster"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }

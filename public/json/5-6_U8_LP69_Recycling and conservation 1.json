    "content": [
        {
            "lang": "en",
            "unit": "UNIT 8: WEATHER, SEASONS & ENVIRONMENT",
            "lesson_name": "LESSON 69: RECYCLING AND CONSERVATION 1",
            "description": [
                {
                    "icon": "https://i.ibb.co/bJRnPxF/gl-child-solid.png",
                    "text": "5-6 years old"
                },
                {
                    "icon": "https://i.ibb.co/k0pRHVq/gl-history-solid.png",
                    "text": "45 minutes"
                }
            ],
            "learning": {
                "title": "Learning objectives",
                "subtitle": "Students will be able to:",
                "list": [
                    {
                        "text": "Learn some vocabulary: glass, bottle, can, trash."
                    },
                    { "text": "Develop speaking and listening skills." },
                    {
                        "text": "Develop the other skills: ",
                        "list": [
                            {
                                "text": "<strong>Cognitive development: </strong> learn different ways of recycling materials."
                            },
                            {
                                "text": "<strong>Gross motor skills: </strong> movement following the song, shake the body, clap the hands, jump up, sit down."
                            },
                            {
                                "text": "<strong>Fine motor skills:</strong> interactive games."
                            }
                        ]
                    }
                ]
            },
            "materials": {
                "title": "Materials",
                "list": [
                    {
                        "text": "Kidsloop CMS: 5-6_U8_LP69_Recycling and conservation 1"
                    }
                ]
            },
            "lessons": {
                "title": "Lesson Flow",
                "list": [
                    {
                        "left_content": {
                            "title": "Opening",
                            "text": "<i>3 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Greet students. <i>“Good morning/afternoon”</i>, wave at students and encourage them to wave back to the teacher as they repeat the greeting."
                                    },
                                    {
                                        "text": "Reply with <i>“How are you today?”</i>, encourage students to reply back with <i>“I am ___ (good)”</i>. "
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Sing",
                            "text": "“A clean world” Chant<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Start the lesson by listening to the song"
                                    },
                                    {
                                        "text": "Play the song <b>“A clean world”</b> and ask students to listen the song."
                                    },
                                    {
                                        "text": "Play the song the second time, pause at the vocabulary <b>(glass, bottle, can, trash)</b> and have students stand up and practice the actions as below.",
                                        "list": [
                                            {
                                                "text": "<b>Trash: </b> shake the body."
                                            },
                                            {
                                                "text": "<b>Can: </b> clap the hands."
                                            },
                                            {
                                                "text": "<b>Glass: </b> jump up."
                                            },
                                            {
                                                "text": "<b>Bottle: </b> sit down."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Play the song again and have the students make the actions along the song."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Read",
                            "text": "“A clean world” Board book<br/><i>10 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Have students read the title of the story <b>“A clean world”</b>."
                                    },
                                    {
                                        "text": "Teacher plays the board book <b>“A clean world”</b> from page 2 to page 6 and asks students to listen to the story. The teacher pauses at each page, reads the story again and teaches the keywords <b>(glass, bottle, can, trash)<b>."
                                    },
                                    {
                                        "text": "Example:  ",
                                        "list": [
                                            {
                                                "text": "At page 3: Point to the picture and ask:",
                                                "list": [
                                                    {
                                                        "text": "<i>What do they find? &#x02192; They find a trash bin.</i>"
                                                    },
                                                    {
                                                        "text": "<i>Can they find the trash bin? &#x02192; No, they can’t</i>."
                                                    }
                                                ]
                                            },
                                            {
                                                "text": "Have students repeat the keywords: <b>trash</b>."
                                            },
                                            {
                                                "text": "Ask students to repeat the keyword several times in chorus and individually and correct their pronunciation."
                                            },
                                            {
                                                "text": "Do the same with the pages 4, 5 and 6."
                                            }
                                        ]
                                    },
                                    {
                                        "text": "Ask students to repeat each sentence of the story."
                                    },
                                    {
                                        "text": "Teacher plays the storybook again, asks students to listen and say aloud the keywords when they hear the keywords."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Play",
                            "text": "<i>20 mins</i>"
                        },
                        "right_content": [
                            { "title": "Reinforce vocabulary" },
                            {
                                "text": "<strong>Keywords - Recycling and Conservation 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, click on the pictures to listen and repeat the keywords."
                                    },
                                    {
                                        "text": "Teacher corrects their pronunciation."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Flashcards - Recycling and Conservation 1</strong>",
                                "list": [
                                    {
                                        "text": "Teacher plays the flashcards, asks students to look at the pictures and say the words."
                                    },
                                    {
                                        "text": "Record their voice and check the answers."
                                    }
                                ]
                            },
                            { "title": "Interactive games" },
                            {
                                "text": "<strong>Memory game - Recycling and Conservation 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and turn over 2 cards to find the pairs of the picture."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Find the words - Recycling and Conservation 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board and draw the lines to find the words."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Matching - Recycling and Conservation 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board, look at the pictures, choose the correct words and match it with the images."
                                    }
                                ]
                            },
                            {
                                "text": "<strong>Drag the words - Recycling and conservation 1</strong>",
                                "list": [
                                    {
                                        "text": "Invite students to come to the board."
                                    },
                                    {
                                        "text": "Teacher helps students to read the sentences and asks students to drag the words into the correct boxes."
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "left_content": {
                            "title": "Closing",
                            "text": "<i>2 mins</i>"
                        },
                        "right_content": [
                            {
                                "list": [
                                    {
                                        "text": "Sing along to the <b>“A clean world”</b> song as you have students clean up and put everything back in the correct place."
                                    },
                                    {
                                        "text": "Wave goodbye and say <i>“Goodbye”</i> to students. Encourage them to wave back to you as they also say, <i>“Goodbye.”</i>"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
